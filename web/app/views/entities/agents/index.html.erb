<% content_for :title, "Agents" %>

<main class="max-w-5xl mx-auto px-4 py-6 space-y-6">
  <header class="flex items-start justify-between gap-6 border-b border-border pb-4">
    <div class="min-w-0">
      <h1 class="text-2xl font-semibold truncate">Agents</h1>
      <p class="mt-1 text-sm text-muted-foreground">Agent directory (from <code>pcms.agents</code>).</p>
    </div>

    <nav class="shrink-0 flex items-center gap-4">
      <a href="/players" class="text-sm text-muted-foreground hover:text-foreground hover:underline">Players</a>
      <a href="/teams" class="text-sm text-muted-foreground hover:text-foreground hover:underline">Teams</a>
      <a href="/tools/salary-book" class="text-sm text-muted-foreground hover:text-foreground hover:underline">Salary Book</a>
    </nav>
  </header>

  <section class="space-y-3">
    <form action="/agents" method="get" class="flex items-center gap-2">
      <input
        type="text"
        name="q"
        value="<%= @query %>"
        placeholder="Search agents (name or agency)…"
        class="w-full px-3 py-2 rounded-md border border-border bg-background text-sm outline-none focus:ring-2 focus:ring-primary/20"
        autocomplete="off"
      />
      <button
        type="submit"
        class="cursor-pointer px-3 py-2 rounded-md bg-primary text-primary-foreground text-sm font-medium"
      >Search</button>
    </form>

    <% if @query.blank? %>
      <p class="text-sm text-muted-foreground">
        Showing a small sample. Search to narrow.
      </p>
    <% end %>
  </section>

  <section class="space-y-3">
    <h2 class="text-xs font-medium uppercase tracking-wide text-muted-foreground">Results</h2>

    <% if @agents.empty? %>
      <div class="p-4 rounded-lg bg-muted/30 border border-border/50 text-sm text-muted-foreground italic">No agents found.</div>
    <% else %>
      <div class="overflow-x-auto rounded-lg border border-border">
        <table class="min-w-full text-sm">
          <thead class="bg-muted/50 text-xs text-muted-foreground">
            <tr>
              <th class="text-left px-3 py-2 font-medium">Agent</th>
              <th class="text-left px-3 py-2 font-medium">Agency</th>
              <th class="text-right px-3 py-2 font-medium">agent_id</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <% @agents.each do |a| %>
              <tr class="hover:bg-muted/30">
                <td class="px-3 py-2">
                  <a href="/agents/<%= a['agent_id'] %>" class="font-medium hover:underline"><%= a["full_name"] %></a>
                  <% if a["is_active"] == false %>
                    <span class="ml-2 text-xs px-1.5 py-0.5 rounded bg-muted text-muted-foreground">inactive</span>
                  <% end %>
                </td>
                <td class="px-3 py-2">
                  <% if a["agency_id"].present? && a["agency_name"].present? %>
                    <a href="/agencies/<%= a['agency_id'] %>" class="hover:underline"><%= a["agency_name"] %></a>
                  <% elsif a["agency_name"].present? %>
                    <span><%= a["agency_name"] %></span>
                  <% else %>
                    <span class="text-muted-foreground">—</span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-right font-mono tabular-nums text-muted-foreground"><%= a["agent_id"] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <p class="text-xs text-muted-foreground">
        Agent links use the numeric fallback (<code>/agents/:id</code>) which creates/promotes a canonical slug on demand.
      </p>
    <% end %>
  </section>
</main>
