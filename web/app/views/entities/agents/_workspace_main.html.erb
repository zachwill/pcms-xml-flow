<% directory_kind = @directory_kind.to_s == "agencies" ? "agencies" : "agents" %>
<% year_label = format_year_label(@book_year).split("-").first %>
<%
  shared_lens_query = {
    q: @query,
    active_only: (@active_only ? 1 : 0),
    certified_only: (@certified_only ? 1 : 0),
    with_clients: (@with_clients ? 1 : 0),
    with_book: (@with_book ? 1 : 0),
    with_restrictions: (@with_restrictions ? 1 : 0),
    with_expiring: (@with_expiring ? 1 : 0),
    year: @book_year,
    sort: @sort_key,
    dir: @sort_dir
  }

  agents_lens_href = "/agents?#{shared_lens_query.merge(kind: 'agents').to_query}"
  agencies_lens_href = "/agents?#{shared_lens_query.merge(kind: 'agencies').to_query}"
%>

<% if directory_kind == "agents" %>
  <% prefetch_canonical_slugs(entity_type: "agent", entity_ids: @agents.map { |a| a["agent_id"] }) %>
  <% prefetch_canonical_slugs(entity_type: "agency", entity_ids: @agents.map { |a| a["agency_id"] }) %>
<% else %>
  <% prefetch_canonical_slugs(entity_type: "agency", entity_ids: @agencies.map { |a| a["agency_id"] }) %>
<% end %>

<div id="agents-maincanvas" class="px-4 py-4 space-y-4">
  <div class="flex items-start justify-between gap-4">
    <div class="space-y-1">
      <div class="text-[10px] uppercase tracking-wide text-muted-foreground/80">Agents Workspace</div>
      <h2 class="text-sm font-semibold text-foreground">
        <%= directory_kind == "agents" ? "Agent directory" : "Agency directory" %>
        <span class="text-muted-foreground font-medium">· <%= directory_kind == "agents" ? @agents.size : @agencies.size %> rows</span>
      </h2>

      <% if @query.present? %>
        <div class="text-[10px] uppercase tracking-wide text-muted-foreground/80">
          Search: <span class="font-medium text-foreground"><%= @query %></span>
        </div>
      <% end %>

      <div class="flex flex-wrap items-center gap-1.5 text-[10px] uppercase tracking-wide">
        <a
          href="<%= agents_lens_href %>"
          class="rounded border px-1.5 py-0.5 transition-colors <%= directory_kind == 'agents' ? 'border-primary bg-primary/10 text-primary font-semibold' : 'border-border text-muted-foreground hover:text-foreground hover:border-foreground/20' %>"
        >Agents lens</a>
        <a
          href="<%= agencies_lens_href %>"
          class="rounded border px-1.5 py-0.5 transition-colors <%= directory_kind == 'agencies' ? 'border-primary bg-primary/10 text-primary font-semibold' : 'border-border text-muted-foreground hover:text-foreground hover:border-foreground/20' %>"
        >Agencies lens</a>
      </div>
    </div>

    <div class="text-[11px] text-muted-foreground tabular-nums text-right">
      <span>Book lens: <%= year_label %></span>
      <% if @sort_key.present? %>
        <span class="mx-1">·</span>
        <span>Sort: <%= @sort_key.humanize %> <%= @sort_dir.to_s.upcase %></span>
      <% end %>
    </div>
  </div>

  <% if directory_kind == "agents" %>
    <% if @agents.empty? %>
      <div class="p-6 rounded-lg border border-border bg-muted/20 text-sm text-muted-foreground italic">
        No agents match these filters.
      </div>
    <% else %>
      <div class="rounded-lg border border-border overflow-x-auto">
        <div class="min-w-[66rem]">
          <div class="sticky top-0 z-10 bg-muted/70 backdrop-blur-sm border-b border-border">
            <div class="flex items-center px-3 h-8 text-[10px] uppercase tracking-wide text-muted-foreground/90 font-medium">
              <div class="w-72 shrink-0">Agent</div>
              <div class="w-52 shrink-0">Agency</div>
              <div class="w-20 shrink-0 text-right font-mono tabular-nums">Clients</div>
              <div class="w-16 shrink-0 text-right font-mono tabular-nums">Teams</div>
              <div class="w-24 shrink-0 text-right font-mono tabular-nums">Book '<%= year_label %></div>
              <div class="w-16 shrink-0 text-right font-mono tabular-nums">Max</div>
              <div class="w-20 shrink-0 text-right font-mono tabular-nums">Expiring</div>
              <div class="w-20 shrink-0 text-right font-mono tabular-nums">Restr</div>
              <div class="w-20 shrink-0 text-right font-mono tabular-nums">Options</div>
            </div>
          </div>

          <div class="divide-y divide-border/50">
            <% @agents.each do |a| %>
              <%
                client_count = a["client_count"].to_i
                standard_count = a["standard_count"].to_i
                two_way_count = a["two_way_count"].to_i
                restrictions_count = a["no_trade_count"].to_i + a["trade_kicker_count"].to_i + a["trade_restricted_count"].to_i
                options_count = a["player_option_count"].to_i + a["team_option_count"].to_i
                row_agent_id = a["agent_id"]
                row_agency_id = a["agency_id"]
                agency_overlay_match_expr = row_agency_id.present? ? "$overlaytype === 'agency' && $overlayid === '#{row_agency_id}'" : "false"
              %>

              <div
                class="group cursor-pointer transition-colors duration-75 hover:bg-yellow-50/70 dark:hover:bg-yellow-900/10"
                role="button"
                tabindex="0"
                data-class="{ 'bg-yellow-100/80 dark:bg-yellow-900/20': $overlaytype === 'agent' && $overlayid === '<%= row_agent_id %>', 'bg-violet-50/50 dark:bg-violet-900/15': <%= agency_overlay_match_expr %> }"
                data-on:click="$overlaytype = 'agent'; $overlayid = '<%= row_agent_id %>'; @get('/agents/sidebar/agent/<%= row_agent_id %>')"
                data-on:keydown="if (evt.key === 'Enter' || evt.key === ' ') { evt.preventDefault(); $overlaytype = 'agent'; $overlayid = '<%= row_agent_id %>'; @get('/agents/sidebar/agent/<%= row_agent_id %>') }"
              >
                <div class="flex items-center px-3 min-h-[48px] text-xs">
                  <div class="w-72 shrink-0">
                    <div class="grid grid-cols-[30px_1fr] grid-rows-[24px_16px]">
                      <div class="row-span-2 flex items-center justify-start">
                        <div class="w-7 h-7 rounded border border-border bg-muted/40 flex items-center justify-center text-[10px] font-semibold uppercase text-muted-foreground"><%= a["full_name"].to_s.first(2) %></div>
                      </div>
                      <div class="h-[24px] flex items-end min-w-0 pl-2">
                        <a href="<%= agent_href(row_agent_id) %>" class="truncate font-medium text-[14px] group-hover:text-primary transition-colors hover:underline" onclick="event.stopPropagation()"><%= a["full_name"] %></a>
                      </div>
                      <div class="h-[16px] -mt-px flex items-start gap-1.5 min-w-0 pl-2 leading-none text-[10px] text-muted-foreground/80 tabular-nums overflow-hidden">
                        <span>id: <%= row_agent_id %></span>
                        <% if a["is_active"] == false %>
                          <span class="entity-chip entity-chip--muted">inactive</span>
                        <% end %>
                        <% if a["is_certified"] %>
                          <span class="entity-chip entity-chip--accent">certified</span>
                        <% end %>
                      </div>
                    </div>
                  </div>

                  <div class="w-52 shrink-0 pr-2">
                    <% if row_agency_id.present? && a["agency_name"].present? %>
                      <div class="entity-cell-two-line">
                        <div class="entity-cell-primary justify-start min-w-0">
                          <button
                            type="button"
                            class="cursor-pointer min-w-0 truncate text-left text-muted-foreground hover:text-foreground hover:underline"
                            data-on:click="evt.stopPropagation(); $overlaytype = 'agency'; $overlayid = '<%= row_agency_id %>'; @get('/agents/sidebar/agency/<%= row_agency_id %>')"
                          ><%= a["agency_name"] %></button>
                        </div>
                        <div class="entity-cell-secondary justify-start gap-1.5">
                          <span
                            class="uppercase tracking-wide text-violet-700 dark:text-violet-300"
                            data-show="<%= agency_overlay_match_expr %>"
                            style="display: none;"
                          >overlay</span>
                          <a href="<%= agency_href(row_agency_id) %>" class="uppercase tracking-wide text-muted-foreground/70 hover:text-foreground hover:underline" onclick="event.stopPropagation()">Page</a>
                        </div>
                      </div>
                    <% elsif a["agency_name"].present? %>
                      <span class="text-muted-foreground"><%= a["agency_name"] %></span>
                    <% else %>
                      <span class="text-muted-foreground">—</span>
                    <% end %>
                  </div>

                  <div class="w-20 shrink-0">
                    <% if client_count > 0 %>
                      <div class="entity-cell-two-line">
                        <div class="entity-cell-primary justify-end font-mono tabular-nums">
                          <span class="font-medium"><%= standard_count %></span><% if two_way_count > 0 %><span class="text-muted-foreground/70 ml-1">+<%= two_way_count %></span><% end %>
                        </div>
                        <div class="entity-cell-secondary justify-end font-mono tabular-nums">
                          <% if representation_percentile_int(a["client_count_percentile"]).present? %>
                            <span class="<%= representation_percentile_color_class(a['client_count_percentile']) %>">P<%= representation_percentile_int(a["client_count_percentile"]) %></span>
                          <% else %>
                            <span class="text-muted-foreground/40">—</span>
                          <% end %>
                        </div>
                      </div>
                    <% else %>
                      <div class="text-right font-mono tabular-nums text-muted-foreground">—</div>
                    <% end %>
                  </div>

                  <div class="w-16 shrink-0">
                    <% if a["team_count"].to_i > 0 %>
                      <div class="entity-cell-two-line">
                        <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= a["team_count"] %></div>
                        <div class="entity-cell-secondary justify-end font-mono tabular-nums">
                          <% if representation_percentile_int(a["team_count_percentile"]).present? %>
                            <span class="<%= representation_percentile_color_class(a['team_count_percentile']) %>">P<%= representation_percentile_int(a["team_count_percentile"]) %></span>
                          <% else %>
                            <span class="text-muted-foreground/40">—</span>
                          <% end %>
                        </div>
                      </div>
                    <% else %>
                      <div class="text-right font-mono tabular-nums text-muted-foreground">—</div>
                    <% end %>
                  </div>

                  <div class="w-24 shrink-0">
                    <% if a["book_total"].to_i > 0 %>
                      <div class="entity-cell-two-line">
                        <div class="entity-cell-primary justify-end font-mono tabular-nums font-medium"><%= format_salary(a["book_total"]) %></div>
                        <div class="entity-cell-secondary justify-end font-mono tabular-nums">
                          <% if representation_percentile_int(a["book_total_percentile"]).present? %>
                            <span class="<%= representation_percentile_color_class(a['book_total_percentile']) %>">P<%= representation_percentile_int(a["book_total_percentile"]) %></span>
                          <% else %>
                            <span class="text-muted-foreground/40">—</span>
                          <% end %>
                        </div>
                      </div>
                    <% else %>
                      <div class="text-right font-mono tabular-nums text-muted-foreground">—</div>
                    <% end %>
                  </div>

                  <div class="w-16 shrink-0">
                    <% if a["max_contract_count"].to_i > 0 %>
                      <div class="entity-cell-two-line">
                        <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= a["max_contract_count"] %></div>
                        <div class="entity-cell-secondary justify-end font-mono tabular-nums">
                          <% if representation_percentile_int(a["max_contract_count_percentile"]).present? %>
                            <span class="<%= representation_percentile_color_class(a['max_contract_count_percentile']) %>">P<%= representation_percentile_int(a["max_contract_count_percentile"]) %></span>
                          <% else %>
                            <span class="text-muted-foreground/40">—</span>
                          <% end %>
                        </div>
                      </div>
                    <% else %>
                      <div class="text-right font-mono tabular-nums text-muted-foreground">—</div>
                    <% end %>
                  </div>

                  <div class="w-20 shrink-0 text-right font-mono tabular-nums"><%= a["expiring_in_window"].to_i > 0 ? a["expiring_in_window"] : content_tag(:span, "—", class: "text-muted-foreground") %></div>
                  <div class="w-20 shrink-0 text-right font-mono tabular-nums"><%= restrictions_count > 0 ? restrictions_count : content_tag(:span, "—", class: "text-muted-foreground") %></div>
                  <div class="w-20 shrink-0 text-right font-mono tabular-nums"><%= options_count > 0 ? options_count : content_tag(:span, "—", class: "text-muted-foreground") %></div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <% if @agencies.empty? %>
      <div class="p-6 rounded-lg border border-border bg-muted/20 text-sm text-muted-foreground italic">
        No agencies match these filters.
      </div>
    <% else %>
      <div class="rounded-lg border border-border overflow-x-auto">
        <div class="min-w-[68rem]">
          <div class="sticky top-0 z-10 bg-muted/70 backdrop-blur-sm border-b border-border">
            <div class="flex items-center px-3 h-8 text-[10px] uppercase tracking-wide text-muted-foreground/90 font-medium">
              <div class="w-72 shrink-0">Agency</div>
              <div class="w-52 shrink-0">Posture</div>
              <div class="w-20 shrink-0 text-right font-mono tabular-nums">Agents</div>
              <div class="w-20 shrink-0 text-right font-mono tabular-nums">Clients</div>
              <div class="w-16 shrink-0 text-right font-mono tabular-nums">Teams</div>
              <div class="w-24 shrink-0 text-right font-mono tabular-nums">Book '<%= year_label %></div>
              <div class="w-16 shrink-0 text-right font-mono tabular-nums">Max</div>
              <div class="w-20 shrink-0 text-right font-mono tabular-nums">Expiring</div>
              <div class="w-20 shrink-0 text-right font-mono tabular-nums">Restr</div>
              <div class="w-20 shrink-0 text-right font-mono tabular-nums">Options</div>
            </div>
          </div>

          <div class="divide-y divide-border/50">
            <% @agencies.each do |a| %>
              <%
                options_count = a["player_option_count"].to_i + a["team_option_count"].to_i
                restrictions_count = a["no_trade_count"].to_i + a["trade_kicker_count"].to_i + a["trade_restricted_count"].to_i
                row_agency_id = a["agency_id"]
                live_book = a["book_total"].to_i.positive?
                inactive_with_live_book = a["is_active"] == false && live_book
              %>

              <div
                class="group cursor-pointer transition-colors duration-75 hover:bg-yellow-50/70 dark:hover:bg-yellow-900/10"
                role="button"
                tabindex="0"
                data-class="{ 'bg-yellow-100/80 dark:bg-yellow-900/20': $overlaytype === 'agency' && $overlayid === '<%= row_agency_id %>' }"
                data-on:click="$overlaytype = 'agency'; $overlayid = '<%= row_agency_id %>'; @get('/agents/sidebar/agency/<%= row_agency_id %>')"
                data-on:keydown="if (evt.key === 'Enter' || evt.key === ' ') { evt.preventDefault(); $overlaytype = 'agency'; $overlayid = '<%= row_agency_id %>'; @get('/agents/sidebar/agency/<%= row_agency_id %>') }"
              >
                <div class="flex items-center px-3 min-h-[48px] text-xs">
                  <div class="w-72 shrink-0">
                    <div class="grid grid-cols-[30px_1fr] grid-rows-[24px_16px]">
                      <div class="row-span-2 flex items-center justify-start">
                        <div class="w-7 h-7 rounded border border-border bg-muted/40 flex items-center justify-center text-[10px] font-semibold uppercase text-muted-foreground"><%= a["agency_name"].to_s.first(2) %></div>
                      </div>
                      <div class="h-[24px] flex items-end min-w-0 pl-2">
                        <a href="<%= agency_href(row_agency_id) %>" class="truncate font-medium text-[14px] group-hover:text-primary transition-colors hover:underline" onclick="event.stopPropagation()"><%= a["agency_name"] %></a>
                      </div>
                      <div class="h-[16px] -mt-px flex items-start gap-1.5 min-w-0 pl-2 leading-none text-[10px] text-muted-foreground/80 tabular-nums overflow-hidden">
                        <span>id: <%= row_agency_id %></span>
                        <% if a["is_active"] == false %>
                          <span class="entity-chip entity-chip--muted">inactive</span>
                        <% end %>
                      </div>
                    </div>
                  </div>

                  <div class="w-52 shrink-0 pr-2">
                    <div class="entity-cell-two-line">
                      <div class="entity-cell-primary justify-start gap-1 flex-wrap">
                        <% if inactive_with_live_book %>
                          <span class="entity-chip entity-chip--danger">inactive + live</span>
                        <% elsif a["is_active"] == false %>
                          <span class="entity-chip entity-chip--muted">inactive</span>
                        <% else %>
                          <span class="entity-chip entity-chip--success">active</span>
                        <% end %>

                        <% if live_book %>
                          <span class="entity-chip entity-chip--accent">live <%= format_compact_currency(a["book_total"]) %></span>
                        <% end %>
                      </div>
                      <div class="entity-cell-secondary justify-start gap-1">
                        <% if restrictions_count > 0 %>
                          <span class="entity-chip entity-chip--warning"><%= restrictions_count %> restrictions</span>
                        <% else %>
                          <span class="text-muted-foreground/50">—</span>
                        <% end %>
                      </div>
                    </div>
                  </div>

                  <div class="w-20 shrink-0">
                    <% if a["agent_count"].to_i > 0 %>
                      <div class="entity-cell-two-line">
                        <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= a["agent_count"] %></div>
                        <div class="entity-cell-secondary justify-end font-mono tabular-nums">
                          <% if representation_percentile_int(a["agent_count_percentile"]).present? %>
                            <span class="<%= representation_percentile_color_class(a['agent_count_percentile']) %>">P<%= representation_percentile_int(a["agent_count_percentile"]) %></span>
                          <% else %>
                            <span class="text-muted-foreground/40">—</span>
                          <% end %>
                        </div>
                      </div>
                    <% else %>
                      <div class="text-right font-mono tabular-nums text-muted-foreground">—</div>
                    <% end %>
                  </div>

                  <div class="w-20 shrink-0">
                    <% if a["client_count"].to_i > 0 %>
                      <div class="entity-cell-two-line">
                        <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= a["client_count"] %></div>
                        <div class="entity-cell-secondary justify-end font-mono tabular-nums">
                          <% if representation_percentile_int(a["client_count_percentile"]).present? %>
                            <span class="<%= representation_percentile_color_class(a['client_count_percentile']) %>">P<%= representation_percentile_int(a["client_count_percentile"]) %></span>
                          <% else %>
                            <span class="text-muted-foreground/40">—</span>
                          <% end %>
                        </div>
                      </div>
                    <% else %>
                      <div class="text-right font-mono tabular-nums text-muted-foreground">—</div>
                    <% end %>
                  </div>

                  <div class="w-16 shrink-0 text-right font-mono tabular-nums"><%= a["team_count"].to_i > 0 ? a["team_count"] : content_tag(:span, "—", class: "text-muted-foreground") %></div>

                  <div class="w-24 shrink-0">
                    <% if a["book_total"].to_i > 0 %>
                      <div class="entity-cell-two-line">
                        <div class="entity-cell-primary justify-end font-mono tabular-nums font-medium"><%= format_salary(a["book_total"]) %></div>
                        <div class="entity-cell-secondary justify-end font-mono tabular-nums">
                          <% if representation_percentile_int(a["book_total_percentile"]).present? %>
                            <span class="<%= representation_percentile_color_class(a['book_total_percentile']) %>">P<%= representation_percentile_int(a["book_total_percentile"]) %></span>
                          <% else %>
                            <span class="text-muted-foreground/40">—</span>
                          <% end %>
                        </div>
                      </div>
                    <% else %>
                      <div class="text-right font-mono tabular-nums text-muted-foreground">—</div>
                    <% end %>
                  </div>

                  <div class="w-16 shrink-0">
                    <% if a["max_contract_count"].to_i > 0 %>
                      <div class="entity-cell-two-line">
                        <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= a["max_contract_count"] %></div>
                        <div class="entity-cell-secondary justify-end font-mono tabular-nums">
                          <% if representation_percentile_int(a["max_contract_count_percentile"]).present? %>
                            <span class="<%= representation_percentile_color_class(a['max_contract_count_percentile']) %>">P<%= representation_percentile_int(a["max_contract_count_percentile"]) %></span>
                          <% else %>
                            <span class="text-muted-foreground/40">—</span>
                          <% end %>
                        </div>
                      </div>
                    <% else %>
                      <div class="text-right font-mono tabular-nums text-muted-foreground">—</div>
                    <% end %>
                  </div>

                  <div class="w-20 shrink-0 text-right font-mono tabular-nums"><%= a["expiring_in_window"].to_i > 0 ? a["expiring_in_window"] : content_tag(:span, "—", class: "text-muted-foreground") %></div>
                  <div class="w-20 shrink-0 text-right font-mono tabular-nums"><%= restrictions_count > 0 ? restrictions_count : content_tag(:span, "—", class: "text-muted-foreground") %></div>
                  <div class="w-20 shrink-0 text-right font-mono tabular-nums"><%= options_count > 0 ? options_count : content_tag(:span, "—", class: "text-muted-foreground") %></div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
