<% content_for :title, "Team Summary" %>

<%
  current_filter_params = {
    "year" => @selected_year,
    "conference" => @conference,
    "pressure" => @pressure,
    "sort" => @sort
  }
  sort_toggle_params = current_filter_params.slice("year", "conference", "pressure")
  year_options = @available_years.presence || [@selected_year]
  season_first_column = year_options.first(4)
  season_second_column = year_options.drop(4)
  pressure_options = [["all", "All teams"], ["over_tax", "Over Tax"], ["over_apron1", "Over Apron 1"], ["over_apron2", "Over Apron 2"]]

  sort_metric = if @sort.start_with?("tax_overage")
    "tax_overage"
  elsif @sort == "team_asc"
    "team"
  else
    "cap_space"
  end

  sort_ascending = @sort.end_with?("_asc") && @sort != "team_asc"
  conference_east_checked = @conference != "Western"
  conference_west_checked = @conference != "Eastern"

  next_cap_space_sort = (@sort == "cap_space_desc") ? "cap_space_asc" : "cap_space_desc"
  next_tax_overage_sort = (@sort == "tax_overage_desc") ? "tax_overage_asc" : "tax_overage_desc"
%>

<div class="min-h-screen bg-background">
  <header id="commandbar" class="sticky top-0 z-40 border-b border-border bg-background h-[130px] px-4 pt-3 flex items-start gap-4">
    <form method="get" action="<%= tools_team_summary_path %>" class="flex items-start gap-3 min-w-0 flex-1" role="group" aria-label="Team Summary controls">
      <div class="min-w-[9rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Sort</div>
        <select name="sort_metric" class="h-7 w-full rounded border border-border bg-muted/50 px-2 text-xs" onchange="this.form.requestSubmit()">
          <option value="cap_space" <%= "selected" if sort_metric == "cap_space" %>>Cap Space</option>
          <option value="tax_overage" <%= "selected" if sort_metric == "tax_overage" %>>Tax Overage</option>
          <option value="team" <%= "selected" if sort_metric == "team" %>>Team (A→Z)</option>
        </select>

        <input type="hidden" name="sort_asc" value="0" />
        <label class="flex items-center gap-1.5 cursor-pointer select-none <%= 'opacity-50 cursor-not-allowed' if sort_metric == 'team' %>">
          <input
            type="checkbox"
            name="sort_asc"
            value="1"
            class="size-3.5 accent-primary"
            <%= "checked" if sort_ascending %>
            <%= "disabled" if sort_metric == "team" %>
            onchange="this.form.requestSubmit()"
          />
          <span class="text-[11px] leading-none text-foreground/80">Ascending</span>
        </label>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0 mx-1"></div>

      <div class="shrink-0 w-fit space-y-1" role="radiogroup" aria-label="Season">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Season</div>
        <div class="flex items-start gap-6">
          <div class="space-y-1">
            <% season_first_column.each do |candidate_year| %>
              <label class="flex items-center gap-1.5 cursor-pointer select-none">
                <input
                  type="radio"
                  name="year"
                  value="<%= candidate_year %>"
                  class="size-3.5 accent-primary"
                  <%= "checked" if candidate_year == @selected_year %>
                  onchange="this.form.requestSubmit()"
                />
                <span class="text-[11px] leading-none text-foreground/80 tabular-nums"><%= format_year_label(candidate_year) %></span>
              </label>
            <% end %>
          </div>

          <div class="space-y-1">
            <% season_second_column.each do |candidate_year| %>
              <label class="flex items-center gap-1.5 cursor-pointer select-none">
                <input
                  type="radio"
                  name="year"
                  value="<%= candidate_year %>"
                  class="size-3.5 accent-primary"
                  <%= "checked" if candidate_year == @selected_year %>
                  onchange="this.form.requestSubmit()"
                />
                <span class="text-[11px] leading-none text-foreground/80 tabular-nums"><%= format_year_label(candidate_year) %></span>
              </label>
            <% end %>
          </div>
        </div>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0 mx-1"></div>

      <div class="flex items-start gap-1">
        <div class="w-[7.25rem] space-y-1" role="radiogroup" aria-label="Pressure">
          <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Pressure</div>
          <div class="space-y-1">
            <% pressure_options.each do |value, label| %>
              <label class="flex items-center gap-1.5 cursor-pointer select-none">
                <input
                  type="radio"
                  name="pressure"
                  value="<%= value %>"
                  class="size-3.5 accent-primary"
                  <%= "checked" if @pressure == value %>
                  onchange="this.form.requestSubmit()"
                />
                <span class="text-[11px] leading-none text-foreground/80"><%= label %></span>
              </label>
            <% end %>
          </div>
        </div>

        <div class="w-[6rem] space-y-1">
          <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Conference</div>
          <div class="space-y-1">
            <input type="hidden" name="conference_east" value="0" />
            <label class="flex items-center gap-1.5 cursor-pointer select-none">
              <input
                type="checkbox"
                name="conference_east"
                value="1"
                class="size-3.5 accent-primary"
                <%= "checked" if conference_east_checked %>
                onchange="this.form.requestSubmit()"
              />
              <span class="text-[11px] leading-none text-foreground/80">East</span>
            </label>

            <input type="hidden" name="conference_west" value="0" />
            <label class="flex items-center gap-1.5 cursor-pointer select-none">
              <input
                type="checkbox"
                name="conference_west"
                value="1"
                class="size-3.5 accent-primary"
                <%= "checked" if conference_west_checked %>
                onchange="this.form.requestSubmit()"
              />
              <span class="text-[11px] leading-none text-foreground/80">West</span>
            </label>
          </div>
          <div class="text-[10px] leading-none text-muted-foreground/70 tabular-nums"><%= @rows.length %> teams in view</div>
        </div>
      </div>
    </form>

    <div class="h-20 w-px bg-border self-center ml-auto mr-1 shrink-0"></div>
    <%= render partial: "shared/commandbar_navigation", locals: { active_destination: "team_summary" } %>
  </header>

  <main class="pb-8">
    <% if @boot_error %>
      <div class="p-4">
        <div class="p-4 rounded-lg border border-border bg-muted/20">
          <div class="text-sm font-medium text-destructive">Warehouse query failed</div>
          <pre class="mt-2 text-xs text-muted-foreground overflow-x-auto"><%= @boot_error %></pre>
        </div>
      </div>
    <% elsif @rows.empty? %>
      <div class="p-4">
        <div class="p-3 rounded-lg bg-muted/30 border border-border/50 text-sm text-muted-foreground italic">No teams match the current filters.</div>
      </div>
    <% else %>
      <%# Sticky column header — chunky style matching Salary Book / Two-Way Utility %>
      <div
        class="sticky top-[130px] z-30 bg-background will-change-transform
               shadow-[0_1px_3px_0_rgb(0_0_0/0.08),0_1px_2px_-1px_rgb(0_0_0/0.08)]"
      >
        <div class="h-10 flex items-center border-b border-border bg-muted
                    text-[10px] uppercase tracking-wide font-medium text-muted-foreground/90 select-none cursor-default">
          <div
            class="w-52 shrink-0 pl-4 sticky left-0 z-[2] bg-muted relative
                   after:absolute after:right-0 after:top-0 after:bottom-0 after:w-px after:bg-border/60"
          >
            Team / Context
          </div>
          <div class="w-24 shrink-0 text-right pr-3">Cap Total</div>
          <div class="w-24 shrink-0 text-right pr-3">
            <a class="hover:underline" href="<%= tools_team_summary_path(sort_toggle_params.merge("sort" => next_cap_space_sort)) %>">Cap Space</a>
          </div>
          <div class="w-24 shrink-0 text-right pr-3">Tax Total</div>
          <div class="w-24 shrink-0 text-right pr-3">Tax Level</div>
          <div class="w-24 shrink-0 text-right pr-3">
            <a class="hover:underline" href="<%= tools_team_summary_path(sort_toggle_params.merge("sort" => next_tax_overage_sort)) %>">Tax Overage</a>
          </div>
          <div class="w-24 shrink-0 text-right pr-3">Room Tax</div>
          <div class="w-24 shrink-0 text-right pr-3">Room A1</div>
          <div class="w-24 shrink-0 text-right pr-3">Room A2</div>
          <div class="w-36 shrink-0 pl-3">Flags</div>
          <div class="w-24 shrink-0 text-right pr-3">Luxury Tax</div>
          <div class="w-16 shrink-0 text-right pr-3">Roster</div>
          <div class="w-16 shrink-0 text-right pr-3">2W</div>
        </div>
      </div>

      <%# Team rows %>
      <div class="divide-y divide-border">
        <% @rows.each do |row| %>
          <% logo_url = team_logo_url(row["team_id"]) %>
          <% conference_name = row["conference_name"].presence || "—" %>
          <% cap_space = row["cap_space"].to_f %>
          <% tax_overage = row["tax_overage"].to_f %>
          <% room_tax = row["room_under_tax"]&.to_f %>
          <% room_a1 = row["room_under_apron1"]&.to_f %>
          <% room_a2 = row["room_under_apron2"]&.to_f %>
          <% cap_total = row["cap_total"].to_f %>
          <% tax_total = row["tax_total"].to_f %>
          <% salary_cap_amount = row["salary_cap_amount"].to_f %>
          <% tax_level_amount = row["tax_level_amount"].to_f %>
          <% luxury_tax_owed = row["luxury_tax_owed"].to_f %>
          <% cap_pct_of_cap = salary_cap_amount > 0 ? "#{((cap_total / salary_cap_amount) * 100).round}% cap" : "—" %>
          <% tax_pct_of_line = tax_level_amount > 0 ? "#{((tax_total / tax_level_amount) * 100).round}% line" : "—" %>

          <div id="team-summary-row-<%= row['team_code'].to_s.downcase %>" class="group flex items-stretch scroll-mt-[176px] hover:bg-yellow-50/70 dark:hover:bg-yellow-900/10 transition-colors duration-75 text-xs">
            <%# Sticky left: Team / Context %>
            <div
              class="w-52 shrink-0 px-3 py-1.5 sticky left-0 z-20 bg-background relative transition-colors duration-75
                     group-hover:bg-yellow-50/70 dark:group-hover:bg-yellow-900/10
                     after:absolute after:right-0 after:top-0 after:bottom-0 after:w-px after:bg-border/50"
            >
              <div class="grid grid-cols-[34px_1fr] grid-rows-[20px_14px] min-h-[34px]">
                <div class="row-span-2 flex items-center">
                  <div class="w-7 h-7 rounded border border-border bg-background overflow-hidden flex items-center justify-center">
                    <% if logo_url.present? %>
                      <img
                        src="<%= logo_url %>"
                        alt="<%= row['team_name'] %> logo"
                        class="w-full h-full object-contain"
                        loading="lazy"
                        decoding="async"
                        onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                      />
                      <span class="hidden text-[9px] font-semibold text-muted-foreground"><%= row["team_code"] %></span>
                    <% else %>
                      <span class="text-[9px] font-semibold text-muted-foreground"><%= row["team_code"] %></span>
                    <% end %>
                  </div>
                </div>

                <div class="h-[20px] flex items-end gap-1 min-w-0 pl-2 pr-2">
                  <a href="<%= team_href(team_code: row['team_code'], team_id: row['team_id']) %>" class="truncate font-medium text-[13px] hover:underline"><%= row["team_name"] %></a>
                </div>

                <div class="h-[14px] -mt-px flex items-start gap-1.5 min-w-0 pl-2 pr-2 text-[10px] text-muted-foreground/80 tabular-nums leading-none">
                  <span class="font-medium"><%= row["team_code"] %></span>
                  <span>•</span>
                  <span class="truncate"><%= conference_name %> Conference</span>
                </div>
              </div>
            </div>

            <div class="w-24 shrink-0 px-3 py-1.5">
              <div class="entity-cell-two-line">
                <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= format_compact_currency(row["cap_total"]) %></div>
                <div class="entity-cell-secondary justify-end font-mono tabular-nums"><%= cap_pct_of_cap %></div>
              </div>
            </div>

            <div class="w-24 shrink-0 px-3 py-1.5">
              <div class="entity-cell-two-line">
                <div class="entity-cell-primary justify-end font-mono tabular-nums <%= cap_space >= 0 ? 'text-emerald-600 dark:text-emerald-400' : 'text-red-500' %>"><%= format_room_amount(cap_space) %></div>
                <div class="entity-cell-secondary justify-end font-mono tabular-nums"><%= cap_space >= 0 ? 'under cap' : 'over cap' %></div>
              </div>
            </div>

            <div class="w-24 shrink-0 px-3 py-1.5">
              <div class="entity-cell-two-line">
                <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= format_compact_currency(row["tax_total"]) %></div>
                <div class="entity-cell-secondary justify-end font-mono tabular-nums"><%= tax_pct_of_line %></div>
              </div>
            </div>

            <div class="w-24 shrink-0 px-3 py-1.5">
              <div class="entity-cell-two-line">
                <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= format_compact_currency(row["tax_level_amount"]) %></div>
                <div class="entity-cell-secondary justify-end font-mono tabular-nums">threshold</div>
              </div>
            </div>

            <div class="w-24 shrink-0 px-3 py-1.5">
              <div class="entity-cell-two-line">
                <div class="entity-cell-primary justify-end font-mono tabular-nums <%= tax_overage > 0 ? 'text-red-500' : 'text-muted-foreground' %>"><%= tax_overage > 0 ? format_compact_currency(tax_overage) : "—" %></div>
                <div class="entity-cell-secondary justify-end font-mono tabular-nums"><%= tax_overage > 0 ? 'over line' : 'under line' %></div>
              </div>
            </div>

            <div class="w-24 shrink-0 px-3 py-1.5">
              <div class="entity-cell-two-line">
                <div class="entity-cell-primary justify-end font-mono tabular-nums <%= room_tax && room_tax < 0 ? 'text-red-500' : '' %>"><%= room_tax.nil? ? "—" : format_room_amount(room_tax) %></div>
                <div class="entity-cell-secondary justify-end font-mono tabular-nums"><%= room_tax.nil? ? '—' : (room_tax < 0 ? 'over tax' : 'under tax') %></div>
              </div>
            </div>

            <div class="w-24 shrink-0 px-3 py-1.5">
              <div class="entity-cell-two-line">
                <div class="entity-cell-primary justify-end font-mono tabular-nums <%= room_a1 && room_a1 < 0 ? 'text-red-500' : '' %>"><%= room_a1.nil? ? "—" : format_room_amount(room_a1) %></div>
                <div class="entity-cell-secondary justify-end font-mono tabular-nums"><%= room_a1.nil? ? '—' : (room_a1 < 0 ? 'over A1' : 'under A1') %></div>
              </div>
            </div>

            <div class="w-24 shrink-0 px-3 py-1.5">
              <div class="entity-cell-two-line">
                <div class="entity-cell-primary justify-end font-mono tabular-nums <%= room_a2 && room_a2 < 0 ? 'text-red-500' : '' %>"><%= room_a2.nil? ? "—" : format_room_amount(room_a2) %></div>
                <div class="entity-cell-secondary justify-end font-mono tabular-nums"><%= room_a2.nil? ? '—' : (room_a2 < 0 ? 'over A2' : 'under A2') %></div>
              </div>
            </div>

            <div class="w-36 shrink-0 px-3 py-1.5">
              <div class="entity-cell-two-line">
                <div class="entity-cell-primary items-center">
                  <div class="flex flex-wrap gap-1">
                    <% if row["is_taxpayer"] %>
                      <span class="entity-chip entity-chip--danger">Taxpayer</span>
                    <% end %>
                    <% if row["is_repeater_taxpayer"] %>
                      <span class="entity-chip entity-chip--warning">Repeater</span>
                    <% end %>
                    <% if row["is_subject_to_apron"] %>
                      <span class="entity-chip entity-chip--accent"><%= row["apron_level_lk"].presence || "Apron" %></span>
                    <% end %>
                    <% unless row["is_taxpayer"] || row["is_repeater_taxpayer"] || row["is_subject_to_apron"] %>
                      <span class="text-[10px] text-muted-foreground/60">—</span>
                    <% end %>
                  </div>
                </div>
                <div class="entity-cell-secondary">
                  <span class="truncate"><%= row["is_subject_to_apron"] ? (row["apron_level_lk"].presence || "Apron") : "No apron status" %></span>
                </div>
              </div>
            </div>

            <div class="w-24 shrink-0 px-3 py-1.5">
              <div class="entity-cell-two-line">
                <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= luxury_tax_owed > 0 ? format_compact_currency(luxury_tax_owed) : "—" %></div>
                <div class="entity-cell-secondary justify-end font-mono tabular-nums"><%= luxury_tax_owed > 0 ? 'owed' : 'no tax' %></div>
              </div>
            </div>

            <div class="w-16 shrink-0 px-3 py-1.5">
              <div class="entity-cell-two-line">
                <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= row["roster_row_count"] %></div>
                <div class="entity-cell-secondary justify-end font-mono tabular-nums">standard</div>
              </div>
            </div>

            <div class="w-16 shrink-0 px-3 py-1.5">
              <div class="entity-cell-two-line">
                <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= row["two_way_row_count"] %></div>
                <div class="entity-cell-secondary justify-end font-mono tabular-nums">two-way</div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </main>
</div>
