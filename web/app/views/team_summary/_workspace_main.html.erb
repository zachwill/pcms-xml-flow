<%
  sticky_team_column_px = 208
  metric_column_px = 96
  flags_column_px = 144
  mini_metric_column_px = 64
  team_summary_table_min_width_px = sticky_team_column_px + (metric_column_px * 9) + flags_column_px + (mini_metric_column_px * 2)

  sidebar_state_query = [
    "year=#{ERB::Util.url_encode(@selected_year.to_s)}",
    "conference=#{ERB::Util.url_encode(@conference.to_s)}",
    "pressure=#{ERB::Util.url_encode(@pressure.to_s)}",
    "sort=#{ERB::Util.url_encode(@sort.to_s)}"
  ].join("&")

  header_sort_state_query_expr = "'year=' + encodeURIComponent($tsyear) +
    '&conference=' + encodeURIComponent(($tsconferenceeast && $tsconferencewest) ? 'all' : ($tsconferenceeast ? 'Eastern' : ($tsconferencewest ? 'Western' : 'all'))) +
    '&pressure=' + encodeURIComponent($tspressure) +
    '&sort=' + encodeURIComponent(($tssortmetric === 'team' ? 'team_asc' : ($tssortmetric === 'tax_overage' ? ($tssortasc ? 'tax_overage_asc' : 'tax_overage_desc') : ($tssortasc ? 'cap_space_asc' : 'cap_space_desc')))) +
    '&selected=' + encodeURIComponent($selectedteam || '') +
    '&compare_a=' + encodeURIComponent($comparea || '') +
    '&compare_b=' + encodeURIComponent($compareb || '')"

  cap_sort_refresh_expr = "if ($tssortmetric === 'cap_space') { $tssortasc = !$tssortasc; } else { $tssortmetric = 'cap_space'; $tssortasc = false; } @get('#{team_summary_sse_refresh_path}?' + (#{header_sort_state_query_expr}))"
  tax_sort_refresh_expr = "if ($tssortmetric === 'tax_overage') { $tssortasc = !$tssortasc; } else { $tssortmetric = 'tax_overage'; $tssortasc = false; } @get('#{team_summary_sse_refresh_path}?' + (#{header_sort_state_query_expr}))"
%>

<%= render partial: "team_summary/compare_strip" %>

<% if @boot_error %>
  <div class="p-4">
    <div class="p-4 rounded-lg border border-border bg-muted/20">
      <div class="text-sm font-medium text-destructive">Warehouse query failed</div>
      <pre class="mt-2 text-xs text-muted-foreground overflow-x-auto"><%= @boot_error %></pre>
    </div>
  </div>
<% elsif @rows.empty? %>
  <div class="p-4">
    <div class="p-3 rounded-lg bg-muted/30 border border-border/50 text-sm text-muted-foreground italic">No teams match the current filters.</div>
  </div>
<% else %>
  <div class="relative" data-team-summary-table>
    <div
      class="sticky top-0 z-30 bg-background will-change-transform
             shadow-[0_1px_3px_0_rgb(0_0_0/0.08),0_1px_2px_-1px_rgb(0_0_0/0.08)]"
    >
      <div
        data-team-summary-table-header-scroll
        class="overflow-x-auto overscroll-x-contain [scrollbar-width:none] [-ms-overflow-style:none] [&::-webkit-scrollbar]:hidden"
      >
        <div class="min-w-max" style="min-width: <%= team_summary_table_min_width_px %>px;">
          <div class="h-10 flex items-center border-b border-border bg-muted
                      text-[10px] uppercase tracking-wide font-medium text-muted-foreground/90 select-none cursor-default">
            <div
              class="w-52 shrink-0 pl-4 sticky left-0 z-[2] bg-muted relative
                     after:absolute after:right-0 after:top-0 after:bottom-0 after:w-px after:bg-border/60"
            >
              Team / Context
            </div>
            <div class="w-24 shrink-0 text-right pr-3">Cap Total</div>
            <div class="w-24 shrink-0 text-right pr-3">
              <button
                type="button"
                class="cursor-pointer inline-flex items-center gap-1 hover:underline transition-colors"
                data-class="{ 'text-foreground': $tssortmetric === 'cap_space', 'text-muted-foreground/90': $tssortmetric !== 'cap_space' }"
                data-on:click="<%= cap_sort_refresh_expr %>"
              >
                <span>Cap Space</span>
                <span class="leading-none" data-show="$tssortmetric === 'cap_space' && !$tssortasc" style="display: none;">↓</span>
                <span class="leading-none" data-show="$tssortmetric === 'cap_space' && $tssortasc" style="display: none;">↑</span>
              </button>
            </div>
            <div class="w-24 shrink-0 text-right pr-3">Tax Total</div>
            <div class="w-24 shrink-0 text-right pr-3">Tax Level</div>
            <div class="w-24 shrink-0 text-right pr-3">
              <button
                type="button"
                class="cursor-pointer inline-flex items-center gap-1 hover:underline transition-colors"
                data-class="{ 'text-foreground': $tssortmetric === 'tax_overage', 'text-muted-foreground/90': $tssortmetric !== 'tax_overage' }"
                data-on:click="<%= tax_sort_refresh_expr %>"
              >
                <span>Tax Overage</span>
                <span class="leading-none" data-show="$tssortmetric === 'tax_overage' && !$tssortasc" style="display: none;">↓</span>
                <span class="leading-none" data-show="$tssortmetric === 'tax_overage' && $tssortasc" style="display: none;">↑</span>
              </button>
            </div>
            <div class="w-24 shrink-0 text-right pr-3">Room Tax</div>
            <div class="w-24 shrink-0 text-right pr-3">Room A1</div>
            <div class="w-24 shrink-0 text-right pr-3">Room A2</div>
            <div class="w-36 shrink-0 pl-3">Flags</div>
            <div class="w-24 shrink-0 text-right pr-3">Luxury Tax</div>
            <div class="w-16 shrink-0 text-right pr-3">Roster</div>
            <div class="w-16 shrink-0 text-right pr-3">2W</div>
          </div>
        </div>
      </div>
    </div>

    <div
      data-team-summary-sticky-shadow
      class="absolute top-0 bottom-0 pointer-events-none z-[25] transition-opacity duration-150 opacity-0"
      style="left: <%= sticky_team_column_px %>px; width: 6px; background: linear-gradient(to right, rgba(0, 0, 0, 0.06), transparent);"
      aria-hidden="true"
    ></div>

    <div
      data-team-summary-table-body-scroll
      class="overflow-x-auto overscroll-x-contain [scrollbar-width:none] [-ms-overflow-style:none] [&::-webkit-scrollbar]:hidden"
    >
      <div class="min-w-max" style="min-width: <%= team_summary_table_min_width_px %>px;">
        <div class="[&>*:first-child]:mt-1">
          <% @rows.each do |row| %>
            <% logo_url = team_logo_url(row["team_id"]) %>
            <% conference_name = row["conference_name"].presence || "—" %>
            <% cap_space = row["cap_space"].to_f %>
            <% tax_overage = row["tax_overage"].to_f %>
            <% room_tax = row["room_under_tax"]&.to_f %>
            <% room_a1 = row["room_under_apron1"]&.to_f %>
            <% room_a2 = row["room_under_apron2"]&.to_f %>
            <% cap_total = row["cap_total"].to_f %>
            <% tax_total = row["tax_total"].to_f %>
            <% salary_cap_amount = row["salary_cap_amount"].to_f %>
            <% tax_level_amount = row["tax_level_amount"].to_f %>
            <% luxury_tax_owed = row["luxury_tax_owed"].to_f %>
            <% cap_pct_of_cap = salary_cap_amount > 0 ? "#{((cap_total / salary_cap_amount) * 100).round}% cap" : "—" %>
            <% tax_pct_of_line = tax_level_amount > 0 ? "#{((tax_total / tax_level_amount) * 100).round}% line" : "—" %>

            <% flag_chips = [] %>
            <% flag_chips << { label: "Taxpayer", klass: "entity-chip entity-chip--danger" } if row["is_taxpayer"] %>
            <% flag_chips << { label: "Repeater", klass: "entity-chip entity-chip--warning" } if row["is_repeater_taxpayer"] %>
            <% if row["is_subject_to_apron"] %>
              <% flag_chips << { label: (row["apron_level_lk"].presence || "Apron"), klass: "entity-chip entity-chip--accent" } %>
            <% end %>
            <% visible_flag_chips = flag_chips.first(2) %>
            <% hidden_flag_count = [flag_chips.length - visible_flag_chips.length, 0].max %>
            <% flag_summary = flag_chips.present? ? flag_chips.map { |chip| chip[:label] }.join(" • ") : "No flags" %>

            <% team_code = row["team_code"].to_s.upcase %>
            <% sidebar_path = team_summary_sidebar_path(team_code: team_code) %>

            <div
              id="team-summary-row-<%= team_code.downcase %>"
              class="group h-10 border-b border-border/40 flex items-center scroll-mt-[176px] hover:bg-yellow-50/70 dark:hover:bg-yellow-900/10 transition-colors duration-75 text-xs cursor-pointer"
              role="button"
              tabindex="0"
              data-class="{ 'bg-yellow-100/80 dark:bg-yellow-900/20': $selectedteam === '<%= team_code %>', 'ring-1 ring-inset ring-indigo-500/50': $comparea === '<%= team_code %>' || $compareb === '<%= team_code %>' }"
              data-on:click="$selectedteam = '<%= team_code %>'; @get('<%= sidebar_path %>?<%= sidebar_state_query %>&selected=<%= team_code %>&compare_a=' + encodeURIComponent($comparea || '') + '&compare_b=' + encodeURIComponent($compareb || ''))"
              data-on:keydown="if ((evt.key === 'Enter' || evt.key === ' ') && !(evt.target && evt.target.closest('a,button,input,select,textarea'))) { evt.preventDefault(); $selectedteam = '<%= team_code %>'; @get('<%= sidebar_path %>?<%= sidebar_state_query %>&selected=<%= team_code %>&compare_a=' + encodeURIComponent($comparea || '') + '&compare_b=' + encodeURIComponent($compareb || '')); }"
            >
              <div
                class="w-52 shrink-0 pl-4 sticky left-0 z-20 relative bg-background transition-colors duration-75
                       group-hover:bg-yellow-50 dark:group-hover:bg-yellow-900
                       after:absolute after:right-0 after:top-0 after:bottom-0 after:w-px after:bg-border/50"
                data-class="{ 'bg-yellow-100 dark:bg-yellow-900': $selectedteam === '<%= team_code %>' }"
              >
                <div class="grid grid-cols-[40px_1fr] grid-rows-[24px_16px]" aria-label="<%= row['team_name'] %> team info">
                  <div class="row-span-2 flex items-center justify-start">
                    <div class="w-7 h-7 rounded border border-border bg-background overflow-hidden flex items-center justify-center">
                      <% if logo_url.present? %>
                        <img
                          src="<%= logo_url %>"
                          alt="<%= row['team_name'] %> logo"
                          class="w-full h-full object-contain"
                          loading="lazy"
                          decoding="async"
                          onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                        />
                        <span class="hidden text-[9px] font-semibold text-muted-foreground"><%= team_code %></span>
                      <% else %>
                        <span class="text-[9px] font-semibold text-muted-foreground"><%= team_code %></span>
                      <% end %>
                    </div>
                  </div>

                  <div class="h-[24px] flex items-end min-w-0 pl-1 pr-2">
                    <a
                      href="<%= team_href(team_code: team_code, team_id: row['team_id']) %>"
                      class="block truncate font-medium text-[14px] transition-colors group-hover:text-primary hover:underline"
                      data-on:click="evt.stopPropagation()"
                    ><%= row["team_name"] %></a>
                  </div>

                  <div class="h-[16px] -mt-px flex items-start min-w-0 pl-1 pr-2 leading-none text-[10px] text-muted-foreground/80">
                    <div class="min-w-0 flex items-start gap-1 overflow-hidden">
                      <span class="font-medium"><%= team_code %></span>
                      <span>•</span>
                      <span class="truncate"><%= conference_name %></span>
                      <span class="inline-flex items-center rounded border border-indigo-500/40 bg-indigo-500/10 px-1 text-[9px] font-semibold text-indigo-700 dark:text-indigo-300" data-show="$comparea === '<%= team_code %>'" style="display: none;">A</span>
                      <span class="inline-flex items-center rounded border border-emerald-500/40 bg-emerald-500/10 px-1 text-[9px] font-semibold text-emerald-700 dark:text-emerald-300" data-show="$compareb === '<%= team_code %>'" style="display: none;">B</span>
                    </div>

                  </div>
                </div>
              </div>

              <div class="w-24 shrink-0 h-10 px-3 flex items-center">
                <div class="entity-cell-two-line w-full">
                  <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= format_compact_currency(row["cap_total"]) %></div>
                  <div class="entity-cell-secondary justify-end tabular-nums"><%= cap_pct_of_cap %></div>
                </div>
              </div>

              <div class="w-24 shrink-0 h-10 px-3 flex items-center">
                <div class="entity-cell-two-line w-full">
                  <div class="entity-cell-primary justify-end font-mono tabular-nums <%= cap_space >= 0 ? 'text-emerald-600 dark:text-emerald-400' : 'text-red-600 dark:text-red-400' %>"><%= format_room_amount(cap_space) %></div>
                  <div class="entity-cell-secondary justify-end tabular-nums"><%= cap_space >= 0 ? 'under cap' : 'over cap' %></div>
                </div>
              </div>

              <div class="w-24 shrink-0 h-10 px-3 flex items-center">
                <div class="entity-cell-two-line w-full">
                  <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= format_compact_currency(row["tax_total"]) %></div>
                  <div class="entity-cell-secondary justify-end tabular-nums"><%= tax_pct_of_line %></div>
                </div>
              </div>

              <div class="w-24 shrink-0 h-10 px-3 flex items-center">
                <div class="entity-cell-two-line w-full">
                  <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= format_compact_currency(row["tax_level_amount"]) %></div>
                  <div class="entity-cell-secondary justify-end tabular-nums">threshold</div>
                </div>
              </div>

              <div class="w-24 shrink-0 h-10 px-3 flex items-center">
                <div class="entity-cell-two-line w-full">
                  <div class="entity-cell-primary justify-end font-mono tabular-nums <%= tax_overage > 0 ? 'text-red-600 dark:text-red-400' : 'text-muted-foreground' %>"><%= tax_overage > 0 ? format_compact_currency(tax_overage) : '—' %></div>
                  <div class="entity-cell-secondary justify-end tabular-nums"><%= tax_overage > 0 ? 'over line' : 'under line' %></div>
                </div>
              </div>

              <div class="w-24 shrink-0 h-10 px-3 flex items-center">
                <div class="entity-cell-two-line w-full">
                  <div class="entity-cell-primary justify-end font-mono tabular-nums <%= room_tax && room_tax < 0 ? 'text-red-600 dark:text-red-400' : '' %>"><%= room_tax.nil? ? '—' : format_room_amount(room_tax) %></div>
                  <div class="entity-cell-secondary justify-end tabular-nums"><%= room_tax.nil? ? '—' : (room_tax < 0 ? 'over tax' : 'under tax') %></div>
                </div>
              </div>

              <div class="w-24 shrink-0 h-10 px-3 flex items-center">
                <div class="entity-cell-two-line w-full">
                  <div class="entity-cell-primary justify-end font-mono tabular-nums <%= room_a1 && room_a1 < 0 ? 'text-red-600 dark:text-red-400' : '' %>"><%= room_a1.nil? ? '—' : format_room_amount(room_a1) %></div>
                  <div class="entity-cell-secondary justify-end tabular-nums"><%= room_a1.nil? ? '—' : (room_a1 < 0 ? 'over A1' : 'under A1') %></div>
                </div>
              </div>

              <div class="w-24 shrink-0 h-10 px-3 flex items-center">
                <div class="entity-cell-two-line w-full">
                  <div class="entity-cell-primary justify-end font-mono tabular-nums <%= room_a2 && room_a2 < 0 ? 'text-red-600 dark:text-red-400' : '' %>"><%= room_a2.nil? ? '—' : format_room_amount(room_a2) %></div>
                  <div class="entity-cell-secondary justify-end tabular-nums"><%= room_a2.nil? ? '—' : (room_a2 < 0 ? 'over A2' : 'under A2') %></div>
                </div>
              </div>

              <div class="w-36 shrink-0 h-10 px-3 flex items-center">
                <div class="entity-cell-two-line w-full">
                  <div class="entity-cell-primary items-center">
                    <% if visible_flag_chips.any? %>
                      <div class="flex items-center gap-1 overflow-hidden whitespace-nowrap">
                        <% visible_flag_chips.each do |chip| %>
                          <span class="<%= chip[:klass] %>"><%= chip[:label] %></span>
                        <% end %>
                        <% if hidden_flag_count.positive? %>
                          <span class="entity-chip entity-chip--muted">+<%= hidden_flag_count %></span>
                        <% end %>
                      </div>
                    <% else %>
                      <span class="text-[10px] text-muted-foreground/60">—</span>
                    <% end %>
                  </div>
                  <div class="entity-cell-secondary">
                    <span class="truncate"><%= flag_summary %></span>
                  </div>
                </div>
              </div>

              <div class="w-24 shrink-0 h-10 px-3 flex items-center">
                <div class="entity-cell-two-line w-full">
                  <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= luxury_tax_owed > 0 ? format_compact_currency(luxury_tax_owed) : '—' %></div>
                  <div class="entity-cell-secondary justify-end tabular-nums"><%= luxury_tax_owed > 0 ? 'owed' : 'no tax' %></div>
                </div>
              </div>

              <div class="w-16 shrink-0 h-10 px-3 flex items-center">
                <div class="entity-cell-two-line w-full">
                  <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= row["roster_row_count"] %></div>
                  <div class="entity-cell-secondary justify-end tabular-nums">standard</div>
                </div>
              </div>

              <div class="w-16 shrink-0 h-10 px-3 flex items-center">
                <div class="entity-cell-two-line w-full">
                  <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= row["two_way_row_count"] %></div>
                  <div class="entity-cell-secondary justify-end tabular-nums">two-way</div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
