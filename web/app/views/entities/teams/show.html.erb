<% content_for :title, @team&.fetch("team_name", nil) || "Team" %>

<% team_code = @team&.fetch("team_code", nil).to_s %>
<% team_name = @team&.fetch("team_name", nil).to_s %>
<% conference = @team&.fetch("conference_name", nil).to_s %>
<% city = @team&.fetch("city", nil).to_s %>
<% division = @team&.fetch("division_name", nil).to_s %>
<%# Avoid N+1 slug lookups in roster + subsection tables %>
<% prefetch_canonical_slugs(entity_type: "player", entity_ids: @roster.map { |r| r["player_id"] } + @cap_holds.map { |r| r["player_id"] } + @dead_money.map { |r| r["player_id"] } + @recent_ledger_entries.map { |r| r["player_id"] } + @two_way_watchlist_rows.map { |r| r["player_id"] }) %>
<% prefetch_canonical_slugs(entity_type: "agent", entity_ids: @roster.map { |r| r["agent_id"] }) %>

<main class="max-w-7xl mx-auto px-4 py-6 space-y-6">
  <%= render partial: "entities/shared/entity_header", locals: {
    title: (team_name.presence || team_code.presence || "Team"),
    title_badge: team_code.presence,
    subtitle: ("team_id: #{@team_id} · slug: #{@team_slug}" + (conference.present? ? " · conference: #{conference}" : "") + (division.present? ? " · division: #{division}" : "")),
    breadcrumbs: [["Teams", "/teams"], [team_code.presence || "Team", nil]],
    search_scope: "teams",
    salary_book_href: (team_code.present? ? "/tools/salary-book?team=#{team_code}##{team_code}" : "/tools/salary-book"),
    salary_book_label: (team_code.present? ? "Open in Salary Book" : "Salary Book"),
    right_links: [["Find a player", "/players"]]
  } %>

  <% if city.present? %>
    <div class="text-sm text-muted-foreground">Home city: <span class="text-foreground"><%= city %></span></div>
  <% end %>

  <section class="space-y-3">
    <h2 class="text-xs font-medium uppercase tracking-wide text-muted-foreground">Cap dashboard (team salary warehouse)</h2>

    <% if @team_salary_rows.empty? %>
      <div class="p-4 rounded-lg bg-muted/30 border border-border/50 text-sm text-muted-foreground italic">No team salary rows found.</div>
    <% else %>
      <div class="overflow-x-auto rounded-lg border border-border">
        <table class="min-w-full text-sm">
          <thead class="bg-muted/50 text-xs text-muted-foreground">
            <tr>
              <th class="text-left px-3 py-2 font-medium">Year</th>
              <th class="text-right px-3 py-2 font-medium">Cap total (hold)</th>
              <th class="text-right px-3 py-2 font-medium">Room under tax</th>
              <th class="text-right px-3 py-2 font-medium">Room under A1</th>
              <th class="text-right px-3 py-2 font-medium">Room under A2</th>
              <th class="text-right px-3 py-2 font-medium">Luxury tax</th>
              <th class="text-left px-3 py-2 font-medium">Roster / FA / Dead / 2W</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <% @team_salary_rows.each do |r| %>
              <tr class="hover:bg-muted/30">
                <td class="px-3 py-2 font-mono tabular-nums"><%= r["salary_year"] %></td>
                <td class="px-3 py-2 text-right font-mono tabular-nums"><%= format_salary(r["cap_total_hold"] || r["cap_total"]) %></td>
                <td class="px-3 py-2 text-right font-mono tabular-nums"><%= format_salary(r["room_under_tax"]) %></td>
                <td class="px-3 py-2 text-right font-mono tabular-nums"><%= format_salary(r["room_under_apron1"]) %></td>
                <td class="px-3 py-2 text-right font-mono tabular-nums"><%= format_salary(r["room_under_apron2"]) %></td>
                <td class="px-3 py-2 text-right font-mono tabular-nums"><%= format_salary(r["luxury_tax_owed"]) %></td>
                <td class="px-3 py-2 text-xs text-muted-foreground font-mono tabular-nums">
                  <%= [r["roster_row_count"], r["fa_row_count"], r["term_row_count"], r["two_way_row_count"]].map { |v| v || 0 }.join(" / ") %>
                  <% if r["is_repeater_taxpayer"] %>
                    <span class="ml-2 text-[10px] px-1.5 py-0.5 rounded bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400">repeater</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </section>

  <section class="space-y-3">
    <h2 class="text-xs font-medium uppercase tracking-wide text-muted-foreground">Apron provenance + constraints</h2>

    <% if @apron_provenance_rows.empty? %>
      <div class="p-4 rounded-lg bg-muted/30 border border-border/50 text-sm text-muted-foreground italic">No team tax summary snapshot rows for 2025–2031.</div>
    <% else %>
      <div class="overflow-x-auto rounded-lg border border-border">
        <table class="min-w-full text-sm">
          <thead class="bg-muted/50 text-xs text-muted-foreground">
            <tr>
              <th class="text-left px-3 py-2 font-medium">Year</th>
              <th class="text-left px-3 py-2 font-medium">Apron status</th>
              <th class="text-left px-3 py-2 font-medium">Reason</th>
              <th class="text-left px-3 py-2 font-medium">A1/A2 tx</th>
              <th class="text-left px-3 py-2 font-medium">Constraints</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <% @apron_provenance_rows.each do |r| %>
              <% constraint_lines = r["constraint_lines"].to_s.split("\n").reject(&:blank?) %>
              <tr class="hover:bg-muted/30 align-top">
                <td class="px-3 py-2 font-mono tabular-nums"><%= r["salary_year"] %></td>
                <td class="px-3 py-2 text-xs text-muted-foreground">
                  <%= yes_no(r["is_subject_to_apron"]) %>
                  <% if r["apron_level_lk"].present? %>
                    <span class="ml-1 font-mono"><%= r["apron_level_lk"] %></span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-xs">
                  <% if r["subject_to_apron_reason_lk"].present? %>
                    <span class="font-mono"><%= r["subject_to_apron_reason_lk"] %></span>
                    <% if r["subject_to_apron_reason_label"].present? %>
                      <span class="text-muted-foreground"> — <%= r["subject_to_apron_reason_label"] %></span>
                    <% end %>
                  <% else %>
                    <span class="text-muted-foreground">—</span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-xs">
                  <% if r["apron1_transaction_id"].present? %>
                    <a href="<%= transaction_href(r['apron1_transaction_id']) %>" class="hover:underline font-mono tabular-nums">A1 #<%= r["apron1_transaction_id"] %></a>
                  <% else %>
                    <span class="text-muted-foreground">A1 —</span>
                  <% end %>
                  <span class="mx-1 text-muted-foreground">·</span>
                  <% if r["apron2_transaction_id"].present? %>
                    <a href="<%= transaction_href(r['apron2_transaction_id']) %>" class="hover:underline font-mono tabular-nums">A2 #<%= r["apron2_transaction_id"] %></a>
                  <% else %>
                    <span class="text-muted-foreground">A2 —</span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-xs text-muted-foreground">
                  <% if constraint_lines.any? %>
                    <ul class="space-y-0.5">
                      <% constraint_lines.each do |line| %>
                        <li><%= line %></li>
                      <% end %>
                    </ul>
                  <% else %>
                    —
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </section>

  <section class="space-y-3">
    <h2 class="text-xs font-medium uppercase tracking-wide text-muted-foreground">Two-way capacity + watchlist</h2>

    <div class="grid grid-cols-2 md:grid-cols-3 xl:grid-cols-6 gap-3">
      <div class="rounded-lg border border-border bg-background p-3">
        <div class="text-xs text-muted-foreground">Current contracts</div>
        <div class="mt-1 text-lg font-semibold font-mono tabular-nums"><%= @two_way_capacity_row&.fetch("current_contract_count", nil) || "—" %></div>
      </div>
      <div class="rounded-lg border border-border bg-background p-3">
        <div class="text-xs text-muted-foreground">Open standard slots</div>
        <div class="mt-1 text-lg font-semibold font-mono tabular-nums"><%= @two_way_capacity_row&.fetch("open_standard_slots", nil) || "—" %></div>
      </div>
      <div class="rounded-lg border border-border bg-background p-3">
        <div class="text-xs text-muted-foreground">Games remaining</div>
        <div class="mt-1 text-lg font-semibold font-mono tabular-nums"><%= @two_way_capacity_row&.fetch("games_remaining", nil) || "—" %></div>
      </div>
      <div class="rounded-lg border border-border bg-background p-3">
        <div class="text-xs text-muted-foreground">Under-15 game count</div>
        <div class="mt-1 text-lg font-semibold font-mono tabular-nums"><%= @two_way_capacity_row&.fetch("under_15_games_count", nil) || "—" %></div>
      </div>
      <div class="rounded-lg border border-border bg-background p-3">
        <div class="text-xs text-muted-foreground">Under-15 remaining</div>
        <div class="mt-1 text-lg font-semibold font-mono tabular-nums"><%= @two_way_capacity_row&.fetch("under_15_games_remaining", nil) || "—" %></div>
      </div>
      <div class="rounded-lg border border-border bg-background p-3">
        <div class="text-xs text-muted-foreground">Context remaining</div>
        <div class="mt-1 text-lg font-semibold font-mono tabular-nums"><%= @two_way_capacity_row&.fetch("context_games_remaining", nil) || "—" %></div>
      </div>
    </div>

    <% if @two_way_watchlist_rows.empty? %>
      <div class="p-4 rounded-lg bg-muted/30 border border-border/50 text-sm text-muted-foreground italic">No two-way game utility rows found for this team.</div>
    <% else %>
      <div class="overflow-x-auto rounded-lg border border-border">
        <table class="min-w-full text-sm">
          <thead class="bg-muted/50 text-xs text-muted-foreground">
            <tr>
              <th class="text-left px-3 py-2 font-medium">Player</th>
              <th class="text-right px-3 py-2 font-medium">Games used</th>
              <th class="text-right px-3 py-2 font-medium">Limit</th>
              <th class="text-right px-3 py-2 font-medium">Remaining</th>
              <th class="text-left px-3 py-2 font-medium">Latest game</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <% @two_way_watchlist_rows.each do |r| %>
              <tr class="hover:bg-muted/30">
                <td class="px-3 py-2 text-xs">
                  <% if r["player_id"].present? %>
                    <a href="<%= player_href(r['player_id']) %>" class="font-medium hover:underline"><%= r["player_name"] %></a>
                  <% else %>
                    <span class="text-muted-foreground"><%= r["player_name"] || "—" %></span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-right font-mono tabular-nums"><%= r["games_on_active_list"].present? ? r["games_on_active_list"] : "—" %></td>
                <td class="px-3 py-2 text-right font-mono tabular-nums"><%= r["active_list_games_limit"].present? ? r["active_list_games_limit"] : "—" %></td>
                <td class="px-3 py-2 text-right font-mono tabular-nums"><%= r["remaining_games"].present? ? r["remaining_games"] : "—" %></td>
                <td class="px-3 py-2 text-xs text-muted-foreground"><%= r["game_date_est"] || "—" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </section>

  <section class="space-y-3">
    <h2 class="text-xs font-medium uppercase tracking-wide text-muted-foreground">Roster (salary book horizon)</h2>

    <% if @roster.empty? %>
      <div class="p-4 rounded-lg bg-muted/30 border border-border/50 text-sm text-muted-foreground italic">No roster rows found.</div>
    <% else %>
      <div class="overflow-x-auto rounded-lg border border-border">
        <table class="min-w-full text-sm">
          <thead class="bg-muted/50 text-xs text-muted-foreground">
            <tr>
              <th class="text-left px-3 py-2 font-medium">Player</th>
              <th class="text-left px-3 py-2 font-medium">Agent</th>
              <th class="text-right px-3 py-2 font-medium">Cap 2025</th>
              <th class="text-right px-3 py-2 font-medium">Total from 2025</th>
              <th class="text-left px-3 py-2 font-medium">Flags</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <% @roster.each do |p| %>
              <tr class="hover:bg-muted/30">
                <td class="px-3 py-2">
                  <a href="<%= player_href(p['player_id']) %>" class="font-medium hover:underline"><%= p["player_name"] %></a>
                  <div class="text-xs text-muted-foreground">id: <code><%= p["player_id"] %></code></div>
                </td>
                <td class="px-3 py-2">
                  <% if p["agent_id"].present? && p["agent_name"].present? %>
                    <a href="<%= agent_href(p['agent_id']) %>" class="hover:underline"><%= p["agent_name"] %></a>
                  <% elsif p["agent_name"].present? %>
                    <span><%= p["agent_name"] %></span>
                  <% else %>
                    <span class="text-muted-foreground">—</span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-right font-mono tabular-nums"><%= p["cap_2025"].present? ? format_salary(p["cap_2025"]) : "—" %></td>
                <td class="px-3 py-2 text-right font-mono tabular-nums"><%= p["total_salary_from_2025"].present? ? format_salary(p["total_salary_from_2025"]) : "—" %></td>
                <td class="px-3 py-2 text-xs text-muted-foreground">
                  <% flags = [] %>
                  <% flags << "2W" if p["is_two_way"] %>
                  <% flags << "MIN" if p["is_min_contract"] %>
                  <% flags << "RESTRICTED" if p["is_trade_restricted_now"] %>
                  <%= flags.any? ? flags.join(" · ") : "—" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </section>

  <section class="space-y-3">
    <h2 class="text-xs font-medium uppercase tracking-wide text-muted-foreground">Accounting buckets (holds / exceptions / dead money)</h2>

    <div class="grid grid-cols-1 xl:grid-cols-3 gap-3">
      <div class="rounded-lg border border-border bg-background p-3 space-y-2">
        <div class="text-sm font-medium">Cap holds</div>
        <% if @cap_holds.empty? %>
          <div class="text-sm text-muted-foreground italic">None</div>
        <% else %>
          <div class="overflow-x-auto">
            <table class="min-w-full text-xs">
              <thead class="text-muted-foreground">
                <tr>
                  <th class="text-left py-1">Player</th>
                  <th class="text-right py-1">2025</th>
                  <th class="text-right py-1">2026</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-border/60">
                <% @cap_holds.first(12).each do |r| %>
                  <tr>
                    <td class="py-1 pr-2">
                      <% if r["player_id"].present? %>
                        <a href="<%= player_href(r['player_id']) %>" class="hover:underline"><%= r["player_name"] %></a>
                      <% else %>
                        <%= r["player_name"] || "—" %>
                      <% end %>
                    </td>
                    <td class="py-1 text-right font-mono tabular-nums"><%= format_salary(r["cap_2025"]) %></td>
                    <td class="py-1 text-right font-mono tabular-nums"><%= format_salary(r["cap_2026"]) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>

      <div class="rounded-lg border border-border bg-background p-3 space-y-2">
        <div class="text-sm font-medium">Exceptions</div>
        <% if @exceptions.empty? %>
          <div class="text-sm text-muted-foreground italic">None</div>
        <% else %>
          <div class="overflow-x-auto">
            <table class="min-w-full text-xs">
              <thead class="text-muted-foreground">
                <tr>
                  <th class="text-left py-1">Type</th>
                  <th class="text-right py-1">2025</th>
                  <th class="text-left py-1">Expires</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-border/60">
                <% @exceptions.first(12).each do |r| %>
                  <tr>
                    <td class="py-1 pr-2"><%= exception_label(r) %></td>
                    <td class="py-1 text-right font-mono tabular-nums"><%= format_salary(r["remaining_2025"]) %></td>
                    <td class="py-1"><%= format_plain_date(r["expiration_date"]) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>

      <div class="rounded-lg border border-border bg-background p-3 space-y-2">
        <div class="text-sm font-medium">Dead money</div>
        <% if @dead_money.empty? %>
          <div class="text-sm text-muted-foreground italic">None</div>
        <% else %>
          <div class="overflow-x-auto">
            <table class="min-w-full text-xs">
              <thead class="text-muted-foreground">
                <tr>
                  <th class="text-left py-1">Player</th>
                  <th class="text-right py-1">2025</th>
                  <th class="text-right py-1">2026</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-border/60">
                <% @dead_money.first(12).each do |r| %>
                  <tr>
                    <td class="py-1 pr-2">
                      <% if r["player_id"].present? %>
                        <a href="<%= player_href(r['player_id']) %>" class="hover:underline"><%= r["player_name"] %></a>
                      <% else %>
                        <%= r["player_name"] || "—" %>
                      <% end %>
                    </td>
                    <td class="py-1 text-right font-mono tabular-nums"><%= format_salary(r["cap_2025"]) %></td>
                    <td class="py-1 text-right font-mono tabular-nums"><%= format_salary(r["cap_2026"]) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <section class="space-y-3">
    <h2 class="text-xs font-medium uppercase tracking-wide text-muted-foreground">Draft pick assets (future)</h2>

    <% if @draft_assets.empty? %>
      <div class="p-4 rounded-lg bg-muted/30 border border-border/50 text-sm text-muted-foreground italic">No draft asset rows found.</div>
    <% else %>
      <% grouped = @draft_assets.group_by { |r| [r["draft_year"], r["draft_round"]] } %>
      <div class="space-y-2">
        <% grouped.keys.sort.each do |(year, round)| %>
          <% rows = grouped[[year, round]] || [] %>
          <div class="p-4 rounded-lg border border-border bg-background">
            <div class="flex items-baseline justify-between">
              <div class="font-medium">
                <%= year %> — Round <%= round %>
                <span class="ml-2 text-xs text-muted-foreground">(<%= rows.size %> rows)</span>
              </div>
              <% if team_code.present? %>
                <a
                  href="<%= draft_pick_path(team_code: team_code, year: year, round: round) %>"
                  class="text-sm text-muted-foreground hover:text-foreground hover:underline"
                >Open group</a>
              <% end %>
            </div>

            <ul class="mt-2 space-y-1 text-sm text-muted-foreground">
              <% rows.first(3).each do |r| %>
                <li class="truncate">
                  <span class="font-mono text-xs"><%= r["asset_type"] %></span>
                  <span class="mx-1">·</span>
                  <span><%= r["raw_part"] %></span>
                </li>
              <% end %>
              <% if rows.size > 3 %>
                <li class="text-xs italic">…and <%= rows.size - 3 %> more</li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    <% end %>
  </section>

  <section class="space-y-3">
    <h2 class="text-xs font-medium uppercase tracking-wide text-muted-foreground">Recent team ledger entries</h2>

    <% if @recent_ledger_entries.empty? %>
      <div class="p-4 rounded-lg bg-muted/30 border border-border/50 text-sm text-muted-foreground italic">No ledger rows found.</div>
    <% else %>
      <div class="overflow-x-auto rounded-lg border border-border">
        <table class="min-w-full text-sm">
          <thead class="bg-muted/50 text-xs text-muted-foreground">
            <tr>
              <th class="text-left px-3 py-2 font-medium">Date</th>
              <th class="text-left px-3 py-2 font-medium">Player</th>
              <th class="text-left px-3 py-2 font-medium">Transaction</th>
              <th class="text-left px-3 py-2 font-medium">Type</th>
              <th class="text-right px-3 py-2 font-medium">Cap change</th>
              <th class="text-right px-3 py-2 font-medium">Tax change</th>
              <th class="text-right px-3 py-2 font-medium">Apron change</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <% @recent_ledger_entries.each do |r| %>
              <tr class="hover:bg-muted/30">
                <td class="px-3 py-2 font-mono tabular-nums text-xs"><%= r["ledger_date"] || "—" %></td>
                <td class="px-3 py-2 text-xs">
                  <% if r["player_id"].present? %>
                    <a href="<%= player_href(r['player_id']) %>" class="hover:underline"><%= r["player_name"] %></a>
                  <% else %>
                    <span class="text-muted-foreground"><%= r["player_name"] || "—" %></span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-xs">
                  <% if r["transaction_id"].present? %>
                    <a href="<%= transaction_href(r['transaction_id']) %>" class="hover:underline font-mono tabular-nums">#<%= r["transaction_id"] %></a>
                    <% if r["trade_id"].present? %>
                      <span class="text-muted-foreground">·</span>
                      <a href="<%= trade_href(r['trade_id']) %>" class="hover:underline font-mono tabular-nums">T#<%= r["trade_id"] %></a>
                    <% end %>
                  <% else %>
                    <span class="text-muted-foreground">—</span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-xs text-muted-foreground">
                  <%= [r["transaction_type_lk"], r["transaction_description_lk"]].compact.reject(&:blank?).join(" · ").presence || "—" %>
                </td>
                <td class="px-3 py-2 text-right font-mono tabular-nums"><%= format_salary(r["cap_change"]) %></td>
                <td class="px-3 py-2 text-right font-mono tabular-nums"><%= format_salary(r["tax_change"]) %></td>
                <td class="px-3 py-2 text-right font-mono tabular-nums"><%= format_salary(r["apron_change"]) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </section>

  <section class="space-y-3">
    <h2 class="text-xs font-medium uppercase tracking-wide text-muted-foreground">Exception usage audit</h2>

    <% if @exception_usage_rows.empty? %>
      <div class="p-4 rounded-lg bg-muted/30 border border-border/50 text-sm text-muted-foreground italic">No exception usage rows found.</div>
    <% else %>
      <div class="overflow-x-auto rounded-lg border border-border">
        <table class="min-w-full text-sm">
          <thead class="bg-muted/50 text-xs text-muted-foreground">
            <tr>
              <th class="text-left px-3 py-2 font-medium">Date</th>
              <th class="text-left px-3 py-2 font-medium">Exception</th>
              <th class="text-left px-3 py-2 font-medium">Player</th>
              <th class="text-left px-3 py-2 font-medium">Tx</th>
              <th class="text-left px-3 py-2 font-medium">Action</th>
              <th class="text-right px-3 py-2 font-medium">Change</th>
              <th class="text-right px-3 py-2 font-medium">Remaining</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <% @exception_usage_rows.each do |r| %>
              <tr class="hover:bg-muted/30">
                <td class="px-3 py-2 font-mono tabular-nums text-xs"><%= r["effective_date"] || "—" %></td>
                <td class="px-3 py-2 text-xs text-muted-foreground"><%= r["exception_type_lk"] || "—" %></td>
                <td class="px-3 py-2 text-xs">
                  <% if r["player_id"].present? %>
                    <a href="<%= player_href(r['player_id']) %>" class="hover:underline"><%= r["player_name"] %></a>
                  <% else %>
                    <span class="text-muted-foreground"><%= r["player_name"] || "—" %></span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-xs">
                  <% if r["transaction_id"].present? %>
                    <a href="<%= transaction_href(r['transaction_id']) %>" class="hover:underline font-mono tabular-nums">#<%= r["transaction_id"] %></a>
                    <% if r["trade_id"].present? %>
                      <span class="text-muted-foreground">·</span>
                      <a href="<%= trade_href(r['trade_id']) %>" class="hover:underline font-mono tabular-nums">T#<%= r["trade_id"] %></a>
                    <% end %>
                  <% else %>
                    <span class="text-muted-foreground">—</span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-xs text-muted-foreground"><%= [r["exception_action_lk"], r["transaction_type_lk"]].compact.reject(&:blank?).join(" · ").presence || "—" %></td>
                <td class="px-3 py-2 text-right font-mono tabular-nums"><%= format_salary(r["change_amount"]) %></td>
                <td class="px-3 py-2 text-right font-mono tabular-nums"><%= format_salary(r["remaining_exception_amount"]) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </section>

  <%= render partial: "entities/shared/known_slugs", locals: { entity_type: "team", entity_id: @team_id, path_prefix: "teams" } %>
</main>
