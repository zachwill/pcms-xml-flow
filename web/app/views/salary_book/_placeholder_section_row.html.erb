<%# PlaceholderSectionRow — shown when a Display filter is enabled but a section has no rows %>

<% label = local_assigns.fetch(:label) %>
<% salary_years ||= SalaryBookHelper::SALARY_YEARS %>

<div class="border-b border-border/50 bg-muted">
  <div class="h-8 flex items-center text-xs">
    <%# Sticky label column %>
    <div
      class="w-52 pl-4 shrink-0 sticky left-0 z-[2] self-stretch bg-background relative
             after:absolute after:right-0 after:top-0 after:bottom-0 after:w-px after:bg-border/30"
    >
      <span class="text-[10px] font-semibold uppercase tracking-wide text-muted-foreground">
        <%= label %>
      </span>
    </div>

    <div class="w-24 shrink-0" data-show="$displayepm" style="display: none;"></div>

    <% salary_years.each do |year| %>
      <div
        class="w-24 font-mono tabular-nums text-center text-muted-foreground/50"
        data-class="{ 'bg-yellow-50/70 dark:bg-yellow-900/25': $selectedseason === '<%= year %>' }"
      >—</div>
    <% end %>

    <div class="w-24"></div>
    <div class="w-40 pr-4"></div>
  </div>
</div>
