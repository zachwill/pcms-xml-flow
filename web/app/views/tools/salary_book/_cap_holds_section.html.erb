<%# CapHoldsSection — player-row-adjacent styling with section-local season header %>

<% cap_holds ||= [] %>
<% salary_years ||= SalaryBookHelper::SALARY_YEARS %>

<div>
  <% if cap_holds.any? %>
    <%# Section header (includes year labels for quick scanning) %>
    <div class="bg-muted/10 dark:bg-muted/5 border-b border-border/50">
      <div class="h-8 flex items-center text-xs font-medium text-muted-foreground select-none cursor-default">
        <div
          class="w-52 shrink-0 pl-4 sticky left-0 z-[2] self-stretch bg-muted/10 dark:bg-muted/5 relative
                 after:absolute after:right-0 after:top-0 after:bottom-0 after:w-px after:bg-border/30"
        >
          <div class="grid grid-cols-[40px_1fr] items-center h-full">
            <div></div>
            <div class="pl-1 flex items-center gap-2 min-w-0">
              <span class="text-[10px] font-semibold uppercase tracking-wide text-muted-foreground">FA Cap Holds</span>
              <span class="inline-flex items-center justify-center min-w-[16px] h-4 px-1 rounded-full bg-muted text-muted-foreground text-[9px] font-medium">
                <%= cap_holds.length %>
              </span>
            </div>
          </div>
        </div>

        <div class="h-full flex shrink-0">
          <div
            class="w-24 h-full shrink-0 flex items-center justify-center text-[10px] font-semibold uppercase tracking-wide bg-zinc-100/60 dark:bg-zinc-800/30 text-zinc-700 dark:text-zinc-300"
            data-show="$displayepm"
            style="display: none;"
          >EPM</div>

          <% salary_years.each do |year| %>
            <div
              class="w-24 h-full shrink-0 flex items-center justify-center tabular-nums text-center"
              data-class="{ 'bg-yellow-50/70 dark:bg-yellow-900/10 text-foreground': $selectedseason === '<%= year %>' }"
            ><%= format_year_label(year) %></div>
          <% end %>
        </div>

        <div class="w-24 h-full shrink-0 flex items-center justify-center tabular-nums text-center">Total</div>
        <div class="w-40 pr-4 h-full shrink-0 flex items-center text-left">Agent</div>
      </div>
    </div>

    <% cap_holds.each do |row| %>
      <% player_id = row["player_id"] %>
      <% title = row["player_name"].presence || row["amount_type_lk"].presence || "Cap Hold" %>
      <% age_yos = player_age_yos_display(row) %>
      <% subtitle = [age_yos, row["amount_type_lk"].presence].compact.join(" · ").presence %>
      <% headshot_src = player_id.present? ? player_headshot_url(player_id) : fallback_headshot_data_uri %>
      <% total_hold = row["cap_sort"] %>
      <% if total_hold.nil? || total_hold.to_f <= 0 %>
        <% total_hold = salary_years.filter_map { |y| v = cap_hold_amount(row, y); v if v.present? && v.to_f > 0 }.first %>
      <% end %>
      <% has_total_hold = total_hold.present? && total_hold.to_f > 0 %>

      <div
        class="group bg-muted/10 dark:bg-muted/5 border-b border-border/50 transition-colors duration-75
               hover:bg-yellow-50/70 dark:hover:bg-yellow-900/10"
      >
        <div class="flex">
          <%# Sticky identity column (player-row style) %>
          <div
            class="w-52 shrink-0 pl-4 sticky left-0 z-[1] relative
                   bg-muted/10 dark:bg-muted/5 transition-colors duration-75
                   group-hover:bg-yellow-50 dark:group-hover:bg-yellow-900
                   after:absolute after:right-0 after:top-0 after:bottom-0 after:w-px after:bg-border/30"
          >
            <div class="grid grid-cols-[40px_1fr] grid-rows-[24px_16px]" aria-label="<%= title %> cap hold">
              <div class="row-span-2 flex items-center justify-start">
                <div class="w-7 h-7 rounded border border-border bg-background overflow-hidden">
                  <img
                    src="<%= headshot_src %>"
                    alt="<%= title %>"
                    class="w-full h-full object-cover object-top bg-muted"
                    loading="lazy"
                    decoding="async"
                    onerror="if (this.src !== '<%= fallback_headshot_data_uri %>') { this.src = '<%= fallback_headshot_data_uri %>'; }"
                  />
                </div>
              </div>

              <div class="h-[24px] flex items-end min-w-0 pl-1 pr-2">
                <span class="truncate font-medium text-[14px] italic text-zinc-600 dark:text-zinc-400">
                  <%= title %>
                </span>
              </div>

              <div class="h-[16px] -mt-px flex items-start gap-2 min-w-0 pl-1 pr-2 leading-none text-[10px] text-zinc-500 dark:text-zinc-400 tabular-nums italic">
                <% if subtitle.present? %>
                  <span class="truncate"><%= subtitle %></span>
                <% else %>
                  <span class="text-muted-foreground/50">—</span>
                <% end %>
              </div>
            </div>
          </div>

          <%# Numeric columns %>
          <div class="min-w-0 flex">
            <div
              class="w-24 shrink-0 grid place-items-center h-[40px] bg-zinc-100/60 dark:bg-zinc-800/30 text-zinc-700 dark:text-zinc-300"
              data-show="$displayepm"
              style="display: none;"
            >
              <span class="inline-block font-mono tabular-nums text-center text-muted-foreground/50" style="width: 6ch">—</span>
            </div>

            <% salary_years.each do |year| %>
              <% amt = cap_hold_amount(row, year) %>
              <% is_empty = amt.nil? || amt.to_f == 0 %>
              <div
                class="w-24 shrink-0 text-zinc-700 dark:text-zinc-300 <%= is_empty ? 'grid place-items-center h-[40px]' : 'flex flex-col italic' %>"
                data-class="{ 'bg-yellow-50/70 dark:bg-yellow-900/10': $selectedseason === '<%= year %>', 'bg-zinc-100/60 dark:bg-zinc-800/30': $selectedseason !== '<%= year %>' && <%= !is_empty %> }"
              >
                <% if is_empty %>
                  <span class="inline-block font-mono tabular-nums text-center text-muted-foreground/50" style="width: 6ch">—</span>
                <% else %>
                  <div class="h-[24px] flex items-end justify-center text-sm">
                    <span class="grid place-items-center w-full">
                      <span class="inline-block font-mono tabular-nums text-right" style="width: 6ch"><%= format_compact_currency(amt) %></span>
                    </span>
                  </div>
                  <div class="h-[16px] -mt-px flex items-start justify-center">
                    <span class="text-[10px] leading-none tabular-nums whitespace-nowrap uppercase tracking-wide text-muted-foreground/80 italic">HOLD</span>
                  </div>
                <% end %>
              </div>
            <% end %>

            <div class="w-24 shrink-0 text-zinc-700 dark:text-zinc-300 <%= has_total_hold ? 'flex flex-col italic bg-zinc-100/60 dark:bg-zinc-800/30' : 'grid place-items-center h-[40px]' %>">
              <% if has_total_hold %>
                <div class="h-[24px] flex items-end justify-center text-sm">
                  <span class="grid place-items-center w-full">
                    <span class="inline-block font-mono tabular-nums text-right" style="width: 6ch"><%= format_compact_currency(total_hold) %></span>
                  </span>
                </div>
                <div class="h-[16px] -mt-px flex items-start justify-center">
                  <span class="text-[10px] leading-none tabular-nums whitespace-nowrap uppercase tracking-wide text-muted-foreground/80 italic">HOLD</span>
                </div>
              <% else %>
                <span class="inline-block font-mono tabular-nums text-center text-muted-foreground/50" style="width: 6ch">—</span>
              <% end %>
            </div>

            <div class="w-40 shrink-0 flex flex-col pr-4 min-w-0 overflow-hidden text-left">
              <div class="h-[24px] flex items-end justify-start min-w-0 overflow-hidden">
                <% if row["agent_name"].present? && row["agent_id"].present? %>
                  <button
                    type="button"
                    class="cursor-pointer block w-full text-left text-xs leading-tight truncate -translate-y-[3px] text-zinc-600 dark:text-zinc-400 hover:text-foreground hover:underline
                           focus:outline-none focus-visible:underline focus-visible:text-foreground transition-colors"
                    data-on:click="@get('<%= tools_salary_book_sidebar_agent_path(id: row["agent_id"]) %>')"
                  ><%= row["agent_name"] %></button>
                <% elsif row["agent_name"].present? %>
                  <span class="block w-full text-xs leading-tight truncate -translate-y-[3px] text-zinc-600 dark:text-zinc-400"><%= row["agent_name"] %></span>
                <% else %>
                  <span class="text-xs -translate-y-[3px] text-muted-foreground/50">—</span>
                <% end %>
              </div>

              <div class="h-[16px] -mt-px flex items-start justify-start gap-1.5 leading-none text-[10px] tabular-nums min-w-0 overflow-hidden">
                <% if row["agency_name"].present? %>
                  <span class="block w-full text-zinc-500 dark:text-zinc-400 leading-tight truncate -translate-y-px"><%= row["agency_name"] %></span>
                <% else %>
                  <span class="text-muted-foreground/50 -translate-y-px">—</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  <% else %>
    <%# Empty state: keep section label, show standard placeholder dashes (no Total/Agent header labels) %>
    <div class="bg-muted/10 dark:bg-muted/5 border-b border-border/50">
      <div class="h-8 flex items-center text-xs">
        <div
          class="w-52 shrink-0 pl-4 sticky left-0 z-[2] self-stretch bg-muted/10 dark:bg-muted/5 relative
                 after:absolute after:right-0 after:top-0 after:bottom-0 after:w-px after:bg-border/30"
        >
          <div class="grid grid-cols-[40px_1fr] items-center h-full">
            <div></div>
            <div class="pl-1 flex items-center gap-2 min-w-0">
              <span class="text-[10px] font-semibold uppercase tracking-wide text-muted-foreground">FA Cap Holds</span>
              <span class="inline-flex items-center justify-center min-w-[16px] h-4 px-1 rounded-full bg-muted text-muted-foreground text-[9px] font-medium">0</span>
            </div>
          </div>
        </div>

        <div class="w-24 shrink-0 font-mono tabular-nums text-center text-muted-foreground/50" data-show="$displayepm" style="display: none;">—</div>

        <% salary_years.each do |year| %>
          <div
            class="w-24 shrink-0 font-mono tabular-nums text-center text-muted-foreground/50"
            data-class="{ 'bg-yellow-50/70 dark:bg-yellow-900/10': $selectedseason === '<%= year %>' }"
          >—</div>
        <% end %>

        <div class="w-24 shrink-0 font-mono tabular-nums text-center text-muted-foreground/50">—</div>
        <div class="w-40 pr-4 shrink-0 text-muted-foreground/50">—</div>
      </div>
    </div>
  <% end %>
</div>
