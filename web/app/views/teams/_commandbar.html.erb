<%
  pane_query_expr = "'q=' + encodeURIComponent($teamsquery) +
    '&conference=' + encodeURIComponent($teamsconference) +
    '&pressure=' + encodeURIComponent($teamspressure) +
    '&sort=' + encodeURIComponent($teamssort) +
    '&compare_a=' + encodeURIComponent($comparea) +
    '&compare_b=' + encodeURIComponent($compareb)"

  selected_overlay_query_expr = "'selected_id=' + encodeURIComponent($overlaytype === 'team' ? $selectedteamid : '')"
  refresh_query_expr = "(#{pane_query_expr}) + '&' + (#{selected_overlay_query_expr})"

  refresh_expr = "@get('/teams/sse/refresh?' + (#{refresh_query_expr})); window.history.replaceState({}, '', '/teams?' + (#{pane_query_expr}))"
  submit_search_expr = "evt.preventDefault(); #{refresh_expr}"
  clear_search_expr = "$teamsquery = ''; #{refresh_expr}"

  pressure_options = [
    ["all", "All teams"],
    ["over_cap", "Over Cap"],
    ["over_tax", "Over Tax"],
    ["over_apron1", "Over Apron 1"],
    ["over_apron2", "Over Apron 2"]
  ]

  pressure_counts = @pressure_counts || {}
  active_pressure_label = case @pressure_lens
  when "over_cap" then "Over Cap"
  when "over_tax" then "Over Tax"
  when "over_apron1" then "Over Apron 1"
  when "over_apron2" then "Over Apron 2"
  else "All teams"
  end
  active_pressure_count = pressure_counts[@pressure_lens].to_i
%>

<header
  id="commandbar"
  class="shrink-0 h-[130px] border-b border-border bg-background flex items-start px-4 pt-3 gap-4 select-none"
>
  <div class="space-y-1" role="navigation" aria-label="Entities">
    <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Entities</div>
    <div class="grid grid-cols-4 gap-1">
      <a href="/agents" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Agents</a>
      <a href="/drafts" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Drafts</a>
      <a href="/players" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Players</a>
      <a href="/teams" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-primary text-primary-foreground border-primary shadow-sm">Teams</a>
      <a href="/trades" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Trades</a>
      <a href="/transactions" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Txns</a>
    </div>
  </div>

  <div class="h-20 w-px bg-border self-center"></div>

  <div class="flex items-start gap-4" role="group" aria-label="Teams filters">
    <form class="min-w-[12rem] space-y-1" data-on:submit="<%= submit_search_expr %>">
      <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Search</div>
      <div class="flex items-center gap-1.5">
        <input
          id="teams-search-input"
          type="search"
          placeholder="team, code, conference"
          class="w-40 h-7 rounded border border-border bg-background px-2 text-xs text-foreground placeholder:text-muted-foreground/70"
          value="<%= @query %>"
          data-bind="teamsquery"
          data-on:keydown="if (evt.key === 'Enter') { evt.preventDefault(); <%= refresh_expr %>; }"
        />
        <button
          type="submit"
          class="cursor-pointer h-7 px-2 rounded border border-border bg-muted/40 text-[11px] text-foreground hover:bg-muted transition-colors"
        >Apply</button>
        <button
          type="button"
          class="cursor-pointer h-7 px-2 rounded border border-border bg-background text-[11px] text-muted-foreground hover:text-foreground transition-colors"
          data-on:click="<%= clear_search_expr %>"
        >Clear</button>
      </div>
    </form>

    <div class="min-w-[8.5rem] space-y-1">
      <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Conference</div>
      <div class="space-y-1">
        <% [["ALL", "All"], ["Eastern", "East"], ["Western", "West"]].each do |value, label| %>
          <label class="flex items-center gap-1.5 cursor-pointer">
            <input
              type="radio"
              id="teams-conference-<%= value.downcase %>"
              name="teams-conference"
              value="<%= value %>"
              class="size-3.5 accent-primary"
              <%= "checked" if @conference_lens == value %>
              data-bind="teamsconference"
              data-on:change="if (el.checked) { <%= refresh_expr %>; }"
            />
            <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': $teamsconference === '<%= value %>', 'text-muted-foreground': $teamsconference !== '<%= value %>' }"><%= label %></span>
          </label>
        <% end %>
      </div>
    </div>

    <div class="min-w-[11rem] space-y-1">
      <div class="flex items-baseline justify-between gap-2 text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">
        <span>Pressure</span>
        <span class="font-mono tabular-nums normal-case tracking-normal text-muted-foreground">
          Active: <%= active_pressure_label %> · <%= active_pressure_count %>
        </span>
      </div>
      <div class="space-y-1">
        <% pressure_options.each do |value, label| %>
          <% count = pressure_counts[value].to_i %>
          <label
            class="flex items-center gap-1.5 cursor-pointer rounded border px-1.5 py-0.5 transition-colors"
            data-class="{ 'border-primary/40 bg-primary/10': $teamspressure === '<%= value %>', 'border-transparent hover:bg-muted/50': $teamspressure !== '<%= value %>' }"
          >
            <input
              type="radio"
              id="teams-pressure-<%= value.tr('_', '-') %>"
              name="teams-pressure"
              value="<%= value %>"
              class="size-3.5 accent-primary"
              <%= "checked" if @pressure_lens == value %>
              data-bind="teamspressure"
              data-on:change="if (el.checked) { <%= refresh_expr %>; }"
            />
            <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': $teamspressure === '<%= value %>', 'text-muted-foreground': $teamspressure !== '<%= value %>' }"><%= label %></span>
            <span class="ml-auto font-mono tabular-nums text-[10px]" data-class="{ 'text-foreground': $teamspressure === '<%= value %>', 'text-muted-foreground/80': $teamspressure !== '<%= value %>' }"><%= count %></span>
          </label>
        <% end %>
      </div>
    </div>

    <div class="min-w-[9rem] space-y-1">
      <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Sort</div>
      <div class="space-y-1">
        <% [["pressure_desc", "Pressure first"], ["cap_space_asc", "Cap tightest"], ["tax_room_asc", "Tax tightest"], ["team_asc", "Team A→Z"]].each do |value, label| %>
          <label class="flex items-center gap-1.5 cursor-pointer">
            <input
              type="radio"
              id="teams-sort-<%= value.tr('_', '-') %>"
              name="teams-sort"
              value="<%= value %>"
              class="size-3.5 accent-primary"
              <%= "checked" if @sort_lens == value %>
              data-bind="teamssort"
              data-on:change="if (el.checked) { <%= refresh_expr %>; }"
            />
            <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': $teamssort === '<%= value %>', 'text-muted-foreground': $teamssort !== '<%= value %>' }"><%= label %></span>
          </label>
        <% end %>
      </div>
    </div>
  </div>

  <div class="h-20 w-px bg-border self-center ml-auto shrink-0"></div>
  <%= render partial: "shared/commandbar_navigation", locals: { active_destination: "teams" } %>
</header>
