<%
  noah_query_expr = "'timeframe=' + encodeURIComponent($noahtimeframe) +
    '&shot_lens=' + encodeURIComponent($noahshotlens) +
    '&grade_lens=' + encodeURIComponent($noahgradelens) +
    '&min_attempts=' + encodeURIComponent($noahminattempts)"

  format_kpi_value = lambda do |kpi|
    value = kpi["value"]
    return "—" if value.nil?

    if kpi["value_format"].to_s == "percentage"
      "#{(value.to_f * 100.0).round(1)}%"
    else
      number_with_delimiter(value.to_i)
    end
  end

  grade_class = lambda do |grade|
    case grade.to_s
    when "A+", "A", "A-", "B+"
      "text-emerald-600 dark:text-emerald-400"
    when "D+", "D", "D-", "F"
      "text-red-600 dark:text-red-400"
    else
      "text-foreground"
    end
  end

  metric_one_value = lambda do |row|
    case @grade_lens
    when "noah-grades"
      row["angle_grade"]
    when "consistency"
      row["depth_consistency_grade"]
    else
      row["angle"].nil? ? "—" : format("%.1f", row["angle"])
    end
  end

  metric_two_value = lambda do |row|
    case @grade_lens
    when "noah-grades"
      row["depth_grade"]
    when "consistency"
      row["left_right_consistency_grade"]
    else
      row["depth"].nil? ? "—" : format("%.1f", row["depth"])
    end
  end

  metric_three_value = lambda do |row|
    case @grade_lens
    when "noah-grades"
      row["left_right_grade"]
    when "consistency"
      row["consistency_grade"]
    else
      row["left_right"].nil? ? "—" : format("%.2f", row["left_right"])
    end
  end
%>

<main
  id="maincanvas"
  class="flex-1 min-w-0 min-h-0 overflow-y-auto overflow-x-hidden bg-background relative overscroll-y-contain scroll-touch isolate"
>
  <div class="px-4 py-3 space-y-4">
    <section class="rounded-lg border border-border bg-background p-3 space-y-3">
      <div class="flex items-start justify-between gap-4">
        <div>
          <div class="text-[10px] uppercase tracking-wide text-muted-foreground/80">Noah workspace</div>
          <h2 class="text-sm font-semibold text-foreground">
            Player overview
            <span class="text-muted-foreground font-medium">· <%= @players.size %> rows</span>
          </h2>
          <div class="text-[11px] text-muted-foreground mt-0.5"><%= @window_label %> · <%= @shot_lens_label %> · min <%= @min_attempts %> <%= @shot_volume_label %></div>
        </div>

        <div class="text-[10px] text-muted-foreground/80 text-right tabular-nums">
          <% if @kpi_updated_at.present? %>
            <div>KPIs updated</div>
            <div><%= @kpi_updated_at.in_time_zone("Pacific Time (US & Canada)").strftime("%b %-d, %Y · %-I:%M %p %Z") %></div>
          <% else %>
            <div>No KPI snapshot</div>
          <% end %>
        </div>
      </div>

      <div class="flex flex-wrap gap-1.5">
        <span class="entity-chip entity-chip--muted"><%= @shot_lens_label %></span>
        <span class="entity-chip entity-chip--muted"><%= @metric_headers[:one] %> · <%= @metric_headers[:two] %> · <%= @metric_headers[:three] %></span>
        <span class="entity-chip entity-chip--accent">Lens <%= @grade_lens_options.find { |opt| opt[:key] == @grade_lens }&.dig(:label) || @grade_lens %></span>
      </div>

      <div class="text-[11px] text-muted-foreground"><%= @shot_lens_caption %></div>

      <div class="grid grid-cols-3 gap-2 max-w-[360px]">
        <%= render partial: "salary_book/kpi_cell", locals: {
          label: (@kpis_by_key.dig("total_shots", "display_name") || "Total PF Shots"),
          value: format_kpi_value.call(@kpis_by_key["total_shots"] || {}),
          title: @kpis_by_key.dig("total_shots", "description"),
          class_name: "w-full"
        } %>

        <%= render partial: "salary_book/kpi_cell", locals: {
          label: (@kpis_by_key.dig("season_3pa", "display_name") || "Season 3PA"),
          value: format_kpi_value.call(@kpis_by_key["season_3pa"] || {}),
          title: @kpis_by_key.dig("season_3pa", "description"),
          class_name: "w-full"
        } %>

        <%= render partial: "salary_book/kpi_cell", locals: {
          label: (@kpis_by_key.dig("season_3p_pct", "display_name") || "Season 3P%"),
          value: format_kpi_value.call(@kpis_by_key["season_3p_pct"] || {}),
          title: @kpis_by_key.dig("season_3p_pct", "description"),
          class_name: "w-full"
        } %>
      </div>
    </section>

    <% if @players.empty? %>
      <div class="p-6 rounded-lg border border-border bg-muted/20 text-sm text-muted-foreground italic text-center">
        No players meet the current filters.
      </div>
    <% else %>
      <section class="rounded-lg border border-border overflow-hidden">
        <div class="sticky top-0 z-10 bg-muted/70 backdrop-blur-sm border-b border-border">
          <div class="flex items-center px-4 h-8 text-[10px] uppercase tracking-wide text-muted-foreground/90 font-medium">
            <div class="w-64 shrink-0">Player</div>
            <div class="w-20 shrink-0 text-right font-mono tabular-nums"><%= @shot_volume_label %></div>
            <div class="w-20 shrink-0 text-right font-mono tabular-nums"><%= @shot_pct_label %></div>
            <div class="w-20 shrink-0 text-right font-mono tabular-nums">Swish</div>
            <div class="w-24 shrink-0 text-right"><%= @metric_headers[:one] %></div>
            <div class="w-24 shrink-0 text-right"><%= @metric_headers[:two] %></div>
            <div class="w-24 shrink-0 text-right"><%= @metric_headers[:three] %></div>
            <div class="w-20 shrink-0 text-right">σ Sum</div>
          </div>
        </div>

        <div class="divide-y divide-border/60">
          <% @players.each do |row| %>
            <% noah_id = row["noah_id"].to_i %>
            <% selected = @selected_player_id.to_i == noah_id %>

            <% metric_one = metric_one_value.call(row) %>
            <% metric_two = metric_two_value.call(row) %>
            <% metric_three = metric_three_value.call(row) %>

            <% metric_one_class = if @grade_lens == "noah-grades"
              grade_class.call(row["angle_grade"])
            elsif @grade_lens == "consistency"
              grade_class.call(row["depth_consistency_grade"])
            elsif row["angle"] && (row["angle"] - 45.0).abs <= 1.0
              "text-emerald-600 dark:text-emerald-400"
            else
              "text-foreground"
            end %>

            <% metric_two_class = if @grade_lens == "noah-grades"
              grade_class.call(row["depth_grade"])
            elsif @grade_lens == "consistency"
              grade_class.call(row["left_right_consistency_grade"])
            elsif row["depth"] && (row["depth"] - 11.0).abs <= 1.0
              "text-emerald-600 dark:text-emerald-400"
            else
              "text-foreground"
            end %>

            <% metric_three_class = if @grade_lens == "noah-grades"
              grade_class.call(row["left_right_grade"])
            elsif @grade_lens == "consistency"
              grade_class.call(row["consistency_grade"])
            elsif row["left_right"] && row["left_right"].abs <= 0.15
              "text-emerald-600 dark:text-emerald-400"
            else
              "text-foreground"
            end %>

            <div
              class="group cursor-pointer transition-colors duration-75 hover:bg-yellow-50/70 dark:hover:bg-yellow-900/10 <%= selected ? 'bg-yellow-100/80 dark:bg-yellow-900/20' : '' %>"
              role="button"
              tabindex="0"
              data-on:click="@get('/ripcity/noah/refresh?' + (<%= noah_query_expr %>) + '&selected_player=<%= noah_id %>'); window.history.replaceState({}, '', '/ripcity/noah?' + (<%= noah_query_expr %>) + '&selected_player=<%= noah_id %>')"
              data-on:keydown="if (evt.key === 'Enter' || evt.key === ' ') { evt.preventDefault(); @get('/ripcity/noah/refresh?' + (<%= noah_query_expr %>) + '&selected_player=<%= noah_id %>'); window.history.replaceState({}, '', '/ripcity/noah?' + (<%= noah_query_expr %>) + '&selected_player=<%= noah_id %>'); }"
            >
              <div class="flex items-center px-4 min-h-[50px]">
                <div class="w-64 shrink-0">
                  <div class="grid grid-cols-[36px_1fr] grid-rows-[24px_16px]">
                    <div class="row-span-2 flex items-center justify-start">
                      <div class="w-8 h-8 rounded border border-border bg-background overflow-hidden flex items-center justify-center">
                        <% if row["nba_id"].present? %>
                          <img
                            src="<%= player_headshot_url(row['nba_id']) %>"
                            alt="<%= row['player_name'] %>"
                            class="w-full h-full object-cover object-top bg-muted"
                            loading="lazy"
                            decoding="async"
                            onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                          />
                          <span class="hidden text-[9px] font-semibold text-muted-foreground"><%= row["player_name"].to_s.first(2).upcase %></span>
                        <% else %>
                          <span class="text-[9px] font-semibold text-muted-foreground"><%= row["player_name"].to_s.first(2).upcase %></span>
                        <% end %>
                      </div>
                    </div>

                    <div class="h-[24px] flex items-end min-w-0 pl-2">
                      <span class="truncate font-medium text-[14px]"><%= row["player_name"] %></span>
                    </div>

                    <div class="h-[16px] -mt-px flex items-start gap-1.5 min-w-0 pl-2 leading-none text-[10px] text-muted-foreground/80 tabular-nums overflow-hidden">
                      <span>ID <%= noah_id %></span>
                      <% if row["roster_group"].present? %>
                        <span class="entity-chip entity-chip--muted"><%= row["roster_group"] %></span>
                      <% end %>
                    </div>
                  </div>
                </div>

                <div class="w-20 shrink-0 text-right font-mono tabular-nums text-sm"><%= row["attempts"] %></div>
                <div class="w-20 shrink-0 text-right font-mono tabular-nums text-sm"><%= (row["fg_pct"].to_f * 100.0).round(1) %>%</div>
                <div class="w-20 shrink-0 text-right font-mono tabular-nums text-sm"><%= (row["swish_pct"].to_f * 100.0).round(1) %>%</div>

                <div class="w-24 shrink-0 text-right font-mono tabular-nums text-sm <%= metric_one_class %>"><%= metric_one %></div>
                <div class="w-24 shrink-0 text-right font-mono tabular-nums text-sm <%= metric_two_class %>"><%= metric_two %></div>
                <div class="w-24 shrink-0 text-right font-mono tabular-nums text-sm <%= metric_three_class %>"><%= metric_three %></div>

                <div class="w-20 shrink-0 text-right font-mono tabular-nums text-sm text-muted-foreground">
                  <% if row["consistency_score"].nil? %>
                    —
                  <% else %>
                    <%= format("%.2f", row["consistency_score"]) %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>
  </div>
</main>
