<% content_for :title, "Players" %>

<%
  pane_query_expr = "'q=' + encodeURIComponent($playerquery) +
    '&team=' + encodeURIComponent($playerteam) +
    '&status=' + encodeURIComponent($playerstatus) +
    '&constraint=' + encodeURIComponent($playerconstraint) +
    '&urgency=' + encodeURIComponent($playerurgency) +
    '&urgency_sub=' + encodeURIComponent($playerurgencysub) +
    '&horizon=' + encodeURIComponent($playerhorizon) +
    '&sort=' + encodeURIComponent($playersort) +
    '&compare_a=' + encodeURIComponent($comparea) +
    '&compare_b=' + encodeURIComponent($compareb)"

  selected_overlay_query_expr = "'selected_id=' + encodeURIComponent($overlaytype === 'player' ? $selectedplayerid : '')"
  refresh_query_expr = "(#{pane_query_expr}) + '&' + (#{selected_overlay_query_expr})"

  refresh_expr = "@get('/players/sse/refresh?' + (#{refresh_query_expr})); window.history.replaceState({}, '', '/players?' + (#{pane_query_expr}))"
  submit_search_expr = "evt.preventDefault(); #{refresh_expr}"
  clear_search_expr = "$playerquery = ''; #{refresh_expr}"

  signals_literal = "{ playerquery: #{@query.to_json}, playerteam: #{@team_lens.to_json}, playerstatus: #{@status_lens.to_json}, playerconstraint: #{@constraint_lens.to_json}, playerurgency: #{@urgency_lens.to_json}, playerurgencysub: #{@urgency_sub_lens.to_json}, playerhorizon: #{@cap_horizon.to_s.to_json}, playersort: #{@sort_lens.to_json}, comparea: #{@compare_a_id.to_s.to_json}, compareb: #{@compare_b_id.to_s.to_json}, selectedplayerid: #{@selected_player_id.to_s.to_json}, overlaytype: #{@selected_player_id.present? ? 'player'.to_json : 'none'.to_json} }"
%>

<div id="players-workspace" class="h-screen w-screen flex flex-col overflow-hidden bg-background" data-signals="<%= signals_literal %>">
  <div id="flash"></div>

  <header
    id="commandbar"
    class="shrink-0 h-[130px] border-b border-border bg-background flex items-start px-4 pt-3 gap-4 select-none"
  >
    <div class="space-y-1" role="navigation" aria-label="Entities">
      <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Entities</div>
      <div class="grid grid-cols-4 gap-1">
        <a href="/agents" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Agents</a>
        <a href="/drafts" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Drafts</a>
        <a href="/players" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-primary text-primary-foreground border-primary shadow-sm">Players</a>
        <a href="/teams" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Teams</a>
        <a href="/trades" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Trades</a>
        <a href="/transactions" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Txns</a>
      </div>
    </div>

    <div class="h-20 w-px bg-border self-center"></div>

    <div class="flex items-start gap-4" role="group" aria-label="Players filters">
      <form class="min-w-[12rem] space-y-1" data-on:submit="<%= submit_search_expr %>">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Search</div>
        <div class="flex items-center gap-1.5">
          <input
            id="players-search-input"
            type="search"
            placeholder="name or player_id"
            class="w-36 h-7 rounded border border-border bg-background px-2 text-xs text-foreground placeholder:text-muted-foreground/70"
            value="<%= @query %>"
            data-bind="playerquery"
            data-on:keydown="if (evt.key === 'Enter') { evt.preventDefault(); <%= refresh_expr %>; }"
          />
          <button
            type="submit"
            class="cursor-pointer h-7 px-2 rounded border border-border bg-muted/40 text-[11px] text-foreground hover:bg-muted transition-colors"
          >Apply</button>
          <button
            type="button"
            class="cursor-pointer h-7 px-2 rounded border border-border bg-background text-[11px] text-muted-foreground hover:text-foreground transition-colors"
            data-on:click="<%= clear_search_expr %>"
          >Clear</button>
        </div>
      </form>

      <div class="min-w-[10rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Team lens</div>
        <select
          id="players-team-lens"
          class="h-7 w-44 rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="playerteam"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="ALL" <%= "selected" if @team_lens == "ALL" %>>All teams</option>
          <option value="FA" <%= "selected" if @team_lens == "FA" %>>Free agents</option>
          <% Array(@team_options).each do |team| %>
            <% code = team["team_code"].to_s.upcase %>
            <option value="<%= code %>" <%= "selected" if @team_lens == code %>><%= code %> · <%= team["team_name"] %></option>
          <% end %>
        </select>
      </div>

      <div class="min-w-[7rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Status lens</div>
        <div class="space-y-1">
          <% [
            ["all", "All"],
            ["two_way", "Two-Way"],
            ["restricted", "Restricted"],
            ["no_trade", "No-Trade"]
          ].each do |status_value, status_label| %>
            <label class="flex items-center gap-1.5 cursor-pointer">
              <input
                type="radio"
                name="players-status-lens"
                value="<%= status_value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @status_lens == status_value %>
                data-bind="playerstatus"
                data-on:change="if (el.checked) { <%= refresh_expr %>; }"
              />
              <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': $playerstatus === '<%= status_value %>', 'text-muted-foreground': $playerstatus !== '<%= status_value %>' }"><%= status_label %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="min-w-[10rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Constraint lens</div>
        <select
          id="players-constraint-lens"
          class="h-7 w-44 rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="playerconstraint"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="all" <%= "selected" if @constraint_lens == "all" %>>All commitments</option>
          <option value="lock_now" <%= "selected" if @constraint_lens == "lock_now" %>>Lock now (TR/NTC/consent)</option>
          <option value="options" <%= "selected" if @constraint_lens == "options" %>>Options ahead</option>
          <option value="non_guaranteed" <%= "selected" if @constraint_lens == "non_guaranteed" %>>Non-guaranteed years</option>
          <option value="trade_kicker" <%= "selected" if @constraint_lens == "trade_kicker" %>>Trade kicker</option>
          <option value="expiring" <%= "selected" if @constraint_lens == "expiring" %>>Expiring after horizon</option>
        </select>
      </div>

      <div class="min-w-[8rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Urgency lane</div>
        <div class="space-y-1">
          <% [["all", "All"], ["urgent", "Urgent"], ["upcoming", "Upcoming"], ["stable", "Stable"]].each do |urgency_value, urgency_label| %>
            <label class="flex items-center gap-1.5 cursor-pointer">
              <input
                type="radio"
                name="players-urgency-lens"
                value="<%= urgency_value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @urgency_lens == urgency_value %>
                data-bind="playerurgency"
                data-on:change="if (el.checked) { <%= refresh_expr %>; }"
              />
              <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': $playerurgency === '<%= urgency_value %>', 'text-muted-foreground': $playerurgency !== '<%= urgency_value %>' }"><%= urgency_label %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="min-w-[11rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Urgency focus</div>
        <select
          id="players-urgency-sub-lens"
          class="h-7 w-44 rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="playerurgencysub"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="all" <%= "selected" if @urgency_sub_lens == "all" %>>All triggers</option>
          <option value="option_only" <%= "selected" if @urgency_sub_lens == "option_only" %>>Option-only</option>
          <option value="expiring_only" <%= "selected" if @urgency_sub_lens == "expiring_only" %>>Expiring-only</option>
          <option value="non_guaranteed_only" <%= "selected" if @urgency_sub_lens == "non_guaranteed_only" %>>Non-guaranteed-only</option>
        </select>
      </div>

      <div class="min-w-[9rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Cap horizon</div>
        <div class="space-y-1">
          <% [2025, 2026, 2027].each do |horizon_year| %>
            <% horizon_label = format_year_label(horizon_year) %>
            <label class="flex items-center gap-1.5 cursor-pointer">
              <input
                id="players-cap-horizon-<%= horizon_year %>"
                type="radio"
                name="players-cap-horizon"
                value="<%= horizon_year %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @cap_horizon.to_i == horizon_year %>
                data-bind="playerhorizon"
                data-on:change="if (el.checked) { <%= refresh_expr %>; }"
              />
              <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': String($playerhorizon) === '<%= horizon_year %>', 'text-muted-foreground': String($playerhorizon) !== '<%= horizon_year %>' }">Cap <%= horizon_label %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="min-w-[7rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Sort</div>
        <div class="space-y-1">
          <% [
            ["cap_desc", "Cap ↓"],
            ["cap_asc", "Cap ↑"],
            ["name_asc", "Name A→Z"],
            ["name_desc", "Name Z→A"]
          ].each do |sort_value, sort_label| %>
            <label class="flex items-center gap-1.5 cursor-pointer">
              <input
                type="radio"
                name="players-sort-lens"
                value="<%= sort_value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @sort_lens == sort_value %>
                data-bind="playersort"
                data-on:change="if (el.checked) { <%= refresh_expr %>; }"
              />
              <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': $playersort === '<%= sort_value %>', 'text-muted-foreground': $playersort !== '<%= sort_value %>' }"><%= sort_label %></span>
            </label>
          <% end %>
        </div>
      </div>
    </div>

    <div class="h-20 w-px bg-border self-center ml-auto shrink-0"></div>
    <%= render partial: "shared/commandbar_navigation", locals: { active_destination: "players" } %>
  </header>

  <div id="viewport" class="flex flex-1 overflow-hidden relative">
    <%= render partial: "players/workspace_main" %>

    <aside
      id="rightpanel"
      class="w-[30%] min-w-[320px] max-w-[480px] border-l border-border bg-background overflow-hidden relative"
    >
      <div
        id="rightpanel-base-layer"
        class="absolute inset-0 overflow-y-auto overflow-x-hidden overscroll-y-contain scroll-touch pt-2 px-4 pb-4"
      >
        <%= render partial: "players/rightpanel_base" %>
      </div>

      <div id="rightpanel-overlay"></div>
    </aside>
  </div>
</div>
