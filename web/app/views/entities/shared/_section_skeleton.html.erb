<% section_id = local_assigns[:section_id].to_s %>
<% title = local_assigns[:title].to_s.presence || "Loading" %>
<% rows = local_assigns[:rows].to_i > 0 ? local_assigns[:rows].to_i : 3 %>

<section id="<%= section_id %>" class="space-y-3 animate-pulse">
  <h2 class="text-xs font-medium uppercase tracking-wide text-muted-foreground"><%= title %></h2>
  <div class="rounded-lg border border-border bg-background p-4 space-y-2">
    <% rows.times do %>
      <div class="h-3 rounded bg-muted/60"></div>
    <% end %>
  </div>
</section>
