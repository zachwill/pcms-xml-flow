<% content_for :title, "Draft selections" %>

<%# Avoid N+1 slug lookups in search results table %>
<% prefetch_canonical_slugs(entity_type: "draft_selection", entity_ids: @results.map { |r| r["transaction_id"] }) %>
<% prefetch_canonical_slugs(entity_type: "player", entity_ids: @results.map { |r| r["player_id"] }) %>

<main class="max-w-6xl mx-auto px-4 py-6 space-y-6">
  <header class="flex items-start justify-between gap-6 border-b border-border pb-4">
    <div class="min-w-0">
      <h1 class="text-2xl font-semibold truncate">Draft selections</h1>
      <p class="mt-1 text-sm text-muted-foreground">
        Historical draft picks (from <code>pcms.draft_selections</code>). This is scaffolding for player ↔ draft ↔ team navigation.
      </p>
    </div>

    <nav class="shrink-0 flex items-center gap-4">
      <a href="/players" class="text-sm text-muted-foreground hover:text-foreground hover:underline">Players</a>
      <a href="/teams" class="text-sm text-muted-foreground hover:text-foreground hover:underline">Teams</a>
      <a href="/tools/salary-book" class="text-sm text-muted-foreground hover:text-foreground hover:underline">Salary Book</a>
    </nav>
  </header>

  <section class="space-y-3">
    <h2 class="text-xs font-medium uppercase tracking-wide text-muted-foreground">Draft years</h2>

    <div class="flex flex-wrap gap-2">
      <% @years.each do |y| %>
        <div class="px-2 py-1 rounded border border-border bg-background text-xs text-muted-foreground">
          <span class="font-mono tabular-nums text-foreground"><%= y["draft_year"] %></span>
          <span class="ml-1">(<%= y["pick_count"] %>)</span>
        </div>
      <% end %>
    </div>
  </section>

  <section class="space-y-3">
    <h2 class="text-xs font-medium uppercase tracking-wide text-muted-foreground">Search</h2>

    <form action="/draft-selections" method="get" class="flex items-center gap-2">
      <input
        type="text"
        name="q"
        value="<%= @query %>"
        placeholder="Search by player name…"
        class="w-full px-3 py-2 rounded-md border border-border bg-background text-sm outline-none focus:ring-2 focus:ring-primary/20"
        autocomplete="off"
      />
      <button type="submit" class="cursor-pointer px-3 py-2 rounded-md bg-primary text-primary-foreground text-sm font-medium">Search</button>
    </form>

    <% if @query.present? %>
      <% if @results.empty? %>
        <div class="p-4 rounded-lg bg-muted/30 border border-border/50 text-sm text-muted-foreground italic">No picks found for <code><%= @query %></code>.</div>
      <% else %>
        <div class="overflow-x-auto rounded-lg border border-border">
          <table class="min-w-full text-sm">
            <thead class="bg-muted/50 text-xs text-muted-foreground">
              <tr>
                <th class="text-left px-3 py-2 font-medium">Pick</th>
                <th class="text-left px-3 py-2 font-medium">Player</th>
                <th class="text-left px-3 py-2 font-medium">Team</th>
                <th class="text-left px-3 py-2 font-medium">Date</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-border">
              <% @results.each do |r| %>
                <tr class="hover:bg-muted/30">
                  <td class="px-3 py-2 font-mono tabular-nums">
                    <a href="<%= draft_selection_href(r['transaction_id']) %>" class="font-medium hover:underline">
                      <%= r["draft_year"] %>-R<%= r["draft_round"] %>-P<%= r["pick_number"] %>
                    </a>
                  </td>
                  <td class="px-3 py-2">
                    <a href="<%= player_href(r['player_id']) %>" class="hover:underline"><%= r["player_name"] %></a>
                  </td>
                  <td class="px-3 py-2">
                    <% if r["drafting_team_code"].present? %>
                      <a href="<%= team_href(team_code: r['drafting_team_code']) %>" class="hover:underline"><%= r["drafting_team_code"] %></a>
                    <% else %>
                      <span class="text-muted-foreground">—</span>
                    <% end %>
                  </td>
                  <td class="px-3 py-2 text-muted-foreground font-mono tabular-nums">
                    <%= r["transaction_date"] || "—" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <p class="text-xs text-muted-foreground">
          Links prefer canonical slugs when known; otherwise they use the numeric fallback (<code>/draft-selections/:id</code>) which creates/promotes a canonical slug on demand.
        </p>
      <% end %>
    <% else %>
      <p class="text-sm text-muted-foreground">
        Enter a player name to find a draft pick (ex: <code>wembanyama</code>, <code>zion</code>, <code>antetokounmpo</code>).
      </p>
    <% end %>
  </section>
</main>
