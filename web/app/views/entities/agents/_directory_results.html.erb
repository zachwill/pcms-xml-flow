<% directory_kind = @directory_kind.to_s == "agencies" ? "agencies" : "agents" %>

<% if directory_kind == "agents" %>
  <% prefetch_canonical_slugs(entity_type: "agent", entity_ids: @agents.map { |a| a["agent_id"] }) %>
  <% prefetch_canonical_slugs(entity_type: "agency", entity_ids: @agents.map { |a| a["agency_id"] }) %>
<% else %>
  <% prefetch_canonical_slugs(entity_type: "agency", entity_ids: @agencies.map { |a| a["agency_id"] }) %>
<% end %>

<section id="entity-directory-results" class="space-y-3">
  <h2 class="text-xs font-medium uppercase tracking-wide text-muted-foreground">
    <%= directory_kind == "agents" ? "#{@agents.size} agents" : "#{@agencies.size} agencies" %>
  </h2>

  <% if directory_kind == "agents" %>
    <% if @agents.empty? %>
      <div class="p-4 rounded-lg bg-muted/30 border border-border/50 text-sm text-muted-foreground italic">No agents found.</div>
    <% else %>
      <div class="overflow-x-auto rounded-lg border border-border">
        <table class="entity-table min-w-full text-xs">
          <thead class="bg-muted/40 text-[10px] uppercase tracking-wide text-muted-foreground/90">
            <tr>
              <th class="text-left px-3 py-2 font-medium">Agent</th>
              <th class="text-left px-3 py-2 font-medium">Agency</th>
              <th class="text-right px-3 py-2 font-medium">Clients</th>
              <th class="text-right px-3 py-2 font-medium">Teams</th>
              <th class="text-right px-3 py-2 font-medium">Book '25</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <% @agents.each do |a| %>
              <%
                client_count = a["client_count"].to_i
                standard_count = a["standard_count"].to_i
                two_way_count = a["two_way_count"].to_i
                team_count = a["team_count"].to_i
                cap_total = a["cap_2025_total"].to_i
                client_count_percentile = a["client_count_percentile"]
                client_count_percentile_int = representation_percentile_int(client_count_percentile)
                book_percentile = a["cap_2025_total_percentile"]
                book_percentile_int = representation_percentile_int(book_percentile)
              %>
              <tr class="hover:bg-yellow-50/70 dark:hover:bg-yellow-900/10 transition-colors duration-75">
                <td class="px-3 py-2">
                  <div class="entity-cell-two-line">
                    <div class="entity-cell-primary">
                      <a href="<%= agent_href(a['agent_id']) %>" class="font-medium truncate hover:underline"><%= a["full_name"] %></a>
                    </div>
                    <div class="entity-cell-secondary">
                      <% if a["is_active"] == false %>
                        <span class="entity-chip entity-chip--muted">inactive</span>
                      <% end %>
                    </div>
                  </div>
                </td>
                <td class="px-3 py-2">
                  <% if a["agency_id"].present? && a["agency_name"].present? %>
                    <a href="<%= agency_href(a['agency_id']) %>" class="font-medium truncate hover:underline"><%= a["agency_name"] %></a>
                  <% elsif a["agency_name"].present? %>
                    <span class="font-medium truncate"><%= a["agency_name"] %></span>
                  <% else %>
                    <span class="text-muted-foreground">—</span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-right font-mono tabular-nums">
                  <% if client_count > 0 %>
                    <div class="space-y-0.5">
                      <div>
                        <span class="font-medium"><%= standard_count %></span><% if two_way_count > 0 %><span class="text-muted-foreground/70 ml-0.5">+<%= two_way_count %></span><% end %>
                      </div>
                      <% if client_count_percentile_int.present? %>
                        <div class="text-[10px] leading-none font-mono tabular-nums <%= representation_percentile_color_class(client_count_percentile) %>">P<%= client_count_percentile_int %></div>
                      <% end %>
                    </div>
                  <% else %>
                    <span class="text-muted-foreground">—</span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-right font-mono tabular-nums">
                  <% if team_count > 0 %>
                    <%= team_count %>
                  <% else %>
                    <span class="text-muted-foreground">—</span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-right font-mono tabular-nums">
                  <% if cap_total > 0 %>
                    <div class="space-y-0.5">
                      <div class="font-medium"><%= format_salary(cap_total) %></div>
                      <% if book_percentile_int.present? %>
                        <div class="text-[10px] leading-none font-mono tabular-nums <%= representation_percentile_color_class(book_percentile) %>">P<%= book_percentile_int %></div>
                      <% end %>
                    </div>
                  <% else %>
                    <span class="text-muted-foreground">—</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  <% else %>
    <% if @agencies.empty? %>
      <div class="p-4 rounded-lg bg-muted/30 border border-border/50 text-sm text-muted-foreground italic">No agencies found.</div>
    <% else %>
      <div class="overflow-x-auto rounded-lg border border-border">
        <table class="entity-table min-w-full text-xs">
          <thead class="bg-muted/40 text-[10px] uppercase tracking-wide text-muted-foreground/90">
            <tr>
              <th class="text-left px-3 py-2 font-medium">Agency</th>
              <th class="text-right px-3 py-2 font-medium">Agents</th>
              <th class="text-right px-3 py-2 font-medium">Clients</th>
              <th class="text-right px-3 py-2 font-medium">Book '25</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <% @agencies.each do |a| %>
              <%
                agent_count_percentile = a["agent_count_percentile"]
                agent_count_percentile_int = representation_percentile_int(agent_count_percentile)
                client_count_percentile = a["client_count_percentile"]
                client_count_percentile_int = representation_percentile_int(client_count_percentile)
                book_percentile = a["cap_2025_total_percentile"]
                book_percentile_int = representation_percentile_int(book_percentile)
              %>
              <tr class="hover:bg-yellow-50/70 dark:hover:bg-yellow-900/10 transition-colors duration-75">
                <td class="px-3 py-2">
                  <div class="entity-cell-two-line">
                    <div class="entity-cell-primary">
                      <a href="<%= agency_href(a['agency_id']) %>" class="font-medium truncate hover:underline"><%= a["agency_name"] %></a>
                    </div>
                    <div class="entity-cell-secondary">
                      <% if a["is_active"] == false %>
                        <span class="entity-chip entity-chip--muted">inactive</span>
                      <% end %>
                    </div>
                  </div>
                </td>
                <td class="px-3 py-2 text-right font-mono tabular-nums">
                  <% if a["agent_count"].to_i > 0 %>
                    <div class="space-y-0.5">
                      <div><%= a["agent_count"] %></div>
                      <% if agent_count_percentile_int.present? %>
                        <div class="text-[10px] leading-none <%= representation_percentile_color_class(agent_count_percentile) %>">P<%= agent_count_percentile_int %></div>
                      <% end %>
                    </div>
                  <% else %>
                    <span class="text-muted-foreground">—</span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-right font-mono tabular-nums">
                  <% if a["client_count"].to_i > 0 %>
                    <div class="space-y-0.5">
                      <div><%= a["client_count"] %></div>
                      <% if client_count_percentile_int.present? %>
                        <div class="text-[10px] leading-none <%= representation_percentile_color_class(client_count_percentile) %>">P<%= client_count_percentile_int %></div>
                      <% end %>
                    </div>
                  <% else %>
                    <span class="text-muted-foreground">—</span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-right font-mono tabular-nums">
                  <% if a["cap_2025_total"].to_i > 0 %>
                    <div class="space-y-0.5">
                      <div class="font-medium"><%= format_salary(a["cap_2025_total"]) %></div>
                      <% if book_percentile_int.present? %>
                        <div class="text-[10px] leading-none <%= representation_percentile_color_class(book_percentile) %>">P<%= book_percentile_int %></div>
                      <% end %>
                    </div>
                  <% else %>
                    <span class="text-muted-foreground">—</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  <% end %>
</section>
