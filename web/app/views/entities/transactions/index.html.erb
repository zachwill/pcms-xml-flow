<% content_for :title, "Transactions" %>

<%
  pane_query_expr = "'q=' + encodeURIComponent($txnquery) +
    '&daterange=' + encodeURIComponent($txndaterange) +
    '&team=' + encodeURIComponent($txnteam) +
    '&signings=' + ($txnsignings ? '1' : '0') +
    '&waivers=' + ($txnwaivers ? '1' : '0') +
    '&extensions=' + ($txnextensions ? '1' : '0') +
    '&other=' + ($txnother ? '1' : '0')"

  selected_overlay_query_expr = "'selected_type=' + encodeURIComponent($overlaytype) +
    '&selected_id=' + encodeURIComponent($overlayid)"
  refresh_query_expr = "(#{pane_query_expr}) + '&' + (#{selected_overlay_query_expr})"

  refresh_expr = "@get('/transactions/sse/refresh?' + (#{refresh_query_expr})); window.history.replaceState({}, '', '/transactions?' + (#{pane_query_expr}))"
  submit_search_expr = "evt.preventDefault(); #{refresh_expr}"
  clear_search_expr = "$txnquery = ''; #{refresh_expr}"

  signals_literal = "{ txnquery: #{@query.to_s.to_json}, txndaterange: #{@daterange.to_json}, txnteam: #{(@team || '').to_json}, txnsignings: #{@signings.to_json}, txnwaivers: #{@waivers.to_json}, txnextensions: #{@extensions.to_json}, txnother: #{@other.to_json}, overlaytype: 'none', overlayid: '' }"
%>

<div id="transactions-workspace" class="h-screen w-screen flex flex-col overflow-hidden bg-background" data-signals="<%= signals_literal %>">
  <div id="flash"></div>

  <header
    id="commandbar"
    class="shrink-0 h-[130px] border-b border-border bg-background flex items-start px-4 pt-3 gap-4 select-none"
  >
    <div class="space-y-1" role="navigation" aria-label="Entities">
      <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Entities</div>
      <div class="grid grid-cols-4 gap-1">
        <a href="/agents" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Agents</a>
        <a href="/drafts" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Drafts</a>
        <a href="/players" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Players</a>
        <a href="/teams" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Teams</a>
        <a href="/trades" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Trades</a>
        <a href="/transactions" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-primary text-primary-foreground border-primary shadow-sm">Txns</a>
      </div>
    </div>

    <div class="h-20 w-px bg-border self-center"></div>

    <div class="flex items-start gap-4" role="group" aria-label="Transactions filters">
      <form class="min-w-[15rem] space-y-1" data-on:submit="<%= submit_search_expr %>">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Intent search</div>
        <div class="flex items-center gap-1.5">
          <input
            id="transactions-search-input"
            type="search"
            placeholder="player, team, txn id, text"
            class="w-48 h-7 rounded border border-border bg-background px-2 text-xs text-foreground placeholder:text-muted-foreground/70"
            value="<%= @query %>"
            data-bind="txnquery"
            data-on:keydown="if (evt.key === 'Enter') { evt.preventDefault(); <%= refresh_expr %>; }"
          />
          <button
            type="submit"
            class="cursor-pointer h-7 px-2 rounded border border-border bg-muted/40 text-[11px] text-foreground hover:bg-muted transition-colors"
          >Apply</button>
          <button
            type="button"
            class="cursor-pointer h-7 px-2 rounded border border-border bg-background text-[11px] text-muted-foreground hover:text-foreground transition-colors"
            data-on:click="<%= clear_search_expr %>"
          >Clear</button>
        </div>
      </form>

      <div class="min-w-[7.5rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Date range</div>
        <div class="space-y-1">
          <% [["today", "Today"], ["week", "This Week"], ["month", "This Month"], ["season", "This Season"], ["all", "All"]].each do |value, label| %>
            <label class="flex items-center gap-1.5 cursor-pointer">
              <input
                type="radio"
                name="txn-daterange"
                value="<%= value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @daterange == value %>
                data-bind="txndaterange"
                data-on:change="if (el.checked) { <%= refresh_expr %>; }"
              />
              <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': $txndaterange === '<%= value %>', 'text-muted-foreground': $txndaterange !== '<%= value %>' }"><%= label %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="min-w-[11rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Team</div>
        <select
          id="transactions-team-select"
          class="h-7 w-52 rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="txnteam"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="" <%= "selected" if @team.blank? %>>All teams</option>
          <% Array(@team_options).each do |team| %>
            <% code = team["team_code"].to_s.upcase %>
            <option value="<%= code %>" <%= "selected" if @team == code %>><%= code %> Â· <%= team["team_name"] %></option>
          <% end %>
        </select>
      </div>

      <div class="min-w-[7.5rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Type</div>
        <div class="space-y-1">
          <div class="flex items-center gap-1.5">
            <input
              type="checkbox"
              id="txn-type-signings"
              class="size-3.5 accent-primary"
              <%= "checked" if @signings %>
              data-bind="txnsignings"
              data-on:change="<%= refresh_expr %>"
            />
            <label for="txn-type-signings" class="text-[11px] leading-none cursor-pointer select-none text-foreground/80 hover:text-foreground transition-colors">Signings</label>
          </div>

          <div class="flex items-center gap-1.5">
            <input
              type="checkbox"
              id="txn-type-waivers"
              class="size-3.5 accent-primary"
              <%= "checked" if @waivers %>
              data-bind="txnwaivers"
              data-on:change="<%= refresh_expr %>"
            />
            <label for="txn-type-waivers" class="text-[11px] leading-none cursor-pointer select-none text-foreground/80 hover:text-foreground transition-colors">Waivers</label>
          </div>

          <div class="flex items-center gap-1.5">
            <input
              type="checkbox"
              id="txn-type-extensions"
              class="size-3.5 accent-primary"
              <%= "checked" if @extensions %>
              data-bind="txnextensions"
              data-on:change="<%= refresh_expr %>"
            />
            <label for="txn-type-extensions" class="text-[11px] leading-none cursor-pointer select-none text-foreground/80 hover:text-foreground transition-colors">Extensions</label>
          </div>

          <div class="flex items-center gap-1.5">
            <input
              type="checkbox"
              id="txn-type-other"
              class="size-3.5 accent-primary"
              <%= "checked" if @other %>
              data-bind="txnother"
              data-on:change="<%= refresh_expr %>"
            />
            <label for="txn-type-other" class="text-[11px] leading-none cursor-pointer select-none text-foreground/80 hover:text-foreground transition-colors">Other</label>
          </div>
        </div>
      </div>
    </div>

    <div class="h-20 w-px bg-border self-center ml-auto shrink-0"></div>
    <%= render partial: "shared/commandbar_navigation", locals: { active_destination: "transactions" } %>
  </header>

  <div id="viewport" class="flex flex-1 overflow-hidden relative">
    <main id="maincanvas" class="flex-1 min-w-0 overflow-y-auto overflow-x-hidden bg-background px-4 py-4">
      <%= render partial: "entities/transactions/results" %>
    </main>

    <aside
      id="rightpanel"
      class="w-[30%] min-w-[320px] max-w-[480px] border-l border-border bg-background overflow-hidden relative"
    >
      <div
        id="rightpanel-base-layer"
        class="absolute inset-0 overflow-y-auto overflow-x-hidden overscroll-y-contain scroll-touch pt-2 px-4 pb-4"
      >
        <%= render partial: "entities/transactions/rightpanel_base" %>
      </div>

      <div id="rightpanel-overlay"></div>
    </aside>
  </div>
</div>
