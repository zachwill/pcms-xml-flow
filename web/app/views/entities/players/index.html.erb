<% content_for :title, "Players" %>

<main class="max-w-5xl mx-auto px-4 py-6 space-y-6">
  <header class="flex items-start justify-between gap-6 border-b border-border pb-4">
    <div class="min-w-0">
      <h1 class="text-2xl font-semibold truncate">Players</h1>
      <p class="mt-1 text-sm text-muted-foreground">
        Salary-book-backed player search (scaffolding).
      </p>
    </div>

    <nav class="shrink-0 flex items-center gap-4">
      <a href="/teams" class="text-sm text-muted-foreground hover:text-foreground hover:underline">Teams</a>
      <a href="/agents" class="text-sm text-muted-foreground hover:text-foreground hover:underline">Agents</a>
      <a href="/tools/salary-book" class="text-sm text-muted-foreground hover:text-foreground hover:underline">Salary Book</a>
    </nav>
  </header>

  <section class="space-y-3">
    <form action="/players" method="get" class="flex items-center gap-2">
      <input
        type="text"
        name="q"
        value="<%= @query %>"
        placeholder="Search players (name or id)…"
        class="w-full px-3 py-2 rounded-md border border-border bg-background text-sm outline-none focus:ring-2 focus:ring-primary/20"
        autocomplete="off"
      />
      <button
        type="submit"
        class="cursor-pointer px-3 py-2 rounded-md bg-primary text-primary-foreground text-sm font-medium"
      >Search</button>
    </form>

    <% if @query.blank? %>
      <p class="text-sm text-muted-foreground">
        Tip: try <code>lebron</code>, <code>curry</code>, or a numeric <code>player_id</code>.
      </p>
    <% end %>
  </section>

  <section class="space-y-3">
    <h2 class="text-xs font-medium uppercase tracking-wide text-muted-foreground">Results</h2>

    <% if @players.empty? %>
      <div class="p-4 rounded-lg bg-muted/30 border border-border/50 text-sm text-muted-foreground italic">
        No players found.
      </div>
    <% else %>
      <div class="overflow-x-auto rounded-lg border border-border">
        <table class="min-w-full text-sm">
          <thead class="bg-muted/50 text-xs text-muted-foreground">
            <tr>
              <th class="text-left px-3 py-2 font-medium">Player</th>
              <th class="text-left px-3 py-2 font-medium">Team</th>
              <th class="text-left px-3 py-2 font-medium">Agent</th>
              <th class="text-right px-3 py-2 font-medium">Cap 2025</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <% @players.each do |p| %>
              <tr class="hover:bg-muted/30">
                <td class="px-3 py-2">
                  <a href="/players/<%= p['player_id'] %>" class="font-medium hover:underline">
                    <%= p["player_name"] %>
                  </a>
                  <div class="text-xs text-muted-foreground">id: <code><%= p["player_id"] %></code></div>
                </td>

                <td class="px-3 py-2">
                  <% if p["team_code"].present? %>
                    <a href="/teams/<%= p['team_code'].to_s.downcase %>" class="hover:underline">
                      <%= p["team_code"] %>
                    </a>
                    <% if p["team_name"].present? %>
                      <div class="text-xs text-muted-foreground truncate"><%= p["team_name"] %></div>
                    <% end %>
                  <% else %>
                    <span class="text-muted-foreground">—</span>
                  <% end %>
                </td>

                <td class="px-3 py-2">
                  <% if p["agent_id"].present? && p["agent_name"].present? %>
                    <a href="/agents/<%= p['agent_id'] %>" class="hover:underline"><%= p["agent_name"] %></a>
                  <% elsif p["agent_name"].present? %>
                    <span><%= p["agent_name"] %></span>
                  <% else %>
                    <span class="text-muted-foreground">—</span>
                  <% end %>
                </td>

                <td class="px-3 py-2 text-right font-mono tabular-nums">
                  <%= p["cap_2025"].present? ? format_salary(p["cap_2025"]) : "—" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <p class="text-xs text-muted-foreground">
        Note: player links use the numeric fallback (<code>/players/:id</code>) which creates/promotes a canonical slug on demand.
      </p>
    <% end %>
  </section>
</main>
