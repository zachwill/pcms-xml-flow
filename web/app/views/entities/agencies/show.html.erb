<% content_for :title, @agency&.fetch("agency_name", nil) || "Agency" %>

<% agency_name = @agency&.fetch("agency_name", nil).to_s %>

<%# Avoid N+1 slug lookups in agents table %>
<% prefetch_canonical_slugs(entity_type: "agent", entity_ids: @agents.map { |a| a["agent_id"] }) %>

<main class="max-w-6xl mx-auto px-4 py-6 space-y-6">
  <%= render partial: "entities/shared/entity_header", locals: {
    title: (agency_name.presence || "Agency"),
    subtitle: ("agency_id: #{@agency_id} Â· slug: #{@agency_slug}" + (@agency["is_active"] == false ? " Â· inactive" : "")),
    breadcrumbs: [["Agencies", "/agencies"], [agency_name.presence || "Agency", nil]],
    search_scope: "agencies",
    salary_book_label: "Open Salary Book",
    right_links: [["Browse Agents", "/agents"]]
  } %>

  <section class="space-y-3">
    <h2 class="text-xs font-medium uppercase tracking-wide text-muted-foreground">Agents</h2>

    <% if @agents.empty? %>
      <div class="p-4 rounded-lg bg-muted/30 border border-border/50 text-sm text-muted-foreground italic">No agents found.</div>
    <% else %>
      <div class="overflow-x-auto rounded-lg border border-border">
        <table class="min-w-full text-sm">
          <thead class="bg-muted/50 text-xs text-muted-foreground">
            <tr>
              <th class="text-left px-3 py-2 font-medium">Agent</th>
              <th class="text-right px-3 py-2 font-medium">agent_id</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <% @agents.each do |a| %>
              <tr class="hover:bg-muted/30">
                <td class="px-3 py-2">
                  <a href="<%= agent_href(a['agent_id']) %>" class="font-medium hover:underline"><%= a["full_name"] %></a>
                  <% if a["is_active"] == false %>
                    <span class="ml-2 text-xs px-1.5 py-0.5 rounded bg-muted text-muted-foreground">inactive</span>
                  <% end %>
                </td>
                <td class="px-3 py-2 text-right font-mono tabular-nums text-muted-foreground"><%= a["agent_id"] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </section>

  <%= render partial: "entities/shared/known_slugs", locals: { entity_type: "agency", entity_id: @agency_id, path_prefix: "agencies" } %>
</main>
