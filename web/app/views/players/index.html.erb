<% content_for :title, "Players" %>

<%
  pane_query_expr = "'q=' + encodeURIComponent($playerquery || '') +
    '&team=' + encodeURIComponent($playerteam || 'ALL') +
    '&status=' + encodeURIComponent($playerstatus || 'all') +
    '&constraint=' + encodeURIComponent($playerconstraint || 'all') +
    '&horizon=' + encodeURIComponent($playerhorizon || '2025') +
    '&sort=' + encodeURIComponent($playersort || 'cap_desc')"

  selected_overlay_query_expr = "'selected_id=' + encodeURIComponent($overlaytype === 'player' ? $selectedplayerid : '')"
  refresh_query_expr = "(#{pane_query_expr}) + '&' + (#{selected_overlay_query_expr})"

  refresh_expr = "$playerurgency = 'all'; $playerurgencysub = 'all'; @get('/players/sse/refresh?' + (#{refresh_query_expr})); const nextUrl = '/players?' + (#{pane_query_expr}); if ((window.location.pathname + window.location.search) !== nextUrl) { window.history.replaceState({}, '', nextUrl); }"

  apply_search_expr = "if ((evt.key || '') === 'Enter') { evt.preventDefault(); #{refresh_expr}; }"
  clear_search_expr = "$playerquery = ''; #{refresh_expr}"
  reset_filters_expr = "$playerquery = ''; $playerteam = 'ALL'; $playerstatus = 'all'; $playerconstraint = 'all'; $playerhorizon = '2025'; $playersort = 'cap_desc'; #{refresh_expr}"

  signals_literal = "{ playerquery: #{@query.to_json}, playerteam: #{@team_lens.to_json}, playerstatus: #{@status_lens.to_json}, playerconstraint: #{@constraint_lens.to_json}, playerurgency: #{'all'.to_json}, playerurgencysub: #{'all'.to_json}, playerhorizon: #{@cap_horizon.to_s.to_json}, playersort: #{@sort_lens.to_json}, selectedplayerid: #{@selected_player_id.to_s.to_json}, overlaytype: #{@selected_player_id.present? ? 'player'.to_json : ''.to_json} }"

  summary = @sidebar_summary || {}
%>

<div id="players-workspace" class="h-screen w-full flex flex-col overflow-hidden bg-background" style="height: 100dvh;" data-signals="<%= signals_literal %>">
  <div id="flash"></div>

  <header
    id="commandbar"
    class="shrink-0 h-[130px] border-b border-border bg-background px-4 pt-3 flex items-start gap-4 select-none"
  >
    <div class="flex items-start min-w-0 overflow-x-auto pb-1" role="group" aria-label="Players filters">
      <div class="min-w-[15rem] w-[15rem] space-y-1.5">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Search Players</div>

        <input
          type="text"
          value="<%= @query %>"
          placeholder="Player name or id"
          class="h-7 w-full rounded border border-border bg-background px-2 text-xs text-foreground outline-none focus-visible:border-foreground"
          data-bind="playerquery"
          data-on:keydown="<%= apply_search_expr %>"
        />

        <div class="flex items-center gap-1.5">
          <button
            type="button"
            class="cursor-pointer h-7 px-2 rounded border border-border bg-muted/40 text-[11px] font-medium text-foreground hover:bg-muted transition-colors"
            data-on:click="<%= refresh_expr %>"
          >Apply</button>

          <button
            type="button"
            class="cursor-pointer h-7 px-2 rounded border border-border bg-background text-[11px] text-muted-foreground hover:text-foreground hover:bg-muted/40 transition-colors"
            data-on:click="<%= clear_search_expr %>"
          >Clear</button>

          <button
            type="button"
            class="cursor-pointer h-7 px-2 rounded border border-border bg-background text-[11px] text-muted-foreground hover:text-foreground hover:bg-muted/40 transition-colors"
            data-on:click="<%= reset_filters_expr %>"
          >Reset</button>
        </div>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0 mx-3"></div>

      <div class="min-w-[13rem] w-[13rem] space-y-1.5">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Team</div>
        <select
          id="players-team-lens"
          class="h-7 w-full rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="playerteam"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="ALL" <%= "selected" if @team_lens == "ALL" %>>All teams</option>
          <option value="FA" <%= "selected" if @team_lens == "FA" %>>Free agents</option>
          <% Array(@team_options).each do |team| %>
            <% code = team["team_code"].to_s.upcase %>
            <option value="<%= code %>" <%= "selected" if @team_lens == code %>><%= code %> · <%= team["team_name"] %></option>
          <% end %>
        </select>

        <div class="space-y-1">
          <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Horizon</div>
          <div class="flex items-center gap-2">
            <% [2025, 2026, 2027].each do |horizon_year| %>
              <% horizon_label = format_year_label(horizon_year) %>
              <label class="flex items-center gap-1 cursor-pointer">
                <input
                  id="players-cap-horizon-<%= horizon_year %>"
                  type="radio"
                  name="players-cap-horizon"
                  value="<%= horizon_year %>"
                  class="size-3.5 accent-primary"
                  <%= "checked" if @cap_horizon.to_i == horizon_year %>
                  data-bind="playerhorizon"
                  data-on:change="if (el.checked) { <%= refresh_expr %>; }"
                />
                <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': String($playerhorizon) === '<%= horizon_year %>', 'text-muted-foreground': String($playerhorizon) !== '<%= horizon_year %>' }"><%= horizon_label %></span>
              </label>
            <% end %>
          </div>
        </div>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0 mx-3"></div>

      <div class="min-w-[11rem] w-[11rem] space-y-1.5">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Status</div>
        <div class="grid grid-cols-2 gap-x-2 gap-y-1">
          <% [
            ["all", "All"],
            ["two_way", "Two-Way"],
            ["restricted", "Restricted"],
            ["no_trade", "No-Trade"]
          ].each do |status_value, status_label| %>
            <label class="flex items-center gap-1.5 cursor-pointer">
              <input
                type="radio"
                name="players-status-lens"
                value="<%= status_value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @status_lens == status_value %>
                data-bind="playerstatus"
                data-on:change="if (el.checked) { <%= refresh_expr %>; }"
              />
              <span class="text-[11px] leading-none select-none whitespace-nowrap" data-class="{ 'text-foreground font-semibold': $playerstatus === '<%= status_value %>', 'text-muted-foreground': $playerstatus !== '<%= status_value %>' }"><%= status_label %></span>
            </label>
          <% end %>
        </div>

        <div class="space-y-1">
          <label for="players-constraint-lens" class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Contract Lens</label>
          <select
            id="players-constraint-lens"
            class="h-7 w-full rounded border border-border bg-background px-2 text-xs text-foreground"
            data-bind="playerconstraint"
            data-on:change="<%= refresh_expr %>"
          >
            <option value="all" <%= "selected" if @constraint_lens == "all" %>>All commitments</option>
            <option value="lock_now" <%= "selected" if @constraint_lens == "lock_now" %>>Lock now (TR/NTC/consent)</option>
            <option value="options" <%= "selected" if @constraint_lens == "options" %>>Options ahead</option>
            <option value="non_guaranteed" <%= "selected" if @constraint_lens == "non_guaranteed" %>>Non-guaranteed years</option>
            <option value="trade_kicker" <%= "selected" if @constraint_lens == "trade_kicker" %>>Trade kicker</option>
            <option value="expiring" <%= "selected" if @constraint_lens == "expiring" %>>Expiring after horizon</option>
          </select>
        </div>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0 mx-3"></div>

      <div id="players-sort" class="min-w-[11rem] w-[11rem] space-y-1.5">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Sort By</div>
        <div class="grid grid-cols-2 gap-x-2 gap-y-1">
          <% [
            ["cap_desc", "Cap ↓"],
            ["cap_asc", "Cap ↑"],
            ["name_asc", "Name A→Z"],
            ["name_desc", "Name Z→A"]
          ].each do |sort_value, sort_label| %>
            <label class="flex items-center gap-1.5 cursor-pointer">
              <input
                type="radio"
                name="players-sort-lens"
                value="<%= sort_value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @sort_lens == sort_value %>
                data-bind="playersort"
                data-on:change="if (el.checked) { <%= refresh_expr %>; }"
              />
              <span class="text-[11px] leading-none select-none whitespace-nowrap" data-class="{ 'text-foreground font-semibold': $playersort === '<%= sort_value %>', 'text-muted-foreground': $playersort !== '<%= sort_value %>' }"><%= sort_label %></span>
            </label>
          <% end %>
        </div>

        <div class="text-[10px] text-muted-foreground/80 tabular-nums">
          <span class="font-medium text-foreground"><%= summary[:row_count].to_i %></span>
          rows · <%= summary[:team_count].to_i %> teams
        </div>
      </div>
    </div>

    <div class="h-20 w-px bg-border self-center ml-auto shrink-0"></div>
    <%= render partial: "shared/commandbar_navigation", locals: { active_destination: "players" } %>
  </header>

  <div id="viewport" class="flex flex-1 overflow-hidden relative">
    <%= render partial: "players/workspace_main" %>

    <aside
      id="rightpanel"
      class="w-[30%] min-w-[320px] max-w-[480px] border-l border-border bg-background overflow-hidden relative"
    >
      <div
        id="rightpanel-base-layer"
        class="absolute inset-0 overflow-y-auto overflow-x-hidden overscroll-y-contain scroll-touch pt-2 px-4 pb-4 transition-opacity duration-300"
      >
        <%= render partial: "players/rightpanel_base" %>
      </div>

      <div id="rightpanel-overlay"></div>
    </aside>
  </div>
</div>
