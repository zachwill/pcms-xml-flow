<% content_for :title, "Draft selections" %>

<%
  initial_overlay_type = @initial_overlay_type.to_s.presence || "none"
  initial_overlay_id = @initial_overlay_id.to_s

  pane_query_expr = "'q=' + encodeURIComponent($draftselectionquery) +
    '&year=' + encodeURIComponent($draftselectionyear) +
    '&round=' + encodeURIComponent($draftselectionround) +
    '&team=' + encodeURIComponent($draftselectionteam) +
    '&sort=' + encodeURIComponent($draftselectionsort) +
    '&lens=' + encodeURIComponent($draftselectionlens)"

  refresh_query_expr = "(#{pane_query_expr}) +
    '&selected_id=' + encodeURIComponent($overlayid)"

  refresh_expr = "@get('/draft-selections/sse/refresh?' + (#{refresh_query_expr})); window.history.replaceState({}, '', '/draft-selections?' + (#{pane_query_expr}))"
  submit_search_expr = "evt.preventDefault(); #{refresh_expr}"
  clear_search_expr = "$draftselectionquery = ''; #{refresh_expr}"

  signals_literal = "{ draftselectionquery: #{@query.to_json}, draftselectionyear: #{@year_lens.to_json}, draftselectionround: #{@round_lens.to_json}, draftselectionteam: #{@team_lens.to_json}, draftselectionsort: #{@sort.to_json}, draftselectionlens: #{@lens.to_json}, overlaytype: #{initial_overlay_type.to_json}, overlayid: #{initial_overlay_id.to_json} }"
%>

<div id="draft-selections-workspace" class="h-screen w-screen flex flex-col overflow-hidden bg-background" data-signals="<%= signals_literal %>">
  <div id="flash"></div>

  <header
    id="commandbar"
    class="shrink-0 h-[130px] border-b border-border bg-background flex items-start px-4 pt-3 gap-4 select-none"
  >
    <div class="space-y-1" role="navigation" aria-label="Entities">
      <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Entities</div>
      <div class="grid grid-cols-4 gap-1">
        <a href="/agents" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Agents</a>
        <a href="/drafts" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Drafts</a>
        <a href="/draft-selections" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-primary text-primary-foreground border-primary shadow-sm">Selections</a>
        <a href="/players" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Players</a>
        <a href="/teams" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Teams</a>
        <a href="/trades" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Trades</a>
        <a href="/transactions" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Txns</a>
      </div>
    </div>

    <div class="h-20 w-px bg-border self-center"></div>

    <div class="flex items-start gap-4" role="group" aria-label="Draft selections filters">
      <form class="min-w-[13rem] space-y-1" data-on:submit="<%= submit_search_expr %>">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Search</div>
        <div class="flex items-center gap-1.5">
          <input
            id="draft-selections-search-input"
            type="search"
            placeholder="player, team, or id"
            class="w-44 h-7 rounded border border-border bg-background px-2 text-xs text-foreground placeholder:text-muted-foreground/70"
            value="<%= @query %>"
            data-bind="draftselectionquery"
            data-on:keydown="if (evt.key === 'Enter') { evt.preventDefault(); <%= refresh_expr %>; }"
          />
          <button
            type="submit"
            class="cursor-pointer h-7 px-2 rounded border border-border bg-muted/40 text-[11px] text-foreground hover:bg-muted transition-colors"
          >Apply</button>
          <button
            type="button"
            class="cursor-pointer h-7 px-2 rounded border border-border bg-background text-[11px] text-muted-foreground hover:text-foreground transition-colors"
            data-on:click="<%= clear_search_expr %>"
          >Clear</button>
        </div>
      </form>

      <div class="min-w-[7rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Year</div>
        <select
          id="draft-selections-year-select"
          class="h-7 w-24 rounded border border-border bg-background px-2 text-xs text-foreground font-mono tabular-nums"
          data-bind="draftselectionyear"
          data-on:change="<%= refresh_expr %>"
        >
          <% Array(@year_options).each do |year| %>
            <option value="<%= year %>" <%= "selected" if @year_lens.to_s == year.to_s %>><%= year %></option>
          <% end %>
        </select>
      </div>

      <div class="min-w-[6.5rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Round</div>
        <div class="space-y-1">
          <% [["all", "All"], ["1", "1st"], ["2", "2nd"]].each do |value, label| %>
            <label class="flex items-center gap-1.5 cursor-pointer">
              <input
                type="radio"
                name="draft-selection-round"
                value="<%= value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @round_lens == value %>
                data-bind="draftselectionround"
                data-on:change="if (el.checked) { <%= refresh_expr %>; }"
              />
              <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': $draftselectionround === '<%= value %>', 'text-muted-foreground': $draftselectionround !== '<%= value %>' }"><%= label %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="min-w-[13rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Sort</div>
        <select
          id="draft-selections-sort-select"
          class="h-7 w-56 rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="draftselectionsort"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="provenance" <%= "selected" if @sort == "provenance" %>>Deepest provenance chain</option>
          <option value="trade" <%= "selected" if @sort == "trade" %>>With trade first</option>
          <option value="board" <%= "selected" if @sort == "board" %>>Board order (round/pick)</option>
        </select>
      </div>

      <div class="min-w-[12rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Provenance lens</div>
        <select
          id="draft-selections-lens-select"
          class="h-7 w-48 rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="draftselectionlens"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="all" <%= "selected" if @lens == "all" %>>All rows</option>
          <option value="with_trade" <%= "selected" if @lens == "with_trade" %>>Trade-active only (trade or P1+)</option>
          <option value="deep_chain" <%= "selected" if @lens == "deep_chain" %>>Deep chain only (P2+)</option>
        </select>
      </div>

      <div class="min-w-[11rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Drafting team</div>
        <select
          id="draft-selections-team-select"
          class="h-7 w-52 rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="draftselectionteam"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="" <%= "selected" if @team_lens.blank? %>>All teams</option>
          <% Array(@team_options).each do |team| %>
            <% code = team["team_code"].to_s.upcase %>
            <option value="<%= code %>" <%= "selected" if @team_lens == code %>><%= code %> Â· <%= team["team_name"] %></option>
          <% end %>
        </select>
      </div>
    </div>

    <div class="h-20 w-px bg-border self-center ml-auto shrink-0"></div>
    <%= render partial: "shared/commandbar_navigation", locals: { active_destination: "draft_selections" } %>
  </header>

  <div id="viewport" class="flex flex-1 overflow-hidden relative">
    <main id="maincanvas" class="flex-1 min-w-0 overflow-y-auto overflow-x-hidden bg-background">
      <%= render partial: "draft_selections/workspace_main" %>
    </main>

    <aside
      id="rightpanel"
      class="w-[30%] min-w-[320px] max-w-[480px] border-l border-border bg-background overflow-hidden relative"
    >
      <div
        id="rightpanel-base-layer"
        class="absolute inset-0 overflow-y-auto overflow-x-hidden overscroll-y-contain scroll-touch pt-2 px-4 pb-4"
      >
        <%= render partial: "draft_selections/rightpanel_base" %>
      </div>

      <% if @initial_overlay_partial.present? %>
        <%= render partial: @initial_overlay_partial, locals: (@initial_overlay_locals || {}) %>
      <% else %>
        <div id="rightpanel-overlay"></div>
      <% end %>
    </aside>
  </div>
</div>
