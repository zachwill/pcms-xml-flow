<% rows ||= [] %>
<% selected_year ||= nil %>
<% baseline_year ||= nil %>
<% baseline_rows ||= [] %>

<% baseline_year_i = baseline_year.present? ? baseline_year.to_i : nil %>
<% baseline_label = baseline_year_i ? format_year_label(baseline_year_i) : "—" %>
<% baseline_rows_by_bracket = baseline_rows.index_by { |row| [row["lower_limit"]&.to_f, row["upper_limit"]&.to_f] } %>

<% format_currency_delta = lambda do |delta|
  if delta.nil?
    "n/a"
  elsif delta.to_f.zero?
    "±$0K"
  else
    prefix = delta.to_f.positive? ? "+" : ""
    "#{prefix}#{format_compact_currency(delta)}"
  end
end %>

<% format_rate_delta = lambda do |delta|
  if delta.nil?
    "n/a"
  elsif delta.to_f.zero?
    "±0.00x"
  else
    prefix = delta.to_f.positive? ? "+" : ""
    "#{prefix}#{format('%.2f', delta.to_f)}x"
  end
end %>

<section data-show="$showtaxrates">
  <div class="overflow-x-auto">
    <div class="min-w-[980px]">
      <div class="sticky top-0 z-30 bg-background will-change-transform shadow-[0_1px_3px_0_rgb(0_0_0/0.08),0_1px_2px_-1px_rgb(0_0_0/0.08)]">
        <div class="h-9 flex items-center border-b border-border bg-muted px-4">
          <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/80">League Tax Rates</div>
          <div class="ml-auto text-[10px] text-muted-foreground/70 tabular-nums">Δ vs <%= baseline_label %> · <%= rows.length %> brackets</div>
        </div>

        <div class="h-8 flex items-center border-b border-border bg-background text-[10px] uppercase tracking-wide font-medium text-muted-foreground/90 select-none cursor-default">
          <div class="w-36 shrink-0 pl-4 sticky left-0 z-[2] bg-background relative before:absolute before:right-0 before:top-0 before:bottom-0 before:w-[6px] before:bg-gradient-to-r before:from-[rgba(0,0,0,0.08)] before:to-transparent after:absolute after:right-0 after:top-0 after:bottom-0 after:w-px after:bg-border/60">Season</div>
          <div class="w-28 shrink-0 text-right pr-3">Lower</div>
          <div class="w-28 shrink-0 text-right pr-3">Upper</div>
          <div class="w-28 shrink-0 text-right pr-3">Rate (NR)</div>
          <div class="w-28 shrink-0 text-right pr-3">Rate (R)</div>
          <div class="w-32 shrink-0 text-right pr-3">Base (NR)</div>
          <div class="w-32 shrink-0 text-right pr-3">Base (R)</div>
        </div>
      </div>

      <% if rows.empty? %>
        <div class="h-10 px-4 flex items-center text-xs text-muted-foreground border-b border-border/50 italic">No rows in selected range.</div>
      <% else %>
        <div class="divide-y divide-border">
          <% rows.each do |row| %>
            <% row_year = row["salary_year"].to_i %>
            <% highlighted = row_year == selected_year.to_i %>
            <% baseline_match = baseline_year_i.present? && row_year == baseline_year_i %>

            <% row_bg = if highlighted
              "bg-yellow-100/70 dark:bg-yellow-900/20"
            elsif baseline_match
              "bg-sky-100/60 dark:bg-sky-900/20"
            else
              ""
            end %>

            <% sticky_bg = if highlighted
              "bg-yellow-100/70 dark:bg-yellow-900/20 group-hover:bg-yellow-100/70 dark:group-hover:bg-yellow-900/20"
            elsif baseline_match
              "bg-sky-100/60 dark:bg-sky-900/20 group-hover:bg-sky-100/60 dark:group-hover:bg-sky-900/20"
            else
              "bg-background group-hover:bg-yellow-50 dark:group-hover:bg-yellow-900/25"
            end %>

            <% lower_label = format_compact_currency(row["lower_limit"]) %>
            <% upper_label = row["upper_limit"].present? ? format_compact_currency(row["upper_limit"]) : "∞" %>
            <% row_context = if highlighted && baseline_match
              "selected + baseline"
            elsif highlighted
              "selected season"
            elsif baseline_match
              "baseline season"
            else
              "tax bracket"
            end %>

            <% baseline_bracket_row = baseline_rows_by_bracket[[row["lower_limit"]&.to_f, row["upper_limit"]&.to_f]] %>
            <% nr_delta = if baseline_bracket_row.present? && row["tax_rate_non_repeater"].present?
              row["tax_rate_non_repeater"].to_f - baseline_bracket_row["tax_rate_non_repeater"].to_f
            end %>
            <% r_delta = if baseline_bracket_row.present? && row["tax_rate_repeater"].present?
              row["tax_rate_repeater"].to_f - baseline_bracket_row["tax_rate_repeater"].to_f
            end %>
            <% base_nr_delta = if baseline_bracket_row.present? && row["base_charge_non_repeater"].present?
              row["base_charge_non_repeater"].to_f - baseline_bracket_row["base_charge_non_repeater"].to_f
            end %>
            <% base_r_delta = if baseline_bracket_row.present? && row["base_charge_repeater"].present?
              row["base_charge_repeater"].to_f - baseline_bracket_row["base_charge_repeater"].to_f
            end %>

            <div class="group flex items-stretch text-xs transition-colors duration-75 hover:bg-yellow-50/70 dark:hover:bg-yellow-900/25 <%= row_bg %>">
              <div class="w-36 shrink-0 px-4 py-1.5 sticky left-0 z-20 relative transition-colors duration-75 <%= sticky_bg %> before:absolute before:right-0 before:top-0 before:bottom-0 before:w-[6px] before:bg-gradient-to-r before:from-[rgba(0,0,0,0.08)] before:to-transparent after:absolute after:right-0 after:top-0 after:bottom-0 after:w-px after:bg-border/50">
                <div class="entity-cell-two-line">
                  <div class="entity-cell-primary font-mono tabular-nums"><%= format_year_label(row_year) %></div>
                  <div class="entity-cell-secondary font-mono tabular-nums"><%= row_context %></div>
                </div>
              </div>

              <div class="w-28 shrink-0 px-3 py-2 text-right font-mono tabular-nums"><%= lower_label %></div>
              <div class="w-28 shrink-0 px-3 py-2 text-right font-mono tabular-nums"><%= upper_label == "∞" ? "—" : upper_label %></div>

              <% [
                [row["tax_rate_non_repeater"], nr_delta, :rate],
                [row["tax_rate_repeater"], r_delta, :rate],
                [row["base_charge_non_repeater"], base_nr_delta, :currency],
                [row["base_charge_repeater"], base_r_delta, :currency]
              ].each do |value, delta, kind| %>
                <% delta_label = if baseline_match
                  "baseline"
                elsif kind == :rate
                  "Δ #{format_rate_delta.call(delta)}"
                else
                  "Δ #{format_currency_delta.call(delta)}"
                end %>

                <% delta_class = if baseline_match
                  "text-muted-foreground/80"
                elsif delta.nil?
                  "text-muted-foreground/60"
                elsif delta.to_f.positive?
                  "text-emerald-600 dark:text-emerald-400"
                elsif delta.to_f.negative?
                  "text-red-500"
                else
                  "text-muted-foreground"
                end %>

                <% width_class = kind == :rate ? "w-28" : "w-32" %>
                <% primary_label = if kind == :rate
                  "#{format('%.2f', value.to_f)}x"
                else
                  format_compact_currency(value)
                end %>

                <div class="<%= width_class %> shrink-0 px-3 py-1">
                  <div class="entity-cell-two-line">
                    <div class="entity-cell-primary justify-end font-mono tabular-nums"><%= primary_label %></div>
                    <div class="entity-cell-secondary justify-end font-mono tabular-nums <%= delta_class %>"><%= delta_label %></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>
