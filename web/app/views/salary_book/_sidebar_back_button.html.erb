<%#
  Sidebar Back Button â€” Shows team logo + code based on $activeteam signal

  Uses the team_id lookup from window.__salaryBookTeamIds to get the logo URL.
  The logo and team code update when the active team changes.
%>

<button
  type="button"
  class="cursor-pointer flex items-center gap-1.5 text-sm transition-colors text-muted-foreground hover:text-foreground
         focus-visible:outline-none focus-visible:ring-0 focus-visible:border-foreground dark:focus-visible:border-foreground"
  data-on:click="@get('<%= salary_book_sidebar_clear_path %>')"
>
  <%= lucide_icon("arrow-left", class: "w-4 h-4", "aria-hidden": true) %>

  <%# Team logo badge (reactive to $activeteam) %>
  <div
    class="w-5 h-5 rounded flex items-center justify-center flex-shrink-0 bg-background border border-border overflow-hidden"
  >
    <%# Logo image (shown when team_id exists) %>
    <img
      data-attr:src="window.__salaryBookTeamIds?.[$activeteam] ? `https://cdn.nba.com/logos/nba/${window.__salaryBookTeamIds[$activeteam]}/primary/L/logo.svg` : ''"
      data-show="window.__salaryBookTeamIds?.[$activeteam]"
      alt=""
      class="w-full h-full object-contain"
      onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
    />
    <%# Fallback text (shown when no logo) %>
    <span
      data-show="!window.__salaryBookTeamIds?.[$activeteam]"
      data-text="$activeteam || ''"
      class="text-[6px] font-bold uppercase tracking-tight text-muted-foreground"
      aria-hidden="true"
    ></span>
  </div>

  <%# Team code label %>
  <span class="font-medium" data-text="$activeteam || 'Back'"></span>
</button>
