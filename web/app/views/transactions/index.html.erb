<% content_for :title, "Transactions" %>

<%
  pane_query_expr = "'q=' + encodeURIComponent($txnquery) +
    '&daterange=' + encodeURIComponent($txndaterange) +
    '&team=' + encodeURIComponent($txnteam) +
    '&signings=' + ($txnsignings ? '1' : '0') +
    '&waivers=' + ($txnwaivers ? '1' : '0') +
    '&extensions=' + ($txnextensions ? '1' : '0') +
    '&other=' + ($txnother ? '1' : '0') +
    '&impact=' + encodeURIComponent($txnimpact)"

  selected_overlay_query_expr = "'selected_type=' + encodeURIComponent($overlaytype) +
    '&selected_id=' + encodeURIComponent($overlayid)"
  refresh_query_expr = "(#{pane_query_expr}) + '&' + (#{selected_overlay_query_expr})"

  refresh_expr = "@get('/transactions/sse/refresh?' + (#{refresh_query_expr})); window.history.replaceState({}, '', '/transactions?' + (#{pane_query_expr}))"

  signals_literal = "{ txnquery: #{@query.to_s.to_json}, txndaterange: #{@daterange.to_json}, txnteam: #{(@team || '').to_json}, txnsignings: #{@signings.to_json}, txnwaivers: #{@waivers.to_json}, txnextensions: #{@extensions.to_json}, txnother: #{@other.to_json}, txnimpact: #{@impact.to_json}, overlaytype: '', overlayid: '' }"
%>

<div id="transactions-workspace" class="h-screen w-full flex flex-col overflow-hidden bg-background" style="height: 100dvh;" data-signals="<%= signals_literal %>">
  <div id="flash"></div>

  <header
    id="commandbar"
    class="shrink-0 h-[130px] border-b border-border bg-background px-4 pt-3 flex items-start gap-4 select-none"
  >
    <div class="flex items-start min-w-0 overflow-x-auto pb-1" role="group" aria-label="Transactions filters">
      <div class="min-w-[8.5rem] w-[8.5rem] space-y-1.5">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Date Range</div>
        <div class="space-y-1">
          <% [["today", "Today"], ["week", "This Week"], ["month", "This Month"], ["season", "This Season"], ["all", "All"]].each do |value, label| %>
            <label class="flex items-center gap-1.5 cursor-pointer">
              <input
                type="radio"
                name="txn-daterange"
                value="<%= value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @daterange == value %>
                data-bind="txndaterange"
                data-on:change="if (el.checked) { <%= refresh_expr %>; }"
              />
              <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': $txndaterange === '<%= value %>', 'text-muted-foreground': $txndaterange !== '<%= value %>' }"><%= label %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0 mx-3"></div>

      <div class="min-w-[16rem] w-[16rem] space-y-2">
        <div class="space-y-1">
          <label for="transactions-query" class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Search</label>
          <div class="flex items-center gap-1.5">
            <input
              id="transactions-query"
              type="text"
              class="h-7 w-full rounded border border-border bg-background px-2 text-xs text-foreground"
              placeholder="Player, team, tx id"
              value="<%= @query.to_s %>"
              data-bind="txnquery"
              data-on:keydown="if (evt.key === 'Enter') { evt.preventDefault(); <%= refresh_expr %>; }"
            />
            <button
              type="button"
              class="h-7 shrink-0 rounded border border-border px-2 text-[10px] font-semibold uppercase tracking-wide text-muted-foreground hover:text-foreground"
              data-on:click="<%= refresh_expr %>"
            >Apply</button>
          </div>
        </div>

        <div class="space-y-1">
          <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Team</div>
          <select
            id="transactions-team-select"
            class="h-7 w-full rounded border border-border bg-background px-2 text-xs text-foreground"
            data-bind="txnteam"
            data-on:change="<%= refresh_expr %>"
          >
            <option value="" <%= "selected" if @team.blank? %>>All teams</option>
            <% Array(@team_options).each do |team| %>
              <% code = team["team_code"].to_s.upcase %>
              <option value="<%= code %>" <%= "selected" if @team == code %>><%= code %> · <%= team["team_name"] %></option>
            <% end %>
          </select>
        </div>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0 mx-3"></div>

      <div class="min-w-[13rem] w-[13rem] space-y-1.5">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Severity Lane</div>
        <select
          id="transactions-impact-select"
          class="h-7 w-full rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="txnimpact"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="all" <%= "selected" if @impact == "all" %>>All impact lanes</option>
          <option value="critical" <%= "selected" if @impact == "critical" %>>Critical impact · dead money / Δ20M+</option>
          <option value="high" <%= "selected" if @impact == "high" %>>High impact · exception / Δ10M+</option>
          <option value="medium" <%= "selected" if @impact == "medium" %>>Medium impact · ledger-active</option>
          <option value="low" <%= "selected" if @impact == "low" %>>Low impact · quiet ledger</option>
        </select>
        <div class="text-[10px] leading-none text-muted-foreground/70" data-text="$txnteam ? ($txnteam + ' route perspective') : 'League-wide route perspective'"></div>
      </div>

      <div class="h-20 w-px bg-border self-center shrink-0 mx-3"></div>

      <div class="min-w-[11.5rem] w-[11.5rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Type</div>
        <div class="grid grid-cols-2 gap-x-2 gap-y-1">
          <div class="flex items-center gap-1.5">
            <input
              type="checkbox"
              id="txn-type-signings"
              class="size-3.5 accent-primary"
              <%= "checked" if @signings %>
              data-bind="txnsignings"
              data-on:change="<%= refresh_expr %>"
            />
            <label for="txn-type-signings" class="text-[11px] leading-none cursor-pointer select-none text-foreground/80 hover:text-foreground transition-colors">Signings</label>
          </div>

          <div class="flex items-center gap-1.5">
            <input
              type="checkbox"
              id="txn-type-waivers"
              class="size-3.5 accent-primary"
              <%= "checked" if @waivers %>
              data-bind="txnwaivers"
              data-on:change="<%= refresh_expr %>"
            />
            <label for="txn-type-waivers" class="text-[11px] leading-none cursor-pointer select-none text-foreground/80 hover:text-foreground transition-colors">Waivers</label>
          </div>

          <div class="flex items-center gap-1.5">
            <input
              type="checkbox"
              id="txn-type-extensions"
              class="size-3.5 accent-primary"
              <%= "checked" if @extensions %>
              data-bind="txnextensions"
              data-on:change="<%= refresh_expr %>"
            />
            <label for="txn-type-extensions" class="text-[11px] leading-none cursor-pointer select-none text-foreground/80 hover:text-foreground transition-colors">Extensions</label>
          </div>

          <div class="flex items-center gap-1.5">
            <input
              type="checkbox"
              id="txn-type-other"
              class="size-3.5 accent-primary"
              <%= "checked" if @other %>
              data-bind="txnother"
              data-on:change="<%= refresh_expr %>"
            />
            <label for="txn-type-other" class="text-[11px] leading-none cursor-pointer select-none text-foreground/80 hover:text-foreground transition-colors">Other</label>
          </div>
        </div>
      </div>
    </div>

    <div class="h-20 w-px bg-border self-center ml-auto shrink-0"></div>
    <%= render partial: "shared/commandbar_navigation", locals: { active_destination: "transactions" } %>
  </header>

  <div id="viewport" class="flex flex-1 overflow-hidden relative">
    <main id="maincanvas" class="flex-1 min-w-0 min-h-0 overflow-y-auto overflow-x-auto bg-background relative overscroll-y-contain scroll-touch isolate">
      <%= render partial: "transactions/results" %>
    </main>

    <aside
      id="rightpanel"
      class="w-[30%] min-w-[320px] max-w-[480px] border-l border-border bg-background overflow-hidden relative"
    >
      <div
        id="rightpanel-base-layer"
        class="absolute inset-0 overflow-y-auto overflow-x-hidden overscroll-y-contain scroll-touch pt-2 px-4 pb-4 transition-opacity duration-150"
        data-class="{ 'opacity-0 pointer-events-none': $overlaytype === 'transaction', 'opacity-100': $overlaytype !== 'transaction' }"
      >
        <%= render partial: "transactions/rightpanel_base" %>
      </div>

      <div id="rightpanel-overlay"></div>
    </aside>
  </div>
</div>
