<div
  id="rightpanel-base"
  class="space-y-4"
  data-init="window.__noahShotchartInit && window.__noahShotchartInit()"
>
  <% if @selected_player.present? %>
    <% historical_player = @selected_player["roster_group"].to_s.casecmp("historical").zero? %>
    <% shot_type_kpi = @shot_type_rows.first&.dig("shot_type").presence || @shot_lens_label %>
    <% shot_type_kpi = case shot_type_kpi.to_s
    when "Catch And Shoot"
      "Catch & Shoot"
    when "Off The Dribble"
      "Off Dribble"
    else
      shot_type_kpi.to_s
    end %>
    <% consistency_grade_class = lambda do |grade|
      case grade.to_s
      when "A+", "A", "A-", "B+"
        "text-emerald-600 dark:text-emerald-400"
      when "D+", "D", "D-", "F"
        "text-red-600 dark:text-red-400"
      else
        "text-foreground"
      end
    end %>
    <% initials_for = lambda do |name|
      normalized = name.to_s.strip
      if normalized.blank?
        "—"
      else
        parts = normalized.split(/\s+/)
        if parts.length >= 2
          "#{parts[0].to_s.first}#{parts[1].to_s.first}".upcase
        else
          normalized.gsub(/\s+/, "").first(2).upcase
        end
      end
    end %>
    <% selected_player_initials = initials_for.call(@selected_player["player_name"]) %>

    <section class="space-y-3">
      <div class="flex items-start gap-3">
        <div class="flex items-center gap-3 min-w-0">
          <div class="w-14 h-14 rounded-lg bg-background border border-border flex items-center justify-center overflow-hidden">
            <% if @selected_player["nba_id"].present? %>
              <img
                src="<%= player_headshot_url(@selected_player['nba_id']) %>"
                alt="<%= @selected_player['player_name'] %>"
                class="w-full h-full object-cover object-top <%= historical_player ? 'grayscale opacity-70' : '' %>"
                loading="lazy"
                decoding="async"
                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
              />
              <span class="hidden text-sm font-semibold text-muted-foreground"><%= selected_player_initials %></span>
            <% else %>
              <span class="text-sm font-semibold text-muted-foreground"><%= selected_player_initials %></span>
            <% end %>
          </div>

          <div class="min-w-0">
            <div class="font-semibold text-lg leading-tight truncate <%= historical_player ? 'text-muted-foreground' : 'text-foreground' %>"><%= @selected_player["player_name"] %></div>
            <div class="text-sm text-muted-foreground truncate mt-0.5 tabular-nums">
              <%= number_with_delimiter(@selected_player["attempts"].to_i) %> <%= @shot_volume_label %>
              <span class="mx-1">·</span>
              <%= number_with_precision(@selected_player["fg_pct"].to_f * 100.0, precision: 1, strip_insignificant_zeros: false) %>% <%= @shot_pct_label %>
            </div>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-4 gap-1.5">
        <%= render partial: "salary_book/kpi_cell", locals: {
          label: "Shot Type",
          value: shot_type_kpi.presence || "—",
          class_name: "w-full",
          value_class_name: "text-[11px] leading-tight"
        } %>

        <%= render partial: "salary_book/kpi_cell", locals: {
          label: "Swish",
          value: "#{(@selected_player['swish_pct'].to_f * 100.0).round(1)}%",
          class_name: "w-full"
        } %>

        <%= render partial: "salary_book/kpi_cell", locals: {
          label: "Depth Σ",
          value: @selected_player["depth_consistency_grade"].presence || "—",
          class_name: "w-full",
          value_class_name: consistency_grade_class.call(@selected_player["depth_consistency_grade"])
        } %>

        <%= render partial: "salary_book/kpi_cell", locals: {
          label: "L/R Σ",
          value: @selected_player["left_right_consistency_grade"].presence || "—",
          class_name: "w-full",
          value_class_name: consistency_grade_class.call(@selected_player["left_right_consistency_grade"])
        } %>
      </div>
    </section>

    <section class="rounded border border-border overflow-hidden">
      <div class="px-3 py-2 border-b border-border bg-muted/40">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Shotchart</div>
        <div class="text-[11px] text-muted-foreground mt-0.5"><%= @window_label %> · <%= @shot_lens_label %></div>
      </div>

      <div id="noah-shotchart" class="h-[48vh] min-h-[390px] w-full" data-ignore-morph></div>

      <div id="noah-shotchart-data" class="hidden" aria-hidden="true">
        <script id="noah-shotchart-payload" type="application/json"><%= raw(json_escape(@shotchart_payload.to_json)) %></script>
      </div>
    </section>

    <section class="rounded border border-border overflow-hidden">
      <div class="px-3 py-2 border-b border-border bg-muted/40 text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Zone summary</div>
      <div class="overflow-x-auto">
        <table class="min-w-full text-xs">
          <thead class="bg-muted/40 text-[10px] uppercase tracking-wide text-muted-foreground/90">
            <tr>
              <th class="px-2 py-1.5 text-left">Zone</th>
              <th class="px-2 py-1.5 text-right">Attempts</th>
              <th class="px-2 py-1.5 text-right">Made</th>
              <th class="px-2 py-1.5 text-right">FG%</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            <% @zone_rows.each do |zone| %>
              <% attempts = zone[:attempts].to_i %>
              <% made = zone[:made].to_i %>
              <% fg_pct = zone[:fg_pct].to_f %>
              <tr class="transition-colors duration-75 hover:bg-yellow-50/70 dark:hover:bg-yellow-900/10">
                <td class="px-2 py-1.5"><%= zone[:name].to_s.tr('-', ' ').titleize %></td>
                <td class="px-2 py-1.5 text-right tabular-nums <%= attempts.zero? ? 'text-muted-foreground/60' : '' %>"><%= number_with_delimiter(attempts) %></td>
                <td class="px-2 py-1.5 text-right tabular-nums <%= made.zero? ? 'text-muted-foreground/60' : '' %>"><%= number_with_delimiter(made) %></td>
                <td class="px-2 py-1.5 text-right tabular-nums <%= fg_pct.round(1).zero? ? 'text-muted-foreground/60' : '' %>"><%= number_with_precision(fg_pct, precision: 1, strip_insignificant_zeros: false) %>%</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </section>

    <section class="rounded border border-border overflow-hidden">
      <div class="px-3 py-2 border-b border-border bg-muted/40 text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Recent weekly trend</div>

      <% if @weekly_rows.empty? %>
        <div class="p-3 text-sm text-muted-foreground italic">No weekly trend rows for this filter window.</div>
      <% else %>
        <div class="overflow-x-auto">
          <table class="min-w-full text-xs">
            <thead class="bg-muted/40 text-[10px] uppercase tracking-wide text-muted-foreground/90">
              <tr>
                <th class="px-2 py-1.5 text-left">Week</th>
                <th class="px-2 py-1.5 text-right">Shots</th>
                <th class="px-2 py-1.5 text-right"><%= @shot_pct_label %></th>
                <th class="px-2 py-1.5 text-right">Swish</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-border">
              <% @weekly_rows.each do |row| %>
                <% week = row["week"].respond_to?(:to_date) ? row["week"].to_date : row["week"] %>
                <tr class="transition-colors duration-75 hover:bg-yellow-50/70 dark:hover:bg-yellow-900/10">
                  <td class="px-2 py-1.5"><%= week.present? ? week.strftime("%b %-d, %Y") : "—" %></td>
                  <td class="px-2 py-1.5 text-right tabular-nums"><%= number_with_delimiter(row["shots"].to_i) %></td>
                  <td class="px-2 py-1.5 text-right tabular-nums"><%= number_with_precision(row["make_pct"].to_f * 100.0, precision: 1, strip_insignificant_zeros: false) %>%</td>
                  <td class="px-2 py-1.5 text-right tabular-nums"><%= number_with_precision(row["swish_pct"].to_f * 100.0, precision: 1, strip_insignificant_zeros: false) %>%</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </section>

    <section class="rounded border border-border overflow-hidden">
      <div class="px-3 py-2 border-b border-border bg-muted/40 text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Shot type mix</div>

      <% if @shot_type_rows.empty? %>
        <div class="p-3 text-sm text-muted-foreground italic">No shot type rows in this window.</div>
      <% else %>
        <div class="overflow-x-auto">
          <table class="min-w-full text-xs">
            <thead class="bg-muted/40 text-[10px] uppercase tracking-wide text-muted-foreground/90">
              <tr>
                <th class="px-2 py-1.5 text-left">Type</th>
                <th class="px-2 py-1.5 text-right">Shots</th>
                <th class="px-2 py-1.5 text-right"><%= @shot_pct_label %></th>
                <th class="px-2 py-1.5 text-right">Swish</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-border">
              <% @shot_type_rows.each do |row| %>
                <tr class="transition-colors duration-75 hover:bg-yellow-50/70 dark:hover:bg-yellow-900/10">
                  <td class="px-2 py-1.5"><%= row["shot_type"] %></td>
                  <td class="px-2 py-1.5 text-right tabular-nums"><%= number_with_delimiter(row["shots"].to_i) %></td>
                  <td class="px-2 py-1.5 text-right tabular-nums"><%= number_with_precision(row["make_pct"].to_f * 100.0, precision: 1, strip_insignificant_zeros: false) %>%</td>
                  <td class="px-2 py-1.5 text-right tabular-nums"><%= number_with_precision(row["swish_pct"].to_f * 100.0, precision: 1, strip_insignificant_zeros: false) %>%</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </section>
  <% else %>
    <section class="rounded border border-border bg-muted/20 p-4 text-sm text-muted-foreground">
      No player rows are available for the current window and filters.
    </section>
  <% end %>
</div>
