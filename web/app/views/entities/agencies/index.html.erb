<% content_for :title, "Agencies" %>

<%
  pane_query_expr = "'q=' + encodeURIComponent($agencyquery) +
    '&activity=' + encodeURIComponent($agencyactivity) +
    '&year=' + encodeURIComponent($agencyyear) +
    '&sort=' + encodeURIComponent($agencysort) +
    '&dir=' + encodeURIComponent($agencydir)"

  selected_overlay_query_expr = "'selected_id=' + encodeURIComponent($overlayid)"

  refresh_expr = "@get('/agencies/sse/refresh?' + (#{pane_query_expr}) + '&' + (#{selected_overlay_query_expr})); window.history.replaceState({}, '', '/agencies?' + (#{pane_query_expr}))"
  submit_search_expr = "evt.preventDefault(); #{refresh_expr}"
  clear_search_expr = "$agencyquery = ''; #{refresh_expr}"

  signals_literal = "{ agencyquery: #{@query.to_json}, agencyactivity: #{@activity_lens.to_json}, agencyyear: #{@book_year.to_s.to_json}, agencysort: #{@sort_key.to_json}, agencydir: #{@sort_dir.to_json}, overlaytype: 'none', overlayid: '' }"
%>

<div id="agencies-workspace" class="h-screen w-screen flex flex-col overflow-hidden bg-background" data-signals="<%= signals_literal %>">
  <div id="flash"></div>

  <header
    id="commandbar"
    class="shrink-0 h-[130px] border-b border-border bg-background flex items-start px-4 pt-3 gap-4 select-none"
  >
    <div class="space-y-1" role="navigation" aria-label="Entities">
      <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Entities</div>
      <div class="grid grid-cols-4 gap-1">
        <a href="/agents" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Agents</a>
        <a href="/agencies" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-primary text-primary-foreground border-primary shadow-sm">Agencies</a>
        <a href="/drafts" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Drafts</a>
        <a href="/players" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Players</a>
        <a href="/teams" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Teams</a>
        <a href="/trades" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Trades</a>
        <a href="/transactions" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Txns</a>
      </div>
    </div>

    <div class="h-20 w-px bg-border self-center"></div>

    <div class="flex items-start gap-4" role="group" aria-label="Agencies filters">
      <form class="min-w-[13rem] space-y-1" data-on:submit="<%= submit_search_expr %>">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Search</div>
        <div class="flex items-center gap-1.5">
          <input
            id="agencies-search-input"
            type="search"
            placeholder="name or agency_id"
            class="w-40 h-7 rounded border border-border bg-background px-2 text-xs text-foreground placeholder:text-muted-foreground/70"
            value="<%= @query %>"
            data-bind="agencyquery"
            data-on:keydown="if (evt.key === 'Enter') { evt.preventDefault(); <%= refresh_expr %>; }"
          />
          <button
            type="submit"
            class="cursor-pointer h-7 px-2 rounded border border-border bg-muted/40 text-[11px] text-foreground hover:bg-muted transition-colors"
          >Apply</button>
          <button
            type="button"
            class="cursor-pointer h-7 px-2 rounded border border-border bg-background text-[11px] text-muted-foreground hover:text-foreground transition-colors"
            data-on:click="<%= clear_search_expr %>"
          >Clear</button>
        </div>
      </form>

      <div class="min-w-[10rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Posture</div>
        <div class="space-y-1">
          <% [["all", "All"], ["active", "Active"], ["inactive", "Inactive"], ["inactive_live_book", "Inactive + live"], ["live_book_risk", "Live risk"]].each do |value, label| %>
            <label class="flex items-center gap-1.5 cursor-pointer">
              <input
                type="radio"
                id="agencies-activity-<%= value %>"
                name="agencies-activity"
                value="<%= value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @activity_lens == value %>
                data-bind="agencyactivity"
                data-on:change="if (el.checked) { <%= refresh_expr %>; }"
              />
              <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': $agencyactivity === '<%= value %>', 'text-muted-foreground': $agencyactivity !== '<%= value %>' }"><%= label %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="min-w-[6.5rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Year</div>
        <div class="space-y-1">
          <% [2025, 2026, 2027].each do |year| %>
            <label class="flex items-center gap-1.5 cursor-pointer">
              <input
                type="radio"
                id="agencies-year-<%= year %>"
                name="agencies-year"
                value="<%= year %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @book_year == year %>
                data-bind="agencyyear"
                data-on:change="if (el.checked) { <%= refresh_expr %>; }"
              />
              <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': $agencyyear === '<%= year %>', 'text-muted-foreground': $agencyyear !== '<%= year %>' }"><%= year %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="min-w-[8rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Sort</div>
        <div class="space-y-1">
          <% [["book", "Book"], ["clients", "Clients"], ["agents", "Agents"], ["max", "Max"], ["expirings", "Exp"], ["name", "Name"]].each do |value, label| %>
            <label class="flex items-center gap-1.5 cursor-pointer">
              <input
                type="radio"
                id="agencies-sort-<%= value %>"
                name="agencies-sort"
                value="<%= value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @sort_key == value %>
                data-bind="agencysort"
                data-on:change="if (el.checked) { <%= refresh_expr %>; }"
              />
              <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': $agencysort === '<%= value %>', 'text-muted-foreground': $agencysort !== '<%= value %>' }"><%= label %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="min-w-[6.5rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Direction</div>
        <div class="space-y-1">
          <% [["desc", "Desc"], ["asc", "Asc"]].each do |value, label| %>
            <label class="flex items-center gap-1.5 cursor-pointer">
              <input
                type="radio"
                id="agencies-dir-<%= value %>"
                name="agencies-dir"
                value="<%= value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @sort_dir == value %>
                data-bind="agencydir"
                data-on:change="if (el.checked) { <%= refresh_expr %>; }"
              />
              <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': $agencydir === '<%= value %>', 'text-muted-foreground': $agencydir !== '<%= value %>' }"><%= label %></span>
            </label>
          <% end %>
        </div>
      </div>
    </div>

    <div class="h-20 w-px bg-border self-center ml-auto shrink-0"></div>
    <%= render partial: "shared/commandbar_navigation", locals: { active_destination: "agents" } %>
  </header>

  <div id="viewport" class="flex flex-1 overflow-hidden relative">
    <main id="maincanvas" class="flex-1 min-w-0 overflow-y-auto overflow-x-hidden bg-background">
      <%= render partial: "entities/agencies/workspace_main" %>
    </main>

    <aside
      id="rightpanel"
      class="w-[30%] min-w-[320px] max-w-[480px] border-l border-border bg-background overflow-hidden relative"
    >
      <div
        id="rightpanel-base-layer"
        class="absolute inset-0 overflow-y-auto overflow-x-hidden overscroll-y-contain scroll-touch pt-2 px-4 pb-4"
      >
        <%= render partial: "entities/agencies/rightpanel_base" %>
      </div>

      <div id="rightpanel-overlay"></div>
    </aside>
  </div>
</div>
