<% content_for :title, "Trades" %>

<%
  pane_query_expr = "'daterange=' + encodeURIComponent($tradedaterange) +
    '&team=' + encodeURIComponent($tradeteam) +
    '&sort=' + encodeURIComponent($tradesort) +
    '&lens=' + encodeURIComponent($tradelens) +
    '&composition=' + encodeURIComponent($tradecomposition)"

  refresh_query_expr = "(#{pane_query_expr}) +
    '&selected_type=' + encodeURIComponent($overlaytype) +
    '&selected_id=' + encodeURIComponent($overlayid)"

  refresh_expr = "@get('/trades/sse/refresh?' + (#{refresh_query_expr})); window.history.replaceState({}, '', '/trades?' + (#{pane_query_expr}))"

  signals_literal = "{ tradedaterange: #{@daterange.to_json}, tradeteam: #{(@team || '').to_json}, tradesort: #{@sort.to_json}, tradelens: #{@lens.to_json}, tradecomposition: #{@composition.to_json}, overlaytype: 'none', overlayid: '' }"
%>

<div id="trades-workspace" class="h-screen w-screen flex flex-col overflow-hidden bg-background" data-signals="<%= signals_literal %>">
  <div id="flash"></div>

  <header
    id="commandbar"
    class="shrink-0 h-[130px] border-b border-border bg-background flex items-start px-4 pt-3 gap-4 select-none"
  >
    <div class="space-y-1" role="navigation" aria-label="Entities">
      <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Entities</div>
      <div class="grid grid-cols-4 gap-1">
        <a href="/agents" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Agents</a>
        <a href="/drafts" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Drafts</a>
        <a href="/players" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Players</a>
        <a href="/teams" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Teams</a>
        <a href="/trades" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-primary text-primary-foreground border-primary shadow-sm">Trades</a>
        <a href="/transactions" class="relative h-7 w-20 px-2 rounded text-xs font-medium transition-all duration-150 border outline-none inline-flex items-center justify-center no-underline hover:no-underline bg-muted/50 text-foreground border-border hover:bg-muted hover:border-foreground/20">Txns</a>
      </div>
    </div>

    <div class="h-20 w-px bg-border self-center"></div>

    <div class="flex items-start gap-4" role="group" aria-label="Trades filters">
      <div class="min-w-[7.5rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Date range</div>
        <div class="space-y-1">
          <% [["today", "Today"], ["week", "This Week"], ["month", "This Month"], ["season", "This Season"], ["all", "All"]].each do |value, label| %>
            <label class="flex items-center gap-1.5 cursor-pointer">
              <input
                type="radio"
                name="trade-daterange"
                value="<%= value %>"
                class="size-3.5 accent-primary"
                <%= "checked" if @daterange == value %>
                data-bind="tradedaterange"
                data-on:change="if (el.checked) { <%= refresh_expr %>; }"
              />
              <span class="text-[11px] leading-none select-none" data-class="{ 'text-foreground font-semibold': $tradedaterange === '<%= value %>', 'text-muted-foreground': $tradedaterange !== '<%= value %>' }"><%= label %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="min-w-[11rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Team</div>
        <select
          id="trades-team-select"
          class="h-7 w-52 rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="tradeteam"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="" <%= "selected" if @team.blank? %>>All teams</option>
          <% Array(@team_options).each do |team| %>
            <% code = team["team_code"].to_s.upcase %>
            <option value="<%= code %>" <%= "selected" if @team == code %>><%= code %> Â· <%= team["team_name"] %></option>
          <% end %>
        </select>
      </div>

      <div class="min-w-[11rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Sort</div>
        <select
          id="trades-sort-select"
          class="h-7 w-48 rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="tradesort"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="newest" <%= "selected" if @sort == "newest" %>>Newest</option>
          <option value="most_teams" <%= "selected" if @sort == "most_teams" %>>Most teams</option>
          <option value="most_assets" <%= "selected" if @sort == "most_assets" %>>Most assets</option>
        </select>
      </div>

      <div class="min-w-[13rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Complexity lens</div>
        <select
          id="trades-lens-select"
          class="h-7 w-56 rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="tradelens"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="all" <%= "selected" if @lens == "all" %>>All deals</option>
          <option value="complex" <%= "selected" if @lens == "complex" %>>3+ teams or 4+ assets</option>
          <option value="mega" <%= "selected" if @lens == "mega" %>>4+ teams or 6+ assets</option>
        </select>
      </div>

      <div class="min-w-[12rem] space-y-1">
        <div class="text-[10px] font-semibold uppercase tracking-wider text-muted-foreground/70">Composition</div>
        <select
          id="trades-composition-select"
          class="h-7 w-52 rounded border border-border bg-background px-2 text-xs text-foreground"
          data-bind="tradecomposition"
          data-on:change="<%= refresh_expr %>"
        >
          <option value="all" <%= "selected" if @composition == "all" %>>All archetypes</option>
          <option value="player_heavy" <%= "selected" if @composition == "player_heavy" %>>Player-heavy deals</option>
          <option value="pick_heavy" <%= "selected" if @composition == "pick_heavy" %>>Pick-heavy deals</option>
          <option value="cash_tpe" <%= "selected" if @composition == "cash_tpe" %>>Cash / TPE involved</option>
        </select>
      </div>
    </div>

    <div class="h-20 w-px bg-border self-center ml-auto shrink-0"></div>
    <%= render partial: "shared/commandbar_navigation", locals: { active_destination: "trades" } %>
  </header>

  <div id="viewport" class="flex flex-1 overflow-hidden relative">
    <main id="maincanvas" class="flex-1 min-w-0 overflow-y-auto overflow-x-hidden bg-background px-4 py-4">
      <%= render partial: "trades/results" %>
    </main>

    <aside
      id="rightpanel"
      class="w-[30%] min-w-[320px] max-w-[480px] border-l border-border bg-background overflow-hidden relative"
    >
      <div
        id="rightpanel-base-layer"
        class="absolute inset-0 overflow-y-auto overflow-x-hidden overscroll-y-contain scroll-touch pt-2 px-4 pb-4"
      >
        <%= render partial: "trades/rightpanel_base" %>
      </div>

      <div id="rightpanel-overlay"></div>
    </aside>
  </div>
</div>
