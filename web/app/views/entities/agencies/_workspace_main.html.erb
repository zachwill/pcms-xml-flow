<% year_label = format_year_label(@book_year).split("-").first %>
<% prefetch_canonical_slugs(entity_type: "agency", entity_ids: @agencies.map { |a| a["agency_id"] }) %>

<div id="agencies-maincanvas" class="px-4 py-4 space-y-4">
  <div class="flex items-end justify-between gap-4">
    <div>
      <div class="text-[10px] uppercase tracking-wide text-muted-foreground/80">Agencies workspace</div>
      <h2 class="text-sm font-semibold text-foreground">
        Agency explorer
        <span class="text-muted-foreground font-medium">· <%= @agencies.size %> rows</span>
      </h2>
    </div>

    <div class="text-[11px] text-muted-foreground tabular-nums">
      <span>Book '<%= year_label %>: <%= format_compact_currency(@sidebar_summary[:book_total]) %></span>
    </div>
  </div>

  <% if @agencies.empty? %>
    <div class="p-6 rounded-lg border border-border bg-muted/20 text-sm text-muted-foreground italic text-center">
      No agencies match these lenses.
    </div>
  <% else %>
    <div class="overflow-x-auto rounded-lg border border-border">
      <table class="entity-table min-w-full text-xs">
        <thead class="bg-muted/40 text-[10px] uppercase tracking-wide text-muted-foreground/90">
          <tr>
            <th class="text-left px-3 py-2 font-medium">Agency</th>
            <th class="text-right px-3 py-2 font-medium">Agents</th>
            <th class="text-right px-3 py-2 font-medium">Clients</th>
            <th class="text-right px-3 py-2 font-medium">Teams</th>
            <th class="text-right px-3 py-2 font-medium">Book '<%= year_label %></th>
            <th class="text-right px-3 py-2 font-medium">Max</th>
            <th class="text-right px-3 py-2 font-medium">Expiring</th>
            <th class="text-right px-3 py-2 font-medium">Restrictions</th>
            <th class="text-right px-3 py-2 font-medium">Options</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-border">
          <% @agencies.each do |agency| %>
            <% agency_id = agency["agency_id"] %>
            <% options_count = agency["player_option_count"].to_i + agency["team_option_count"].to_i %>
            <% restrictions_count = agency["no_trade_count"].to_i + agency["trade_kicker_count"].to_i + agency["trade_restricted_count"].to_i %>
            <% row_click_expr = "$overlaytype = 'agency'; $overlayid = '#{agency_id}'; @get('/agencies/sidebar/#{agency_id}')" %>

            <tr
              class="group cursor-pointer hover:bg-yellow-50/70 dark:hover:bg-yellow-900/10 transition-colors duration-75"
              data-class="{ 'bg-yellow-100/80 dark:bg-yellow-900/20': $overlaytype === 'agency' && $overlayid === '<%= agency_id %>' }"
              data-on:click="<%= row_click_expr %>"
            >
              <td class="px-3 py-2">
                <div class="entity-cell-two-line">
                  <div class="entity-cell-primary">
                    <a href="<%= agency_href(agency_id) %>" class="font-medium hover:underline truncate" onclick="event.stopPropagation()"><%= agency["agency_name"] %></a>
                  </div>
                  <div class="entity-cell-secondary flex-wrap gap-1">
                    <% live_book = agency["book_total"].to_i.positive? %>
                    <% inactive_with_live_book = agency["is_active"] == false && live_book %>

                    <% if inactive_with_live_book %>
                      <span class="entity-chip entity-chip--danger">inactive + live</span>
                    <% elsif agency["is_active"] == false %>
                      <span class="entity-chip entity-chip--muted">inactive</span>
                    <% else %>
                      <span class="entity-chip entity-chip--success">active</span>
                    <% end %>

                    <% if live_book %>
                      <span class="entity-chip entity-chip--accent">live <%= format_compact_currency(agency["book_total"]) %></span>
                    <% end %>

                    <% if restrictions_count > 0 %>
                      <span class="entity-chip entity-chip--warning"><%= restrictions_count %> restrictions</span>
                    <% end %>
                  </div>
                </div>
              </td>
              <td class="px-3 py-2 text-right font-mono tabular-nums">
                <% if agency["agent_count"].to_i > 0 %>
                  <div class="space-y-0.5">
                    <div><%= agency["agent_count"] %></div>
                    <% if representation_percentile_int(agency["agent_count_percentile"]).present? %>
                      <div class="text-[10px] leading-none <%= representation_percentile_color_class(agency['agent_count_percentile']) %>">P<%= representation_percentile_int(agency["agent_count_percentile"]) %></div>
                    <% end %>
                  </div>
                <% else %>
                  <span class="text-muted-foreground">—</span>
                <% end %>
              </td>
              <td class="px-3 py-2 text-right font-mono tabular-nums">
                <% if agency["client_count"].to_i > 0 %>
                  <div class="space-y-0.5">
                    <div><%= agency["client_count"] %></div>
                    <% if representation_percentile_int(agency["client_count_percentile"]).present? %>
                      <div class="text-[10px] leading-none <%= representation_percentile_color_class(agency['client_count_percentile']) %>">P<%= representation_percentile_int(agency["client_count_percentile"]) %></div>
                    <% end %>
                  </div>
                <% else %>
                  <span class="text-muted-foreground">—</span>
                <% end %>
              </td>
              <td class="px-3 py-2 text-right font-mono tabular-nums"><%= agency["team_count"].to_i > 0 ? agency["team_count"] : content_tag(:span, "—", class: "text-muted-foreground") %></td>
              <td class="px-3 py-2 text-right font-mono tabular-nums">
                <% if agency["book_total"].to_i > 0 %>
                  <div class="space-y-0.5">
                    <div class="font-medium"><%= format_salary(agency["book_total"]) %></div>
                    <% if representation_percentile_int(agency["book_total_percentile"]).present? %>
                      <div class="text-[10px] leading-none <%= representation_percentile_color_class(agency['book_total_percentile']) %>">P<%= representation_percentile_int(agency["book_total_percentile"]) %></div>
                    <% end %>
                  </div>
                <% else %>
                  <span class="text-muted-foreground">—</span>
                <% end %>
              </td>
              <td class="px-3 py-2 text-right font-mono tabular-nums">
                <% if agency["max_contract_count"].to_i > 0 %>
                  <div class="space-y-0.5">
                    <div><%= agency["max_contract_count"] %></div>
                    <% if representation_percentile_int(agency["max_contract_count_percentile"]).present? %>
                      <div class="text-[10px] leading-none <%= representation_percentile_color_class(agency['max_contract_count_percentile']) %>">P<%= representation_percentile_int(agency["max_contract_count_percentile"]) %></div>
                    <% end %>
                  </div>
                <% else %>
                  <span class="text-muted-foreground">—</span>
                <% end %>
              </td>
              <td class="px-3 py-2 text-right font-mono tabular-nums"><%= agency["expiring_in_window"].to_i > 0 ? agency["expiring_in_window"] : content_tag(:span, "—", class: "text-muted-foreground") %></td>
              <td class="px-3 py-2 text-right font-mono tabular-nums"><%= restrictions_count > 0 ? restrictions_count : content_tag(:span, "—", class: "text-muted-foreground") %></td>
              <td class="px-3 py-2 text-right font-mono tabular-nums"><%= options_count > 0 ? options_count : content_tag(:span, "—", class: "text-muted-foreground") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
